<UserControl x:Class="MusicEngineEditor.Views.TranscriptionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800"
             Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Note name colors -->
        <SolidColorBrush x:Key="NoteNameBrush" Color="#BCBEC4"/>
        <SolidColorBrush x:Key="SharpNoteBrush" Color="#6F737A"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="12,8">
            <DockPanel>
                <!-- Left Section -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="Transcription"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource BrightForegroundBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>

                    <Separator Width="1" Background="{DynamicResource BorderBrush}" Margin="0,4,16,4"/>

                    <Button x:Name="AnalyzeButton"
                            Content="Analyze Audio"
                            Padding="12,6"
                            Margin="0,0,8,0"
                            Click="OnAnalyzeClick"/>

                    <ToggleButton x:Name="RealtimeButton"
                                  Content="Real-time"
                                  Padding="12,6"
                                  Margin="0,0,8,0"
                                  ToolTip="Enable real-time pitch detection"
                                  Click="OnRealtimeToggle"/>

                    <Button x:Name="ExportMidiButton"
                            Content="Export MIDI"
                            Padding="12,6"
                            ToolTip="Export detected notes as MIDI"
                            Click="OnExportMidiClick"/>
                </StackPanel>

                <!-- Center Section -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Quantize:"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ComboBox x:Name="QuantizeComboBox"
                              MinWidth="80"
                              SelectionChanged="OnQuantizeChanged">
                        <ComboBoxItem Content="Off" IsSelected="True"/>
                        <ComboBoxItem Content="1/4"/>
                        <ComboBoxItem Content="1/8"/>
                        <ComboBoxItem Content="1/16"/>
                        <ComboBoxItem Content="1/32"/>
                    </ComboBox>

                    <TextBlock Text="Clef:"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               VerticalAlignment="Center"
                               Margin="16,0,8,0"/>
                    <ComboBox x:Name="ClefComboBox"
                              MinWidth="100"
                              SelectionChanged="OnClefChanged">
                        <ComboBoxItem Content="Auto" IsSelected="True"/>
                        <ComboBoxItem Content="Treble"/>
                        <ComboBoxItem Content="Bass"/>
                        <ComboBoxItem Content="Grand Staff"/>
                    </ComboBox>
                </StackPanel>

                <!-- Right Section -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <TextBlock Text="BPM:"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBox x:Name="BpmTextBox"
                             Text="120"
                             Width="60"
                             Padding="8,6"
                             TextChanged="OnBpmChanged"/>

                    <CheckBox x:Name="ShowNoteNamesCheckBox"
                              Content="Note Names"
                              IsChecked="True"
                              VerticalAlignment="Center"
                              Margin="16,0,0,0"
                              Checked="OnShowNoteNamesChanged"
                              Unchecked="OnShowNoteNamesChanged"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <!-- Staff Labels -->
            <Border Grid.Column="0" Grid.Row="0"
                    Background="{DynamicResource PanelBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,1,0">
                <Canvas x:Name="StaffLabelsCanvas" ClipToBounds="True"/>
            </Border>

            <!-- Staff Notation Area -->
            <Border Grid.Column="1" Grid.Row="0"
                    Background="#1A1A1A"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0">
                <ScrollViewer x:Name="StaffScrollViewer"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">
                    <Canvas x:Name="StaffCanvas"
                            ClipToBounds="True"
                            MinWidth="800"
                            MinHeight="300"/>
                </ScrollViewer>
            </Border>

            <!-- Real-time Pitch Display -->
            <Border Grid.Column="0" Grid.Row="1"
                    Background="{DynamicResource PanelBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,1,0"
                    Padding="8">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Current"
                               FontSize="11"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="CurrentNoteText"
                               Text="--"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource AccentBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="CurrentFrequencyText"
                               Text="0 Hz"
                               FontSize="11"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="CurrentConfidenceText"
                               Text="Confidence: 0%"
                               FontSize="10"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Pitch History Graph -->
            <Border Grid.Column="1" Grid.Row="1"
                    Background="#151515"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0">
                <Grid>
                    <Canvas x:Name="PitchHistoryCanvas" ClipToBounds="True"/>

                    <!-- Legend -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="8">
                        <Border Background="#4A9EFF" Width="12" Height="12" CornerRadius="2" Margin="0,0,4,0"/>
                        <TextBlock Text="Pitch"
                                   FontSize="10"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="12,6">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock x:Name="StatusText"
                               Text="Ready"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <TextBlock Text="Notes: "
                               Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                    <TextBlock x:Name="NoteCountText"
                               Text="0"
                               Foreground="{DynamicResource ForegroundBrush}"
                               FontWeight="SemiBold"/>

                    <TextBlock Text=" | Duration: "
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               Margin="16,0,0,0"/>
                    <TextBlock x:Name="DurationText"
                               Text="0:00"
                               Foreground="{DynamicResource ForegroundBrush}"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <Border/>
            </DockPanel>
        </Border>

        <!-- Analyzing Overlay -->
        <Border x:Name="AnalyzingOverlay"
                Grid.Row="0" Grid.RowSpan="3"
                Background="#C0000000"
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar x:Name="AnalysisProgressBar"
                             Width="300"
                             Height="8"
                             IsIndeterminate="True"/>
                <TextBlock Text="Analyzing audio..."
                           FontSize="16"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
                <Button Content="Cancel"
                        Padding="16,8"
                        Margin="0,16,0,0"
                        Click="OnCancelAnalysisClick"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
