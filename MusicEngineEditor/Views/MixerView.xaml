<UserControl x:Class="MusicEngineEditor.Views.MixerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:MusicEngineEditor.Controls"
             xmlns:vm="clr-namespace:MusicEngineEditor.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:MixerViewModel}"
             Background="#1E1F22">

    <UserControl.Resources>
        <!-- Colors -->
        <Color x:Key="MixerBackgroundColor">#1E1F22</Color>
        <Color x:Key="ToolbarBackgroundColor">#2B2D30</Color>
        <Color x:Key="BorderColor">#393B40</Color>
        <Color x:Key="TextPrimaryColor">#BCBEC4</Color>
        <Color x:Key="TextSecondaryColor">#6F737A</Color>
        <Color x:Key="ButtonHoverColor">#3C3F41</Color>
        <Color x:Key="ButtonPressedColor">#4B6EAF</Color>
        <Color x:Key="MasterChannelColor">#2D2F33</Color>
        <Color x:Key="SeparatorColor">#43454A</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="MixerBackgroundBrush" Color="{StaticResource MixerBackgroundColor}"/>
        <SolidColorBrush x:Key="MixerToolbarBackgroundBrush" Color="{StaticResource ToolbarBackgroundColor}"/>
        <SolidColorBrush x:Key="MixerBorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="MixerTextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="MixerTextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="MasterChannelBackgroundBrush" Color="{StaticResource MasterChannelColor}"/>
        <SolidColorBrush x:Key="SeparatorBrush" Color="{StaticResource SeparatorColor}"/>

        <!-- Mixer Toolbar Button Style -->
        <Style x:Key="MixerToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource MixerTextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource MixerBorderBrush}"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource ButtonHoverColor}"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource ButtonPressedColor}"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource MixerTextSecondaryBrush}"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Accent Button Style (for Add Channel) -->
        <Style x:Key="MixerAccentButtonStyle" TargetType="Button" BasedOn="{StaticResource MixerToolbarButtonStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#4B6EAF"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <Border.Effect>
                                <DropShadowEffect x:Name="shadowEffect"
                                                  Color="#4B6EAF"
                                                  BlurRadius="0"
                                                  ShadowDepth="0"
                                                  Opacity="0"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                                             Storyboard.TargetProperty="BlurRadius"
                                                             To="6" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.4" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                                             Storyboard.TargetProperty="BlurRadius"
                                                             To="0" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#5A7FC4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#3D5A91"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#3D4550"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="#6F737A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger Button Style (for Remove Channel) -->
        <Style x:Key="MixerDangerButtonStyle" TargetType="Button" BasedOn="{StaticResource MixerToolbarButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="Transparent"
                                BorderBrush="{StaticResource MixerBorderBrush}"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#5C3535"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="BorderBrush">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#D32F2F"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#F75464"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#D32F2F"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource MixerTextSecondaryBrush}"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Toolbar -->
        <Border Grid.Row="0"
                Background="{StaticResource MixerToolbarBackgroundBrush}"
                BorderBrush="{StaticResource MixerBorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <DockPanel>
                <!-- Left-aligned buttons -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <Button Content="+ Add Channel"
                            Style="{StaticResource MixerAccentButtonStyle}"
                            Command="{Binding AddChannelCommand}"
                            ToolTip="Add a new mixer channel"/>

                    <Button Content="Remove Channel"
                            Style="{StaticResource MixerDangerButtonStyle}"
                            Command="{Binding RemoveChannelCommand}"
                            ToolTip="Remove selected channel"/>

                    <Rectangle Width="1"
                               Fill="{StaticResource SeparatorBrush}"
                               Margin="12,4"/>

                    <Button Content="Clear Solo"
                            Style="{StaticResource MixerToolbarButtonStyle}"
                            Command="{Binding ClearSoloCommand}"
                            ToolTip="Clear all solo states"/>

                    <Button Content="Reset All"
                            Style="{StaticResource MixerToolbarButtonStyle}"
                            Command="{Binding ResetAllCommand}"
                            ToolTip="Reset all channels to default"/>
                </StackPanel>

                <!-- Right-aligned info (optional) -->
                <TextBlock DockPanel.Dock="Right"
                           Text="{Binding ChannelCount, StringFormat='{}{0} Channels', FallbackValue='0 Channels'}"
                           Foreground="{StaticResource MixerTextSecondaryBrush}"
                           FontSize="11"
                           VerticalAlignment="Center"
                           Margin="8,0"/>

                <!-- Spacer -->
                <Border/>
            </DockPanel>
        </Border>

        <!-- Mixer Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Channel Strips (Scrollable) -->
            <ScrollViewer Grid.Column="0"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled"
                          PanningMode="HorizontalOnly">
                <ItemsControl ItemsSource="{Binding Channels}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"
                                        Margin="8"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:MixerChannelControl DataContext="{Binding}"
                                                          Margin="2,0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Separator between channels and master -->
            <Rectangle Grid.Column="1"
                       Width="2"
                       Fill="{StaticResource SeparatorBrush}"
                       Margin="4,8"/>

            <!-- Master Channel (Always Visible) -->
            <Border Grid.Column="2"
                    Background="{StaticResource MasterChannelBackgroundBrush}"
                    BorderBrush="{StaticResource MixerBorderBrush}"
                    BorderThickness="1,0,0,0"
                    Padding="8"
                    MinWidth="100">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <controls:MixerChannelControl Grid.Row="0"
                                                  DataContext="{Binding MasterChannel}"
                                                  MinWidth="90"
                                                  MaxWidth="110"/>

                    <!-- PDC Display in Master Section -->
                    <controls:PdcDisplayControl x:Name="PdcDisplay"
                                                Grid.Row="1"
                                                Margin="0,8,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
