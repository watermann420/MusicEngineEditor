<UserControl x:Class="MusicEngineEditor.Views.SpectralEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MusicEngineEditor.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=vm:SpectralEditorViewModel}"
             Background="#0D0D0D">

    <UserControl.Resources>
        <!-- Theme Colors -->
        <Color x:Key="BackgroundColor">#0D0D0D</Color>
        <Color x:Key="PanelColor">#181818</Color>
        <Color x:Key="AccentColor">#00D9FF</Color>
        <Color x:Key="SecondaryColor">#666666</Color>
        <Color x:Key="BorderColor">#2A2A2A</Color>
        <Color x:Key="ForegroundColor">#E0E0E0</Color>
        <Color x:Key="BrightForegroundColor">#FFFFFF</Color>
        <Color x:Key="SelectionColor">#4000D9FF</Color>
        <Color x:Key="HoverColor">#252525</Color>
        <Color x:Key="PressedColor">#00D9FF</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>
        <SolidColorBrush x:Key="BrightForegroundBrush" Color="{StaticResource BrightForegroundColor}"/>
        <SolidColorBrush x:Key="SelectionBrush" Color="{StaticResource SelectionColor}"/>

        <!-- Tool Button Style -->
        <Style x:Key="ToolButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="MinWidth" Value="32"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="#0D0D0D"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Tool Button Style -->
        <Style x:Key="ToggleToolButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="MinWidth" Value="32"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="#0D0D0D"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Separator Style -->
        <Style x:Key="ToolbarSeparatorStyle" TargetType="Rectangle">
            <Setter Property="Width" Value="1"/>
            <Setter Property="Fill" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Margin" Value="8,4"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
        </Style>

        <!-- Value Label Style -->
        <Style x:Key="ValueLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="40"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Main Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- Secondary Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- Main Content -->
            <RowDefinition Height="*"/>
            <!-- Status Bar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Toolbar -->
        <Border Grid.Row="0"
                Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <DockPanel>
                <!-- Left: File Info and Tools -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <!-- File Name -->
                    <TextBlock Text="{Binding AudioFileName}"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource BrightForegroundBrush}"
                               VerticalAlignment="Center"
                               MaxWidth="200"
                               TextTrimming="CharacterEllipsis"/>

                    <Rectangle Style="{StaticResource ToolbarSeparatorStyle}"/>

                    <!-- Selection Tools -->
                    <TextBlock Text="Tools:" Style="{StaticResource LabelStyle}"/>

                    <ToggleButton Style="{StaticResource ToggleToolButtonStyle}"
                                  Content="Rect"
                                  ToolTip="Rectangle Selection (R)"
                                  IsChecked="{Binding SelectedTool, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=Rectangle}"
                                  Command="{Binding SelectRectangleToolCommand}"/>

                    <ToggleButton Style="{StaticResource ToggleToolButtonStyle}"
                                  Content="Lasso"
                                  ToolTip="Lasso Selection (L)"
                                  IsChecked="{Binding SelectedTool, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=Lasso}"
                                  Command="{Binding SelectLassoToolCommand}"
                                  Margin="2,0,0,0"/>

                    <ToggleButton Style="{StaticResource ToggleToolButtonStyle}"
                                  Content="Wand"
                                  ToolTip="Magic Wand Selection (W)"
                                  IsChecked="{Binding SelectedTool, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=MagicWand}"
                                  Command="{Binding SelectMagicWandToolCommand}"
                                  Margin="2,0,0,0"/>

                    <ToggleButton Style="{StaticResource ToggleToolButtonStyle}"
                                  Content="Brush"
                                  ToolTip="Paintbrush Tool (B)"
                                  IsChecked="{Binding SelectedTool, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=Paintbrush}"
                                  Command="{Binding SelectPaintbrushToolCommand}"
                                  Margin="2,0,0,0"/>

                    <Rectangle Style="{StaticResource ToolbarSeparatorStyle}"/>

                    <!-- Edit Operations -->
                    <Button Style="{StaticResource ToolButtonStyle}"
                            Content="Cut"
                            ToolTip="Cut Selection (Ctrl+X)"
                            Command="{Binding CutCommand}"/>

                    <Button Style="{StaticResource ToolButtonStyle}"
                            Content="Copy"
                            ToolTip="Copy Selection (Ctrl+C)"
                            Command="{Binding CopyCommand}"
                            Margin="2,0,0,0"/>

                    <Button Style="{StaticResource ToolButtonStyle}"
                            Content="Paste"
                            ToolTip="Paste (Ctrl+V)"
                            Command="{Binding PasteCommand}"
                            Margin="2,0,0,0"/>

                    <Rectangle Style="{StaticResource ToolbarSeparatorStyle}"/>

                    <!-- Undo/Redo -->
                    <Button Style="{StaticResource ToolButtonStyle}"
                            Content="Undo"
                            ToolTip="Undo (Ctrl+Z)"
                            Command="{Binding UndoCommand}"/>

                    <Button Style="{StaticResource ToolButtonStyle}"
                            Content="Redo"
                            ToolTip="Redo (Ctrl+Y)"
                            Command="{Binding RedoCommand}"
                            Margin="2,0,0,0"/>
                </StackPanel>

                <!-- Right: Zoom Controls -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="8,0,0,0">
                    <TextBlock Text="Zoom:" Style="{StaticResource LabelStyle}"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="X" Style="{StaticResource LabelStyle}" Margin="0,0,2,0"/>
                        <Button Style="{StaticResource ToolButtonStyle}" Content="-" Command="{Binding ZoomOutXCommand}" Width="24"/>
                        <TextBlock Text="{Binding ZoomLevelX, StringFormat={}{0:F1}x}" Style="{StaticResource ValueLabelStyle}" Margin="4,0"/>
                        <Button Style="{StaticResource ToolButtonStyle}" Content="+" Command="{Binding ZoomInXCommand}" Width="24"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="8,0,0,0">
                        <TextBlock Text="Y" Style="{StaticResource LabelStyle}" Margin="0,0,2,0"/>
                        <Button Style="{StaticResource ToolButtonStyle}" Content="-" Command="{Binding ZoomOutYCommand}" Width="24"/>
                        <TextBlock Text="{Binding ZoomLevelY, StringFormat={}{0:F1}x}" Style="{StaticResource ValueLabelStyle}" Margin="4,0"/>
                        <Button Style="{StaticResource ToolButtonStyle}" Content="+" Command="{Binding ZoomInYCommand}" Width="24"/>
                    </StackPanel>

                    <Button Style="{StaticResource ToolButtonStyle}"
                            Content="Fit"
                            ToolTip="Zoom to Fit"
                            Command="{Binding ZoomToFitCommand}"
                            Margin="8,0,0,0"/>

                    <Button Style="{StaticResource ToolButtonStyle}"
                            Content="Reset"
                            ToolTip="Reset Zoom"
                            Command="{Binding ResetZoomCommand}"
                            Margin="2,0,0,0"/>
                </StackPanel>

                <!-- Spacer -->
                <Border/>
            </DockPanel>
        </Border>

        <!-- Secondary Toolbar: Operations and Settings -->
        <Border Grid.Row="1"
                Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,4">
            <DockPanel>
                <!-- Left: Processing Operations -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="Operations:" Style="{StaticResource LabelStyle}"/>

                    <Button Style="{StaticResource ToolButtonStyle}"
                            Content="Attenuate"
                            ToolTip="Reduce volume of selection"
                            Command="{Binding AttenuateCommand}"/>

                    <TextBlock Text="{Binding AttenuateAmount, StringFormat={}{0:F0} dB}"
                               Style="{StaticResource ValueLabelStyle}"
                               Margin="4,0"/>

                    <Button Style="{StaticResource ToolButtonStyle}"
                            Content="Boost"
                            ToolTip="Increase volume of selection"
                            Command="{Binding BoostCommand}"
                            Margin="4,0,0,0"/>

                    <TextBlock Text="{Binding BoostAmount, StringFormat=+{0:F0} dB}"
                               Style="{StaticResource ValueLabelStyle}"
                               Margin="4,0"/>

                    <Rectangle Style="{StaticResource ToolbarSeparatorStyle}"/>

                    <Button Style="{StaticResource ToolButtonStyle}"
                            Content="Erase"
                            ToolTip="Erase selection (silence)"
                            Command="{Binding EraseCommand}"/>

                    <Button Style="{StaticResource ToolButtonStyle}"
                            Content="Noise Reduce"
                            ToolTip="Apply noise reduction"
                            Command="{Binding NoiseReduceCommand}"
                            Margin="4,0,0,0"/>

                    <Button Style="{StaticResource ToolButtonStyle}"
                            Content="Harmonics"
                            ToolTip="Enhance harmonics"
                            Command="{Binding HarmonicEnhanceCommand}"
                            Margin="4,0,0,0"/>

                    <Rectangle Style="{StaticResource ToolbarSeparatorStyle}"/>

                    <Button Style="{StaticResource ToolButtonStyle}"
                            Content="Fade In"
                            ToolTip="Apply fade in"
                            Command="{Binding FadeInCommand}"/>

                    <Button Style="{StaticResource ToolButtonStyle}"
                            Content="Fade Out"
                            ToolTip="Apply fade out"
                            Command="{Binding FadeOutCommand}"
                            Margin="4,0,0,0"/>
                </StackPanel>

                <!-- Right: Display Settings -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <TextBlock Text="Color Map:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Style="{StaticResource DarkComboBoxStyle}"
                              ItemsSource="{Binding AvailableColorMaps}"
                              SelectedIndex="{Binding ColorMapIndex}"
                              MinWidth="90"/>

                    <Rectangle Style="{StaticResource ToolbarSeparatorStyle}"/>

                    <TextBlock Text="FFT Size:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Style="{StaticResource DarkComboBoxStyle}"
                              ItemsSource="{Binding AvailableFftSizes}"
                              SelectedItem="{Binding FftSize}"
                              MinWidth="70"/>

                    <Button Style="{StaticResource ToolButtonStyle}"
                            Content="Reanalyze"
                            ToolTip="Re-analyze with new settings"
                            Command="{Binding ReanalyzeCommand}"
                            Margin="8,0,0,0"/>
                </StackPanel>

                <!-- Spacer -->
                <Border/>
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- Spectrogram Area -->
                <ColumnDefinition Width="*"/>
                <!-- Splitter -->
                <ColumnDefinition Width="Auto"/>
                <!-- Properties Panel -->
                <ColumnDefinition Width="240" MinWidth="180" MaxWidth="320"/>
            </Grid.ColumnDefinitions>

            <!-- Spectrogram Display Area -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <!-- Time Ruler -->
                    <RowDefinition Height="24"/>
                    <!-- Main Spectrogram -->
                    <RowDefinition Height="*"/>
                    <!-- Horizontal Scrollbar -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <!-- Frequency Axis -->
                    <ColumnDefinition Width="60"/>
                    <!-- Spectrogram -->
                    <ColumnDefinition Width="*"/>
                    <!-- Vertical Scrollbar -->
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Time Ruler -->
                <Border Grid.Row="0" Grid.Column="1"
                        Background="#1A1A1A"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <Canvas x:Name="TimeRulerCanvas" ClipToBounds="True"/>
                </Border>

                <!-- Corner (empty) -->
                <Border Grid.Row="0" Grid.Column="0"
                        Background="#1A1A1A"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,1,1"/>

                <!-- Frequency Axis -->
                <Border Grid.Row="1" Grid.Column="0"
                        Background="#1A1A1A"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,1,0">
                    <Canvas x:Name="FrequencyAxisCanvas" ClipToBounds="True"/>
                </Border>

                <!-- Spectrogram Canvas -->
                <Border Grid.Row="1" Grid.Column="1"
                        Background="{StaticResource BackgroundBrush}"
                        ClipToBounds="True">
                    <Grid>
                        <!-- Spectrogram Image -->
                        <Image x:Name="SpectrogramImage"
                               Stretch="Fill"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"/>

                        <!-- Selection Overlay -->
                        <Canvas x:Name="SelectionCanvas"
                                ClipToBounds="True"
                                MouseLeftButtonDown="SelectionCanvas_MouseLeftButtonDown"
                                MouseMove="SelectionCanvas_MouseMove"
                                MouseLeftButtonUp="SelectionCanvas_MouseLeftButtonUp"
                                MouseWheel="SelectionCanvas_MouseWheel">
                            <!-- Selection Rectangle -->
                            <Rectangle x:Name="SelectionRect"
                                       Fill="{StaticResource SelectionBrush}"
                                       Stroke="{StaticResource AccentBrush}"
                                       StrokeThickness="1"
                                       StrokeDashArray="4,2"
                                       Visibility="Collapsed"/>

                            <!-- Lasso Path -->
                            <Path x:Name="LassoPath"
                                  Stroke="{StaticResource AccentBrush}"
                                  StrokeThickness="1.5"
                                  StrokeDashArray="4,2"
                                  Fill="{StaticResource SelectionBrush}"
                                  Visibility="Collapsed"/>

                            <!-- Playhead -->
                            <Line x:Name="PlayheadLine"
                                  Y1="0"
                                  Stroke="#FFFFFF"
                                  StrokeThickness="1"
                                  Visibility="Collapsed"/>

                            <!-- Paintbrush Cursor -->
                            <Ellipse x:Name="PaintbrushCursor"
                                     Stroke="{StaticResource AccentBrush}"
                                     StrokeThickness="1"
                                     Fill="Transparent"
                                     Visibility="Collapsed"/>
                        </Canvas>
                    </Grid>
                </Border>

                <!-- Vertical Scrollbar -->
                <ScrollBar Grid.Row="1" Grid.Column="2"
                           x:Name="VerticalScrollBar"
                           Orientation="Vertical"
                           Minimum="0"
                           Maximum="100"
                           Value="{Binding ScrollOffsetY}"
                           ViewportSize="20"
                           SmallChange="1"
                           LargeChange="10"/>

                <!-- Horizontal Scrollbar -->
                <ScrollBar Grid.Row="2" Grid.Column="1"
                           x:Name="HorizontalScrollBar"
                           Orientation="Horizontal"
                           Minimum="0"
                           Maximum="100"
                           Value="{Binding ScrollOffsetX}"
                           ViewportSize="20"
                           SmallChange="1"
                           LargeChange="10"/>

                <!-- Corner (scrollbar intersection) -->
                <Border Grid.Row="2" Grid.Column="0"
                        Background="{StaticResource PanelBrush}"/>
                <Border Grid.Row="2" Grid.Column="2"
                        Background="{StaticResource PanelBrush}"/>
                <Border Grid.Row="0" Grid.Column="2"
                        Background="{StaticResource PanelBrush}"/>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                          Width="4"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="{StaticResource BorderBrush}"
                          ShowsPreview="True"/>

            <!-- Properties Panel -->
            <Border Grid.Column="2"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Header -->
                        <RowDefinition Height="Auto"/>
                        <!-- Content -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Panel Header -->
                    <Border Grid.Row="0"
                            Background="#1F1F1F"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="12,8">
                        <TextBlock Text="Properties"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource BrightForegroundBrush}"/>
                    </Border>

                    <!-- Panel Content -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="12,8">
                            <!-- Selection Info -->
                            <TextBlock Text="SELECTION"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource AccentBrush}"
                                       Margin="0,0,0,8"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Start Time:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectionStartTime, StringFormat={}{0:F3}s}" Style="{StaticResource ValueLabelStyle}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="End Time:" Style="{StaticResource LabelStyle}" Margin="0,4,6,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectionEndTime, StringFormat={}{0:F3}s}" Style="{StaticResource ValueLabelStyle}" Margin="0,4,0,0"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Min Freq:" Style="{StaticResource LabelStyle}" Margin="0,4,6,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectionMinFrequency, StringFormat={}{0:F0} Hz}" Style="{StaticResource ValueLabelStyle}" Margin="0,4,0,0"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Max Freq:" Style="{StaticResource LabelStyle}" Margin="0,4,6,0"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectionMaxFrequency, StringFormat={}{0:F0} Hz}" Style="{StaticResource ValueLabelStyle}" Margin="0,4,0,0"/>
                            </Grid>

                            <Button Style="{StaticResource ToolButtonStyle}"
                                    Content="Clear Selection"
                                    Command="{Binding ClearSelectionCommand}"
                                    HorizontalAlignment="Left"
                                    Margin="0,8,0,0"/>

                            <Button Style="{StaticResource ToolButtonStyle}"
                                    Content="Select All"
                                    Command="{Binding SelectAllCommand}"
                                    HorizontalAlignment="Left"
                                    Margin="0,4,0,0"/>

                            <Rectangle Height="1" Fill="{StaticResource BorderBrush}" Margin="0,12"/>

                            <!-- Tool Settings -->
                            <TextBlock Text="TOOL SETTINGS"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource AccentBrush}"
                                       Margin="0,0,0,8"/>

                            <!-- Paintbrush Settings -->
                            <StackPanel Visibility="{Binding SelectedTool, Converter={StaticResource EnumVisibilityConverter}, ConverterParameter=Paintbrush}">
                                <TextBlock Text="Brush Size:" Style="{StaticResource LabelStyle}"/>
                                <Slider Minimum="10" Maximum="500"
                                        Value="{Binding PaintbrushSize}"
                                                                                Margin="0,4,0,0"/>
                                <TextBlock Text="{Binding PaintbrushSize, StringFormat={}{0:F0} Hz}" Style="{StaticResource ValueLabelStyle}"/>

                                <TextBlock Text="Intensity:" Style="{StaticResource LabelStyle}" Margin="0,8,0,0"/>
                                <Slider Minimum="-1" Maximum="1"
                                        Value="{Binding PaintbrushIntensity}"
                                                                                Margin="0,4,0,0"/>
                                <TextBlock Text="{Binding PaintbrushIntensity, StringFormat={}{0:F2}}" Style="{StaticResource ValueLabelStyle}"/>
                            </StackPanel>

                            <!-- Magic Wand Settings -->
                            <StackPanel Visibility="{Binding SelectedTool, Converter={StaticResource EnumVisibilityConverter}, ConverterParameter=MagicWand}">
                                <TextBlock Text="Threshold:" Style="{StaticResource LabelStyle}"/>
                                <Slider Minimum="0.1" Maximum="1"
                                        Value="{Binding MagicWandThreshold}"
                                                                                Margin="0,4,0,0"/>
                                <TextBlock Text="{Binding MagicWandThreshold, StringFormat={}{0:F2}}" Style="{StaticResource ValueLabelStyle}"/>
                            </StackPanel>

                            <Rectangle Height="1" Fill="{StaticResource BorderBrush}" Margin="0,12"/>

                            <!-- Gain Settings -->
                            <TextBlock Text="GAIN SETTINGS"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource AccentBrush}"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="Boost Amount:" Style="{StaticResource LabelStyle}"/>
                            <Slider Minimum="1" Maximum="24"
                                    Value="{Binding BoostAmount}"
                                                                        Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding BoostAmount, StringFormat=+{0:F0} dB}" Style="{StaticResource ValueLabelStyle}"/>

                            <TextBlock Text="Attenuate Amount:" Style="{StaticResource LabelStyle}" Margin="0,8,0,0"/>
                            <Slider Minimum="-24" Maximum="-1"
                                    Value="{Binding AttenuateAmount}"
                                                                        Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding AttenuateAmount, StringFormat={}{0:F0} dB}" Style="{StaticResource ValueLabelStyle}"/>

                            <Rectangle Height="1" Fill="{StaticResource BorderBrush}" Margin="0,12"/>

                            <!-- Display Settings -->
                            <TextBlock Text="DISPLAY SETTINGS"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource AccentBrush}"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="Min dB:" Style="{StaticResource LabelStyle}"/>
                            <Slider Minimum="-120" Maximum="-20"
                                    Value="{Binding SpectrogramMinDb}"
                                                                        Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding SpectrogramMinDb, StringFormat={}{0:F0} dB}" Style="{StaticResource ValueLabelStyle}"/>

                            <TextBlock Text="Max dB:" Style="{StaticResource LabelStyle}" Margin="0,8,0,0"/>
                            <Slider Minimum="-20" Maximum="12"
                                    Value="{Binding SpectrogramMaxDb}"
                                                                        Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding SpectrogramMaxDb, StringFormat={}{0:F0} dB}" Style="{StaticResource ValueLabelStyle}"/>

                            <Rectangle Height="1" Fill="{StaticResource BorderBrush}" Margin="0,12"/>

                            <!-- Undo History -->
                            <TextBlock Text="UNDO HISTORY"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource AccentBrush}"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="{Binding UndoCount, StringFormat={}{0} operations}"
                                       Style="{StaticResource ValueLabelStyle}"/>

                            <ListBox ItemsSource="{Binding UndoHistory}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="{StaticResource ForegroundBrush}"
                                     MaxHeight="120"
                                     Margin="0,4,0,0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" FontSize="10" Foreground="{StaticResource SecondaryBrush}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Button Style="{StaticResource ToolButtonStyle}"
                                    Content="Clear History"
                                    Command="{Binding ClearHistoryCommand}"
                                    HorizontalAlignment="Left"
                                    Margin="0,8,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3"
                Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="12,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Message -->
                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           FontSize="11"
                           Foreground="{StaticResource SecondaryBrush}"
                           VerticalAlignment="Center"/>

                <!-- Duration -->
                <TextBlock Grid.Column="1"
                           Text="{Binding Duration, StringFormat=Duration: {0:F2}s}"
                           FontSize="11"
                           Foreground="{StaticResource ForegroundBrush}"
                           VerticalAlignment="Center"
                           Margin="16,0"/>

                <!-- Frame Count -->
                <TextBlock Grid.Column="2"
                           Text="{Binding FrameCount, StringFormat=Frames: {0}}"
                           FontSize="11"
                           Foreground="{StaticResource ForegroundBrush}"
                           VerticalAlignment="Center"
                           Margin="16,0"/>

                <!-- Playhead Position -->
                <TextBlock Grid.Column="3"
                           Text="{Binding PlayheadPosition, StringFormat=Playhead: {0:F3}s}"
                           FontSize="11"
                           Foreground="{StaticResource ForegroundBrush}"
                           VerticalAlignment="Center"
                           Margin="16,0"/>

                <!-- Processing Indicator -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="8" Height="8"
                             Margin="0,0,6,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="{StaticResource SecondaryBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                        <Setter Property="Fill" Value="{StaticResource AccentBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock FontSize="11" Foreground="{StaticResource SecondaryBrush}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Ready"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                        <Setter Property="Text" Value="Processing..."/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
