<UserControl x:Class="MusicEngineEditor.Views.PerformanceModeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Views"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="#0D0D0D">

    <UserControl.InputBindings>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding AddSceneCommand}"/>
        <KeyBinding Key="Delete" Command="{Binding DeleteSceneCommand}"/>
        <KeyBinding Key="E" Modifiers="Ctrl" Command="{Binding ToggleEditModeCommand}"/>
        <KeyBinding Key="L" Modifiers="Ctrl" Command="{Binding ToggleMidiLearnCommand}"/>
        <KeyBinding Key="Up" Command="{Binding PreviousSceneCommand}"/>
        <KeyBinding Key="Down" Command="{Binding NextSceneCommand}"/>
        <KeyBinding Key="Space" Command="{Binding TriggerSelectedSceneCommand}"/>
    </UserControl.InputBindings>

    <UserControl.Resources>
        <!-- Colors -->
        <Color x:Key="BackgroundColor">#0D0D0D</Color>
        <Color x:Key="PanelColor">#181818</Color>
        <Color x:Key="BorderColor">#2A2A2A</Color>
        <Color x:Key="AccentColor">#00D9FF</Color>
        <Color x:Key="SuccessColor">#00FF88</Color>
        <Color x:Key="ErrorColor">#FF4757</Color>
        <Color x:Key="WarningColor">#FFB800</Color>
        <Color x:Key="TextPrimaryColor">#E0E0E0</Color>
        <Color x:Key="TextSecondaryColor">#808080</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
        <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>

        <!-- Converters -->
        <local:PerformanceModeColorToBrushConverter x:Key="PerformanceModeColorToBrushConverter"/>
        <local:PerformanceModeTriggerTypeConverter x:Key="PerformanceModeTriggerTypeConverter"/>
        <local:PerformanceModeTransitionModeConverter x:Key="PerformanceModeTransitionModeConverter"/>
        <local:PerformanceModeBoolToVisibilityConverter x:Key="PerformanceModeBoolToVisibilityConverter"/>
        <local:PerformanceModeInverseBoolConverter x:Key="PerformanceModeInverseBoolConverter"/>
        <local:PerformanceModeMidiNoteNameConverter x:Key="PerformanceModeMidiNoteNameConverter"/>

        <!-- Toolbar Button Style -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#252525"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Accent Button Style -->
        <Style x:Key="AccentButtonStyle" TargetType="Button" BasedOn="{StaticResource ToolbarButtonStyle}">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#33E5FF"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#00B8D9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Button Style -->
        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#252525"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Scene List Item Style -->
        <Style x:Key="SceneListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#252525"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#1F1F1F"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Slider Style -->
        <Style x:Key="CrossfadeSliderStyle" TargetType="Slider">
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Background="#101010"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Height="8"
                                    VerticalAlignment="Center"/>
                            <Border x:Name="TrackFill"
                                    Background="{StaticResource AccentBrush}"
                                    CornerRadius="4"
                                    Height="8"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Width="{TemplateBinding Value}"
                                    Opacity="0.7"/>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Width="16" Height="16"
                                                         Fill="{StaticResource AccentBrush}"
                                                         Stroke="#101010"
                                                         StrokeThickness="2"
                                                         Cursor="Hand"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="DarkTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#101010"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CaretBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="SelectionBrush" Value="{StaticResource AccentBrush}"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#101010"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Toolbar -->
        <Border Grid.Row="0"
                Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <DockPanel>
                <!-- Left Section: Scene Management -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <Button Style="{StaticResource AccentButtonStyle}"
                            Content="+ Add Scene"
                            Command="{Binding AddSceneCommand}"
                            ToolTip="Add New Scene (Ctrl+N)"/>

                    <Button Style="{StaticResource ToolbarButtonStyle}"
                            Content="Duplicate"
                            Command="{Binding DuplicateSceneCommand}"
                            ToolTip="Duplicate Selected Scene"/>

                    <Button Style="{StaticResource ToolbarButtonStyle}"
                            Content="Delete"
                            Foreground="{StaticResource ErrorBrush}"
                            Command="{Binding DeleteSceneCommand}"
                            ToolTip="Delete Selected Scene (Delete)"/>

                    <Rectangle Width="1"
                               Fill="{StaticResource BorderBrush}"
                               Margin="12,4"/>

                    <!-- Edit Mode Toggle -->
                    <ToggleButton Style="{StaticResource ToggleButtonStyle}"
                                  Content="Edit Mode"
                                  IsChecked="{Binding IsEditMode}"
                                  ToolTip="Toggle Edit Mode (Ctrl+E)"/>

                    <!-- MIDI Learn Toggle -->
                    <ToggleButton Style="{StaticResource ToggleButtonStyle}"
                                  Content="MIDI Learn"
                                  IsChecked="{Binding IsMidiLearnMode}"
                                  ToolTip="Toggle MIDI Learn Mode (Ctrl+L)"/>
                </StackPanel>

                <!-- Right Section: Crossfade Status -->
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right"
                            HorizontalAlignment="Right">
                    <!-- Crossfade Indicator -->
                    <Border CornerRadius="4"
                            Padding="8,4"
                            Margin="4,0"
                            Visibility="{Binding IsCrossfading, Converter={StaticResource PerformanceModeBoolToVisibilityConverter}}">
                        <Border.Background>
                            <SolidColorBrush Color="#203020"/>
                        </Border.Background>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8"
                                     Fill="{StaticResource SuccessBrush}"
                                     VerticalAlignment="Center"
                                     Margin="0,0,6,0"/>
                            <TextBlock Text="Crossfading..."
                                       Foreground="{StaticResource SuccessBrush}"
                                       FontSize="11"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Scene Count -->
                    <TextBlock Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               FontSize="11"
                               Margin="8,0">
                        <Run Text="{Binding SceneCount, Mode=OneWay}"/>
                        <Run Text=" Scenes"/>
                    </TextBlock>
                </StackPanel>

                <Border/>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" MinWidth="250"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Scene List -->
            <Border Grid.Column="0"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Scene List Header -->
                    <Border Grid.Row="0"
                            Background="#151515"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="12,8">
                        <TextBlock Text="SCENES"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="11"
                                   FontWeight="SemiBold"/>
                    </Border>

                    <!-- Scene List -->
                    <ListBox Grid.Row="1"
                             x:Name="SceneListBox"
                             ItemsSource="{Binding Scenes}"
                             SelectedItem="{Binding SelectedScene}"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="8"
                             ItemContainerStyle="{StaticResource SceneListItemStyle}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="SceneBorder"
                                        Background="{StaticResource PanelBrush}"
                                        BorderThickness="3,0,0,0"
                                        BorderBrush="{Binding Color, Converter={StaticResource PerformanceModeColorToBrushConverter}}"
                                        CornerRadius="4"
                                        Padding="12,10"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="Scene_MouseLeftButtonDown"
                                        MouseLeftButtonUp="Scene_MouseLeftButtonUp">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Scene Info -->
                                        <StackPanel Grid.Column="0">
                                            <!-- Scene Name -->
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       TextTrimming="CharacterEllipsis"/>

                                            <!-- Trigger Info -->
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding Triggers.Count, StringFormat={}{0} trigger(s)}"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           FontSize="11"/>
                                                <TextBlock Text=" | "
                                                           Foreground="#404040"
                                                           FontSize="11"/>
                                                <TextBlock Text="{Binding TransitionTimeMs, StringFormat={}{0}ms}"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           FontSize="11"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Active Indicator -->
                                        <Border Grid.Column="1"
                                                VerticalAlignment="Center"
                                                Visibility="{Binding IsActive, Converter={StaticResource PerformanceModeBoolToVisibilityConverter}}">
                                            <Ellipse Width="12" Height="12"
                                                     Fill="{StaticResource SuccessBrush}">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect Color="#00FF88"
                                                                      BlurRadius="10"
                                                                      ShadowDepth="0"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                        </Border>
                                    </Grid>
                                </Border>

                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                        <Setter TargetName="SceneBorder" Property="Background">
                                            <Setter.Value>
                                                <SolidColorBrush Color="#1A2A1A"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                          Width="4"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="{StaticResource BorderBrush}"
                          Cursor="SizeWE"/>

            <!-- Right Panel: Scene Details / Crossfade Control -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Crossfade Control -->
                <Border Grid.Row="0"
                        Background="{StaticResource PanelBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="16,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Crossfade Header -->
                        <TextBlock Grid.Row="0"
                                   Text="CROSSFADE CONTROL"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                                                      Margin="0,0,0,12"/>

                        <!-- Crossfade Slider -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- From Scene Label -->
                            <TextBlock Grid.Column="0"
                                       Text="{Binding CrossfadeFromSceneName, FallbackValue='Scene A'}"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       MinWidth="80"
                                       TextTrimming="CharacterEllipsis"/>

                            <!-- Crossfade Slider -->
                            <Slider Grid.Column="1"
                                    Style="{StaticResource CrossfadeSliderStyle}"
                                    Value="{Binding CrossfadePosition}"
                                    Margin="16,0"
                                    IsEnabled="{Binding HasMultipleScenes}"/>

                            <!-- To Scene Label -->
                            <TextBlock Grid.Column="2"
                                       Text="{Binding CrossfadeToSceneName, FallbackValue='Scene B'}"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       MinWidth="80"
                                       TextAlignment="Right"
                                       TextTrimming="CharacterEllipsis"/>
                        </Grid>

                        <!-- Crossfade Progress -->
                        <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,8,0,0">
                            <TextBlock Text="{Binding CrossfadeProgress, StringFormat={}{0:P0}}"
                                       Foreground="{StaticResource AccentBrush}"
                                       FontSize="14"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Scene Details Panel -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <Border Padding="16">
                        <StackPanel Visibility="{Binding HasSelectedScene, Converter={StaticResource PerformanceModeBoolToVisibilityConverter}}">
                            <!-- Scene Name Section -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="SCENE NAME"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                                                                      Margin="0,0,0,8"/>
                                <TextBox Style="{StaticResource DarkTextBoxStyle}"
                                         Text="{Binding SelectedScene.Name, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding IsEditMode}"
                                         FontSize="14"/>
                            </StackPanel>

                            <!-- Scene Color Section -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="SCENE COLOR"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                                                                      Margin="0,0,0,8"/>
                                <WrapPanel>
                                    <Button Width="32" Height="32" Margin="2"
                                            Background="#FF4444" BorderThickness="0"
                                            Command="{Binding SetSceneColorCommand}"
                                            CommandParameter="#FF4444"
                                            IsEnabled="{Binding IsEditMode}"
                                            Cursor="Hand"/>
                                    <Button Width="32" Height="32" Margin="2"
                                            Background="#FF8844" BorderThickness="0"
                                            Command="{Binding SetSceneColorCommand}"
                                            CommandParameter="#FF8844"
                                            IsEnabled="{Binding IsEditMode}"
                                            Cursor="Hand"/>
                                    <Button Width="32" Height="32" Margin="2"
                                            Background="#FFB800" BorderThickness="0"
                                            Command="{Binding SetSceneColorCommand}"
                                            CommandParameter="#FFB800"
                                            IsEnabled="{Binding IsEditMode}"
                                            Cursor="Hand"/>
                                    <Button Width="32" Height="32" Margin="2"
                                            Background="#00FF88" BorderThickness="0"
                                            Command="{Binding SetSceneColorCommand}"
                                            CommandParameter="#00FF88"
                                            IsEnabled="{Binding IsEditMode}"
                                            Cursor="Hand"/>
                                    <Button Width="32" Height="32" Margin="2"
                                            Background="#00D9FF" BorderThickness="0"
                                            Command="{Binding SetSceneColorCommand}"
                                            CommandParameter="#00D9FF"
                                            IsEnabled="{Binding IsEditMode}"
                                            Cursor="Hand"/>
                                    <Button Width="32" Height="32" Margin="2"
                                            Background="#8844FF" BorderThickness="0"
                                            Command="{Binding SetSceneColorCommand}"
                                            CommandParameter="#8844FF"
                                            IsEnabled="{Binding IsEditMode}"
                                            Cursor="Hand"/>
                                    <Button Width="32" Height="32" Margin="2"
                                            Background="#FF44AA" BorderThickness="0"
                                            Command="{Binding SetSceneColorCommand}"
                                            CommandParameter="#FF44AA"
                                            IsEnabled="{Binding IsEditMode}"
                                            Cursor="Hand"/>
                                    <Button Width="32" Height="32" Margin="2"
                                            Background="#E0E0E0" BorderThickness="0"
                                            Command="{Binding SetSceneColorCommand}"
                                            CommandParameter="#E0E0E0"
                                            IsEnabled="{Binding IsEditMode}"
                                            Cursor="Hand"/>
                                </WrapPanel>
                            </StackPanel>

                            <!-- Transition Settings Section -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="TRANSITION SETTINGS"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                                                                      Margin="0,0,0,8"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Transition Mode -->
                                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,8,8">
                                        <TextBlock Text="Mode"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="10"
                                                   Margin="0,0,0,4"/>
                                        <ComboBox Style="{StaticResource DarkComboBoxStyle}"
                                                  ItemsSource="{Binding TransitionModes}"
                                                  SelectedItem="{Binding SelectedScene.TransitionMode}"
                                                  IsEnabled="{Binding IsEditMode}">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Converter={StaticResource PerformanceModeTransitionModeConverter}}"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>

                                    <!-- Transition Time -->
                                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="8,0,0,8">
                                        <TextBlock Text="Time (ms)"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="10"
                                                   Margin="0,0,0,4"/>
                                        <TextBox Style="{StaticResource DarkTextBoxStyle}"
                                                 Text="{Binding SelectedScene.TransitionTimeMs, UpdateSourceTrigger=PropertyChanged}"
                                                 IsEnabled="{Binding IsEditMode}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <!-- MIDI Triggers Section -->
                            <StackPanel Margin="0,0,0,16">
                                <DockPanel Margin="0,0,0,8">
                                    <TextBlock Text="MIDI TRIGGERS"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                                                                              VerticalAlignment="Center"
                                               DockPanel.Dock="Left"/>
                                    <Button Style="{StaticResource ToolbarButtonStyle}"
                                            Content="+ Add"
                                            Padding="8,4"
                                            FontSize="11"
                                            Command="{Binding AddTriggerCommand}"
                                            IsEnabled="{Binding IsEditMode}"
                                            HorizontalAlignment="Right"/>
                                </DockPanel>

                                <!-- Trigger List -->
                                <ItemsControl ItemsSource="{Binding SelectedScene.Triggers}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#151515"
                                                    BorderBrush="{StaticResource BorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Padding="10"
                                                    Margin="0,0,0,4">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Trigger Type Icon -->
                                                    <Border Grid.Column="0"
                                                            Background="{StaticResource AccentBrush}"
                                                            CornerRadius="4"
                                                            Padding="6,4"
                                                            Margin="0,0,8,0">
                                                        <TextBlock Text="{Binding Type, Converter={StaticResource PerformanceModeTriggerTypeConverter}}"
                                                                   Foreground="Black"
                                                                   FontSize="10"
                                                                   FontWeight="SemiBold"/>
                                                    </Border>

                                                    <!-- Trigger Details -->
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Foreground="{StaticResource TextPrimaryBrush}"
                                                                   FontSize="12">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text" Value="Manual"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Type}" Value="MidiNote">
                                                                            <Setter Property="Text">
                                                                                <Setter.Value>
                                                                                    <MultiBinding StringFormat="Note: {0} (Ch {1})">
                                                                                        <Binding Path="MidiValue" Converter="{StaticResource PerformanceModeMidiNoteNameConverter}"/>
                                                                                        <Binding Path="MidiChannel"/>
                                                                                    </MultiBinding>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Type}" Value="MidiCC">
                                                                            <Setter Property="Text">
                                                                                <Setter.Value>
                                                                                    <MultiBinding StringFormat="CC {0} (Ch {1})">
                                                                                        <Binding Path="MidiValue"/>
                                                                                        <Binding Path="MidiChannel"/>
                                                                                    </MultiBinding>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Type}" Value="MidiProgramChange">
                                                                            <Setter Property="Text">
                                                                                <Setter.Value>
                                                                                    <MultiBinding StringFormat="PC {0} (Ch {1})">
                                                                                        <Binding Path="MidiValue"/>
                                                                                        <Binding Path="MidiChannel"/>
                                                                                    </MultiBinding>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Type}" Value="Keyboard">
                                                                            <Setter Property="Text" Value="{Binding KeyboardKey, StringFormat=Key: {0}}"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Type}" Value="OSC">
                                                                            <Setter Property="Text" Value="{Binding OscAddress, StringFormat=OSC: {0}}"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <!-- Delete Button -->
                                                    <Button Grid.Column="2"
                                                            Style="{StaticResource ToolbarButtonStyle}"
                                                            Content="X"
                                                            Foreground="{StaticResource ErrorBrush}"
                                                            Padding="6,2"
                                                            FontSize="10"
                                                            Command="{Binding DataContext.RemoveTriggerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            IsEnabled="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- MIDI Learn Button -->
                                <Button Margin="0,8,0,0"
                                        HorizontalAlignment="Stretch"
                                        Command="{Binding StartMidiLearnForSceneCommand}"
                                        IsEnabled="{Binding IsEditMode}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource ToolbarButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMidiLearnMode}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="8" Height="8"
                                                 Margin="0,0,8,0"
                                                 VerticalAlignment="Center">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="{StaticResource TextSecondaryBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsMidiLearnMode}" Value="True">
                                                            <Setter Property="Fill" Value="Black"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Learn MIDI Trigger"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsMidiLearnMode}" Value="True">
                                                            <Setter Property="Text" Value="Waiting for MIDI..."/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <!-- Scene Enable Toggle -->
                            <Border Background="#151515"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="12"
                                    Margin="0,8,0,0">
                                <DockPanel>
                                    <TextBlock Text="Scene Enabled"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontSize="12"
                                               VerticalAlignment="Center"
                                               DockPanel.Dock="Left"/>
                                    <CheckBox IsChecked="{Binding SelectedScene.Enabled}"
                                              IsEnabled="{Binding IsEditMode}"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Center"/>
                                </DockPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </ScrollViewer>

                <!-- No Selection Message -->
                <Border Grid.Row="1"
                        Visibility="{Binding HasSelectedScene, Converter={StaticResource PerformanceModeBoolToVisibilityConverter}, ConverterParameter=inverse}">
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="No Scene Selected"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Select a scene from the list or add a new one"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Opacity="0.6"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Quick Actions -->
                <Border Grid.Row="2"
                        Background="{StaticResource PanelBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,0,0"
                        Padding="16,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Trigger Scene Button -->
                        <Button Grid.Column="0"
                                Style="{StaticResource AccentButtonStyle}"
                                Content="Trigger Scene"
                                Command="{Binding TriggerSelectedSceneCommand}"
                                Margin="0,0,4,0"
                                ToolTip="Trigger Selected Scene (Space)"/>

                        <!-- Crossfade to Scene Button -->
                        <Button Grid.Column="1"
                                Style="{StaticResource ToolbarButtonStyle}"
                                Content="Crossfade to Scene"
                                Command="{Binding CrossfadeToSelectedSceneCommand}"
                                Margin="4,0,0,0"
                                ToolTip="Crossfade to Selected Scene"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Bottom Status Bar -->
        <Border Grid.Row="2"
                Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="8,4">
            <DockPanel>
                <!-- Left: Status Message -->
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="11"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left"/>

                <!-- Right: Help Text -->
                <TextBlock Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="10"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           DockPanel.Dock="Right">
                    <Run Text="Click: Select"/>
                    <Run Text=" | " Foreground="#404040"/>
                    <Run Text="Double-Click: Trigger"/>
                    <Run Text=" | " Foreground="#404040"/>
                    <Run Text="Space: Trigger Selected"/>
                </TextBlock>

                <Border/>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
