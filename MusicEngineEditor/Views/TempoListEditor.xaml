<UserControl x:Class="MusicEngineEditor.Views.TempoListEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Views"
             mc:Ignorable="d"
             d:DesignHeight="350" d:DesignWidth="500"
             Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <!-- Colors -->
        <Color x:Key="EditorBackgroundColor">#1E1F22</Color>
        <Color x:Key="HeaderBackgroundColor">#2B2D30</Color>
        <Color x:Key="RowHoverColor">#3C3F41</Color>
        <Color x:Key="RowSelectedColor">#4B6EAF</Color>
        <Color x:Key="TextPrimaryColor">#BCBEC4</Color>
        <Color x:Key="TextSecondaryColor">#6F737A</Color>
        <Color x:Key="BorderColor">#393B40</Color>
        <Color x:Key="AccentColor">#4B6EAF</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="EditorBackgroundBrush" Color="{StaticResource EditorBackgroundColor}"/>
        <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderBackgroundColor}"/>
        <SolidColorBrush x:Key="RowHoverBrush" Color="{StaticResource RowHoverColor}"/>
        <SolidColorBrush x:Key="RowSelectedBrush" Color="{StaticResource RowSelectedColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="EditorBorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="EditorAccentBrush" Color="{StaticResource AccentColor}"/>

        <!-- Toolbar Button Style -->
        <Style x:Key="TempoToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource EditorBorderBrush}"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource RowHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource RowSelectedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Add Button Style -->
        <Style x:Key="TempoAddButtonStyle" TargetType="Button" BasedOn="{StaticResource TempoToolbarButtonStyle}">
            <Setter Property="Background" Value="{StaticResource EditorAccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="TempoDangerButtonStyle" TargetType="Button" BasedOn="{StaticResource TempoToolbarButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="Transparent"
                                BorderBrush="{StaticResource EditorBorderBrush}"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#5C3535"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#D32F2F"/>
                                <Setter Property="Foreground" Value="#F75464"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D32F2F"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Curve Type Indicator Template -->
        <DataTemplate x:Key="CurveTypeTemplate">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Path x:Name="CurveIcon"
                      Width="16" Height="12"
                      Stretch="Uniform"
                      Fill="{StaticResource TextSecondaryBrush}"
                      Margin="0,0,6,0"/>
                <TextBlock Text="{Binding CurveTypeDisplay}"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding CurveType}" Value="Linear">
                    <Setter TargetName="CurveIcon" Property="Data" Value="M0,12 L16,0"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding CurveType}" Value="SCurve">
                    <Setter TargetName="CurveIcon" Property="Data" Value="M0,12 C4,12 12,0 16,0"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding CurveType}" Value="Step">
                    <Setter TargetName="CurveIcon" Property="Data" Value="M0,12 L0,0 L16,0"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource HeaderBackgroundBrush}"
                BorderBrush="{StaticResource EditorBorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="12,10">
            <DockPanel>
                <TextBlock Text="Tempo Track"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left"/>

                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right"
                            HorizontalAlignment="Right">
                    <Button Content="+ Add Point"
                            Style="{StaticResource TempoAddButtonStyle}"
                            Click="AddPoint_Click"
                            ToolTip="Add tempo change point"/>

                    <Button Content="Remove"
                            Style="{StaticResource TempoDangerButtonStyle}"
                            Click="RemovePoint_Click"
                            Margin="8,0,0,0"
                            IsEnabled="{Binding HasSelection}"
                            ToolTip="Remove selected point"/>
                </StackPanel>

                <Border/>
            </DockPanel>
        </Border>

        <!-- Tempo Points DataGrid -->
        <DataGrid x:Name="TempoGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserSortColumns="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  GridLinesVisibility="Horizontal"
                  Background="{StaticResource EditorBackgroundBrush}"
                  BorderThickness="0"
                  RowHeaderWidth="0"
                  CellEditEnding="TempoGrid_CellEditEnding"
                  SelectionChanged="TempoGrid_SelectionChanged">

            <DataGrid.Columns>
                <!-- Position Column -->
                <DataGridTextColumn Header="Position (bars)"
                                    Binding="{Binding PositionDisplay}"
                                    Width="100"
                                    IsReadOnly="True"/>

                <!-- Position Beats Column (Editable) -->
                <DataGridTextColumn Header="Beats"
                                    Binding="{Binding Position, StringFormat=N2}"
                                    Width="80"/>

                <!-- Tempo Column -->
                <DataGridTextColumn Header="Tempo (BPM)"
                                    Binding="{Binding Tempo, StringFormat=N1}"
                                    Width="100"/>

                <!-- Curve Type Column -->
                <DataGridTemplateColumn Header="Curve" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ContentPresenter Content="{Binding}"
                                              ContentTemplate="{StaticResource CurveTypeTemplate}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox SelectedValue="{Binding CurveType, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedValuePath="Tag"
                                      Background="#1E1F22"
                                      Foreground="White">
                                <ComboBoxItem Content="Linear" Tag="Linear"/>
                                <ComboBoxItem Content="S-Curve" Tag="SCurve"/>
                                <ComboBoxItem Content="Step" Tag="Step"/>
                            </ComboBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <!-- Duration Column -->
                <DataGridTextColumn Header="Duration"
                                    Binding="{Binding DurationDisplay}"
                                    Width="*"
                                    IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer / Info Bar -->
        <Border Grid.Row="2"
                Background="{StaticResource HeaderBackgroundBrush}"
                BorderBrush="{StaticResource EditorBorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="12,8">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="11">
                    <Run Text="{Binding PointCount, FallbackValue=0}"/>
                    <Run Text=" tempo points"/>
                </TextBlock>

                <TextBlock DockPanel.Dock="Right"
                           HorizontalAlignment="Right"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="11">
                    <Run Text="Range: "/>
                    <Run Text="{Binding MinTempo, StringFormat=N0, FallbackValue=120}"/>
                    <Run Text=" - "/>
                    <Run Text="{Binding MaxTempo, StringFormat=N0, FallbackValue=120}"/>
                    <Run Text=" BPM"/>
                </TextBlock>

                <Border/>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
