<Window x:Class="MusicEngineEditor.Views.Dialogs.NewProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Project"
        Width="500" Height="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Project Name -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                 x:Name="ProjectNameBox"
                 Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}"
                 Background="{DynamicResource EditorBackgroundBrush}"
                 Foreground="{DynamicResource ForegroundBrush}"
                 BorderBrush="{DynamicResource BorderBrush}"
                 Padding="8,6"
                 Margin="0,0,0,10"/>

        <!-- Location -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Location:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                 Text="{Binding ProjectLocation, UpdateSourceTrigger=PropertyChanged}"
                 Background="{DynamicResource EditorBackgroundBrush}"
                 Foreground="{DynamicResource ForegroundBrush}"
                 BorderBrush="{DynamicResource BorderBrush}"
                 Padding="8,6"
                 Margin="0,0,10,10"/>
        <Button Grid.Row="1" Grid.Column="2" Content="Browse..."
                Click="BrowseButton_Click"
                Padding="15,6"
                Margin="0,0,0,10"/>

        <!-- Namespace -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Namespace:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                 Text="{Binding Namespace, UpdateSourceTrigger=PropertyChanged}"
                 Background="{DynamicResource EditorBackgroundBrush}"
                 Foreground="{DynamicResource ForegroundBrush}"
                 BorderBrush="{DynamicResource BorderBrush}"
                 Padding="8,6"
                 Margin="0,0,0,10"/>

        <!-- Template Selection -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Template:" VerticalAlignment="Top" Margin="0,0,10,10"/>
        <ListBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                 Height="100"
                 SelectedIndex="0"
                 Background="{DynamicResource EditorBackgroundBrush}"
                 Foreground="{DynamicResource ForegroundBrush}"
                 BorderBrush="{DynamicResource BorderBrush}"
                 Margin="0,0,0,10">
            <ListBoxItem Content="Empty Project"/>
            <ListBoxItem Content="Basic Beat Project"/>
            <ListBoxItem Content="Synth Project"/>
        </ListBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Create"
                    IsDefault="True"
                    Click="CreateButton_Click"
                    Padding="20,8"
                    Margin="0,0,10,0"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="White"/>
            <Button Content="Cancel"
                    IsCancel="True"
                    Padding="20,8"/>
        </StackPanel>
    </Grid>
</Window>
