<Window x:Class="MusicEngineEditor.Views.Dialogs.MacroRecorderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Macro Recorder"
        Width="700" Height="550"
        MinWidth="600" MinHeight="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Macro Recorder"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource BrightForegroundBrush}"/>
                    <TextBlock Text="Record, edit, and manage user action macros"
                               FontSize="12"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Recording Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="RecordButton"
                            Content="Record"
                            Padding="16,8"
                            Margin="0,0,8,0"
                            Click="OnRecordClick">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Background" Value="#C75450"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="StopButton"
                            Content="Stop"
                            IsEnabled="False"
                            Padding="16,8"
                            Margin="0,0,8,0"
                            Click="OnStopClick"/>
                    <Button x:Name="PlayButton"
                            Content="Play"
                            Padding="16,8"
                            Click="OnPlayClick"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="200"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Macro List -->
            <Border Grid.Column="0"
                    Background="{DynamicResource PanelBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="{DynamicResource ToolbarBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="12,8">
                        <TextBlock Text="Macros"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource BrightForegroundBrush}"/>
                    </Border>

                    <ListBox x:Name="MacroListBox"
                             Grid.Row="1"
                             Background="Transparent"
                             BorderThickness="0"
                             SelectionChanged="OnMacroSelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="4">
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource ForegroundBrush}"/>
                                    <TextBlock Text="{Binding ShortcutDisplay}"
                                               FontSize="11"
                                               Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="8">
                        <Button Content="New" Padding="12,6" Margin="0,0,4,0" Click="OnNewMacroClick"/>
                        <Button x:Name="DeleteButton" Content="Delete" Padding="12,6" Click="OnDeleteMacroClick"/>
                    </StackPanel>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="Transparent"/>

            <!-- Macro Editor -->
            <Border Grid.Column="2"
                    Background="{DynamicResource PanelBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Macro Properties -->
                    <StackPanel Grid.Row="0" Margin="16">
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Name:" VerticalAlignment="Center"/>
                            <TextBox x:Name="MacroNameTextBox"
                                     Grid.Column="1"
                                     Padding="8,6"
                                     TextChanged="OnMacroNameChanged"/>
                        </Grid>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Category:" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CategoryComboBox"
                                      Grid.Column="1"
                                      IsEditable="True"
                                      SelectionChanged="OnCategoryChanged"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Shortcut:" VerticalAlignment="Center"/>
                            <TextBox x:Name="ShortcutTextBox"
                                     Grid.Column="1"
                                     IsReadOnly="True"
                                     Padding="8,6"
                                     PreviewKeyDown="OnShortcutKeyDown"/>
                            <Button Grid.Column="2"
                                    Content="Clear"
                                    Padding="8,6"
                                    Margin="8,0,0,0"
                                    Click="OnClearShortcutClick"/>
                        </Grid>
                    </StackPanel>

                    <Separator Grid.Row="1" Background="{DynamicResource BorderBrush}" Margin="16,0"/>

                    <!-- Steps List -->
                    <Grid Grid.Row="2" Margin="16,12,16,16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Steps"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource BrightForegroundBrush}"
                                   Margin="0,0,0,8"/>

                        <ListBox x:Name="StepsListBox"
                                 Grid.Row="1"
                                 Background="{DynamicResource EditorBackgroundBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 BorderThickness="1">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox IsChecked="{Binding IsEnabled}"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,8,0"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock>
                                                <Run Text="{Binding Order, StringFormat='#{0}: '}" FontWeight="SemiBold"/>
                                                <Run Text="{Binding ActionName}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding ActionType}"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                                        </StackPanel>

                                        <Button Grid.Column="2"
                                                Content="X"
                                                Width="24" Height="24"
                                                Padding="0"
                                                ToolTip="Remove Step"
                                                Click="OnRemoveStepClick"
                                                Tag="{Binding}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Move Up" Padding="12,6" Margin="0,0,4,0" Click="OnMoveStepUpClick"/>
                            <Button Content="Move Down" Padding="12,6" Click="OnMoveStepDownClick"/>
                        </StackPanel>
                    </Grid>

                    <!-- Recording Indicator -->
                    <Border x:Name="RecordingIndicator"
                            Grid.Row="0" Grid.RowSpan="3"
                            Background="#80000000"
                            Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Ellipse Width="20" Height="20" Fill="#C75450" Margin="0,0,0,12">
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                 From="1" To="0.3"
                                                                 Duration="0:0:0.5"
                                                                 AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                            <TextBlock Text="Recording..."
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                            <TextBlock Text="Perform actions to record them"
                                       FontSize="12"
                                       Foreground="#CCCCCC"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom Button Panel -->
        <Border Grid.Row="2"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,12">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Import..." Padding="12,8" Margin="0,0,8,0" Click="OnImportClick"/>
                    <Button Content="Export..." Padding="12,8" Click="OnExportClick"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Save All"
                            Padding="16,8"
                            Margin="0,0,8,0"
                            Background="{DynamicResource AccentBrush}"
                            Foreground="White"
                            Click="OnSaveAllClick"/>
                    <Button Content="Close"
                            IsCancel="True"
                            Padding="16,8"
                            Click="OnCloseClick"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
