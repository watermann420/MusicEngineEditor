<Window x:Class="MusicEngineEditor.Views.Dialogs.ProjectCompareDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Compare Projects"
        Width="700" Height="600"
        MinWidth="550" MinHeight="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Window.Resources>
        <!-- Diff item styles -->
        <Style x:Key="DiffItemAddedStyle" TargetType="Border">
            <Setter Property="Background" Value="#204CAF50"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>

        <Style x:Key="DiffItemRemovedStyle" TargetType="Border">
            <Setter Property="Background" Value="#20F44336"/>
            <Setter Property="BorderBrush" Value="#F44336"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>

        <Style x:Key="DiffItemChangedStyle" TargetType="Border">
            <Setter Property="Background" Value="#20FF9800"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>

        <Style x:Key="DiffItemUnchangedStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{DynamicResource BrightForegroundBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="ProjectSelectionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,15">
            <StackPanel>
                <TextBlock Text="Compare Project Versions"
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="{DynamicResource BrightForegroundBrush}"
                           Margin="0,0,0,4"/>
                <TextBlock Text="Compare two project files to see differences"
                           FontSize="11"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"/>
            </StackPanel>
        </Border>

        <!-- Project Selection -->
        <Border Grid.Row="1"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Project A (Base) -->
                <TextBlock Grid.Column="0" Grid.Row="0"
                           Text="Base Version (A)"
                           FontWeight="SemiBold"
                           FontSize="11"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           Margin="0,0,0,6"/>
                <Grid Grid.Column="0" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                            Background="#1A1A1A"
                            BorderBrush="#3A3A3A"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="8,6">
                        <TextBlock x:Name="ProjectAPathText"
                                   Text="Select project file..."
                                   FontSize="11"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   TextTrimming="CharacterEllipsis"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <Button Grid.Column="1"
                            Style="{StaticResource ProjectSelectionButtonStyle}"
                            Content="Browse..."
                            Click="BrowseProjectA_Click"
                            Margin="8,0,0,0"/>
                </Grid>

                <!-- Swap button -->
                <Button Grid.Column="1" Grid.Row="1"
                        Style="{StaticResource ProjectSelectionButtonStyle}"
                        Content="&lt;-&gt;"
                        Click="SwapProjects_Click"
                        ToolTip="Swap projects"
                        Margin="12,0"
                        Width="40"/>

                <!-- Project B (Compare) -->
                <TextBlock Grid.Column="2" Grid.Row="0"
                           Text="Compare Version (B)"
                           FontWeight="SemiBold"
                           FontSize="11"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           Margin="0,0,0,6"/>
                <Grid Grid.Column="2" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                            Background="#1A1A1A"
                            BorderBrush="#3A3A3A"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="8,6">
                        <TextBlock x:Name="ProjectBPathText"
                                   Text="Select project file..."
                                   FontSize="11"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   TextTrimming="CharacterEllipsis"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <Button Grid.Column="1"
                            Style="{StaticResource ProjectSelectionButtonStyle}"
                            Content="Browse..."
                            Click="BrowseProjectB_Click"
                            Margin="8,0,0,0"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Diff View -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Summary -->
            <Border Grid.Row="0"
                    Background="{DynamicResource PanelBackgroundBrush}"
                    CornerRadius="6"
                    Padding="16"
                    Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock x:Name="AddedCountText"
                                   Text="0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#4CAF50"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Added"
                                   FontSize="10"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock x:Name="RemovedCountText"
                                   Text="0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#F44336"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Removed"
                                   FontSize="10"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock x:Name="ChangedCountText"
                                   Text="0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#FF9800"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Changed"
                                   FontSize="10"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                        <TextBlock x:Name="UnchangedCountText"
                                   Text="0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Unchanged"
                                   FontSize="10"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Filter tabs -->
            <Border Grid.Row="1"
                    Background="{DynamicResource PanelBackgroundBrush}"
                    CornerRadius="6,6,0,0"
                    Padding="8,8,8,0">
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="FilterAllRadio"
                                 Content="All"
                                 GroupName="DiffFilter"
                                 IsChecked="True"
                                 Checked="FilterChanged"
                                 Margin="0,0,8,0"/>
                    <RadioButton x:Name="FilterTracksRadio"
                                 Content="Tracks"
                                 GroupName="DiffFilter"
                                 Checked="FilterChanged"
                                 Margin="0,0,8,0"/>
                    <RadioButton x:Name="FilterPluginsRadio"
                                 Content="Plugins"
                                 GroupName="DiffFilter"
                                 Checked="FilterChanged"
                                 Margin="0,0,8,0"/>
                    <RadioButton x:Name="FilterParametersRadio"
                                 Content="Parameters"
                                 GroupName="DiffFilter"
                                 Checked="FilterChanged"
                                 Margin="0,0,8,0"/>
                    <RadioButton x:Name="FilterSettingsRadio"
                                 Content="Settings"
                                 GroupName="DiffFilter"
                                 Checked="FilterChanged"/>
                </StackPanel>
            </Border>

            <!-- Diff list -->
            <Border Grid.Row="2"
                    Background="{DynamicResource PanelBackgroundBrush}"
                    CornerRadius="0,0,6,6"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">
                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="DiffItemsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{Binding DiffStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Change indicator -->
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding ChangeIndicator}"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       Foreground="{Binding IndicatorColor}"
                                                       Width="24"
                                                       VerticalAlignment="Center"/>

                                            <!-- Item details -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding ItemName}"
                                                           FontWeight="SemiBold"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource BrightForegroundBrush}"/>
                                                <TextBlock Text="{Binding ItemPath}"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                                                           Visibility="{Binding HasPath, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                <TextBlock Text="{Binding ChangeDescription}"
                                                           FontSize="10"
                                                           Foreground="{Binding DescriptionColor}"
                                                           Visibility="{Binding HasDescription, Converter={StaticResource BoolToVisibilityConverter}}"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <!-- Action buttons -->
                                            <StackPanel Grid.Column="2"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center"
                                                        Visibility="{Binding CanMerge, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <Button Content="Keep A"
                                                        Style="{StaticResource ProjectSelectionButtonStyle}"
                                                        Command="{Binding KeepACommand}"
                                                        FontSize="10"
                                                        Padding="6,3"
                                                        Margin="0,0,4,0"/>
                                                <Button Content="Use B"
                                                        Style="{StaticResource ProjectSelectionButtonStyle}"
                                                        Command="{Binding UseBCommand}"
                                                        FontSize="10"
                                                        Padding="6,3"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty state -->
                    <TextBlock x:Name="EmptyStateText"
                               Text="Select two project files to compare"
                               FontSize="12"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom Button Panel -->
        <Border Grid.Row="3"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="CompareButton"
                            Content="Compare"
                            Click="CompareButton_Click"
                            Padding="15,6"
                            Background="{DynamicResource AccentBrush}"
                            Foreground="White"
                            IsEnabled="False"
                            Margin="0,0,8,0"/>

                    <Button x:Name="MergeButton"
                            Content="Merge Selected..."
                            Click="MergeButton_Click"
                            Padding="15,6"
                            IsEnabled="False"/>
                </StackPanel>

                <Button Grid.Column="2"
                        Content="Close"
                        IsCancel="True"
                        Click="CloseButton_Click"
                        Padding="20,8"/>
            </Grid>
        </Border>
    </Grid>
</Window>
