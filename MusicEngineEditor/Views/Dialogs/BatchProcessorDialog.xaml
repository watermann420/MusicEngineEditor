<Window x:Class="MusicEngineEditor.Views.Dialogs.BatchProcessorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Batch Audio Processor"
        Width="900" Height="700"
        MinWidth="750" MinHeight="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- File Item Style -->
        <Style x:Key="FileListItemStyle" TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3C3F41"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="350"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: File List -->
            <Grid Grid.Column="0" Margin="0,0,15,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="Input Files"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,0,0,10"
                           Foreground="{DynamicResource BrightForegroundBrush}"/>

                <!-- File Actions -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="Add Files..."
                            Command="{Binding AddFilesCommand}"
                            Padding="12,6"
                            Margin="0,0,5,0"/>
                    <Button Content="Add Folder..."
                            Command="{Binding AddFolderCommand}"
                            Padding="12,6"
                            Margin="0,0,5,0"/>
                    <Button Content="Remove"
                            Command="{Binding RemoveSelectedCommand}"
                            Padding="12,6"
                            Margin="0,0,5,0"/>
                    <Button Content="Clear All"
                            Command="{Binding ClearAllCommand}"
                            Padding="12,6"/>
                </StackPanel>

                <!-- File List -->
                <Border Grid.Row="2"
                        Background="{DynamicResource EditorBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                    <ListView ItemsSource="{Binding Files}"
                              SelectedItem="{Binding SelectedFile}"
                              SelectionMode="Extended"
                              Background="Transparent"
                              BorderThickness="0"
                              ItemContainerStyle="{StaticResource FileListItemStyle}"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              AllowDrop="True"
                              Drop="OnFileDrop"
                              DragOver="OnDragOver">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- File Info -->
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding FileName}"
                                                   FontWeight="Medium"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding DirectoryPath}"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>

                                    <!-- Status Indicator -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                                        <TextBlock Text="..."
                                                   Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   Foreground="{DynamicResource AccentBrush}"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="[OK]"
                                                   Visibility="{Binding IsComplete, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   Foreground="{DynamicResource SuccessBrush}"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="[!]"
                                                   Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   Foreground="{DynamicResource ErrorBrush}"
                                                   FontWeight="Bold"
                                                   ToolTip="{Binding ErrorMessage}"/>
                                    </StackPanel>

                                    <!-- Progress -->
                                    <ProgressBar Grid.Column="2"
                                                 Value="{Binding Progress}"
                                                 Minimum="0"
                                                 Maximum="100"
                                                 Height="4"
                                                 VerticalAlignment="Center"
                                                 Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>

                <!-- File Count -->
                <TextBlock Grid.Row="3"
                           Margin="0,8,0,0"
                           FontSize="11"
                           Foreground="{DynamicResource SecondaryForegroundBrush}">
                    <Run Text="{Binding Files.Count, Mode=OneWay}"/>
                    <Run Text=" files selected"/>
                </TextBlock>
            </Grid>

            <!-- Right Panel: Settings -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Effect Chain -->
                    <TextBlock Text="Effect Chain"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Margin="0,0,0,10"
                               Foreground="{DynamicResource BrightForegroundBrush}"/>

                    <ComboBox ItemsSource="{Binding AvailableChains}"
                              SelectedItem="{Binding SelectedChain}"
                              DisplayMemberPath="Name"
                              Background="{DynamicResource EditorBackgroundBrush}"
                              Foreground="{DynamicResource ForegroundBrush}"
                              BorderBrush="{DynamicResource BorderBrush}"
                              Margin="0,0,0,10"/>

                    <Border Background="{DynamicResource PanelBackgroundBrush}"
                            CornerRadius="4"
                            Padding="10"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Effects in chain:"
                                       FontSize="11"
                                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                                       Margin="0,0,0,5"/>
                            <ItemsControl ItemsSource="{Binding SelectedChain.Effects}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   FontSize="11"
                                                   Margin="8,2,0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <Separator Background="{DynamicResource BorderBrush}" Margin="0,0,0,15"/>

                    <!-- Output Format -->
                    <TextBlock Text="Output Format"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Margin="0,0,0,10"
                               Foreground="{DynamicResource BrightForegroundBrush}"/>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Format:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding OutputFormats}"
                                  SelectedItem="{Binding SelectedFormat}"
                                  Background="{DynamicResource EditorBackgroundBrush}"
                                  Foreground="{DynamicResource ForegroundBrush}"
                                  BorderBrush="{DynamicResource BorderBrush}"/>
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Bit Depth:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding BitDepths}"
                                  SelectedItem="{Binding SelectedBitDepth}"
                                  Background="{DynamicResource EditorBackgroundBrush}"
                                  Foreground="{DynamicResource ForegroundBrush}"
                                  BorderBrush="{DynamicResource BorderBrush}"/>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Sample Rate:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding SampleRates}"
                                  SelectedItem="{Binding SelectedSampleRate}"
                                  Background="{DynamicResource EditorBackgroundBrush}"
                                  Foreground="{DynamicResource ForegroundBrush}"
                                  BorderBrush="{DynamicResource BorderBrush}"/>
                    </Grid>

                    <Separator Background="{DynamicResource BorderBrush}" Margin="0,0,0,15"/>

                    <!-- Naming Convention -->
                    <TextBlock Text="Naming"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Margin="0,0,0,10"
                               Foreground="{DynamicResource BrightForegroundBrush}"/>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Prefix:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding FilePrefix, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{DynamicResource EditorBackgroundBrush}"
                                 Foreground="{DynamicResource ForegroundBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 Padding="8,6"/>
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Suffix:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding FileSuffix, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{DynamicResource EditorBackgroundBrush}"
                                 Foreground="{DynamicResource ForegroundBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 Padding="8,6"/>
                    </Grid>

                    <CheckBox Content="Overwrite existing files"
                              IsChecked="{Binding OverwriteExisting}"
                              Margin="0,0,0,15"/>

                    <Border Background="{DynamicResource PanelBackgroundBrush}"
                            CornerRadius="4"
                            Padding="8"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Preview:" FontSize="10" Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                            <TextBlock Text="{Binding FileNamePreview}"
                                       FontSize="11"
                                       FontFamily="Consolas"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Border>

                    <Separator Background="{DynamicResource BorderBrush}" Margin="0,0,0,15"/>

                    <!-- Output Directory -->
                    <TextBlock Text="Output"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Margin="0,0,0,10"
                               Foreground="{DynamicResource BrightForegroundBrush}"/>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding OutputDirectory, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{DynamicResource EditorBackgroundBrush}"
                                 Foreground="{DynamicResource ForegroundBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 Padding="8,6"
                                 FontSize="11"/>
                        <Button Grid.Column="1"
                                Content="..."
                                Command="{Binding BrowseOutputCommand}"
                                Padding="10,6"
                                Margin="5,0,0,0"/>
                    </Grid>

                    <CheckBox Content="Use source file directory"
                              IsChecked="{Binding UseSourceDirectory}"
                              Margin="0,0,0,15"/>

                    <Separator Background="{DynamicResource BorderBrush}" Margin="0,0,0,15"/>

                    <!-- Progress Section -->
                    <Border Background="{DynamicResource PanelBackgroundBrush}"
                            CornerRadius="4"
                            Padding="12">
                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <TextBlock Text="{Binding CurrentFileName}"
                                           FontWeight="SemiBold"
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock HorizontalAlignment="Right"
                                           Foreground="{DynamicResource SecondaryForegroundBrush}">
                                    <Run Text="{Binding ProcessedCount, Mode=OneWay}"/>
                                    <Run Text="/"/>
                                    <Run Text="{Binding Files.Count, Mode=OneWay}"/>
                                </TextBlock>
                            </Grid>

                            <ProgressBar Value="{Binding OverallProgress}"
                                         Height="6"
                                         Margin="0,0,0,8"/>

                            <TextBlock Text="{Binding ProgressText}"
                                       FontSize="11"
                                       Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Log Output -->
                    <Expander Header="Log Output" Margin="0,15,0,0" IsExpanded="{Binding ShowLog}">
                        <Border Background="{DynamicResource EditorBackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Height="120"
                                Margin="0,10,0,0">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBox Text="{Binding LogOutput, Mode=OneWay}"
                                         IsReadOnly="True"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         FontFamily="Consolas"
                                         FontSize="10"
                                         TextWrapping="Wrap"
                                         Padding="8"/>
                            </ScrollViewer>
                        </Border>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Bottom Button Panel -->
        <Border Grid.Row="1"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Open Output Folder"
                            Command="{Binding OpenOutputFolderCommand}"
                            Padding="15,8"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock VerticalAlignment="Center"
                               Margin="0,0,15,0"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SuccessBrush}"
                               Visibility="{Binding IsComplete, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Run Text="{Binding SuccessCount, Mode=OneWay}"/>
                        <Run Text=" files processed successfully"/>
                    </TextBlock>
                    <Button Content="Process"
                            Command="{Binding ProcessCommand}"
                            IsEnabled="{Binding CanProcess}"
                            Padding="20,8"
                            Margin="0,0,10,0"
                            Background="{DynamicResource AccentBrush}"
                            Foreground="White"/>
                    <Button Content="Cancel"
                            Command="{Binding CancelCommand}"
                            IsCancel="True"
                            Padding="20,8"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
