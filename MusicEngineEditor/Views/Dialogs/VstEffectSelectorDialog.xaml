<Window x:Class="MusicEngineEditor.Views.Dialogs.VstEffectSelectorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add Effect"
        Width="700" Height="550"
        MinWidth="550" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Format badge colors -->
        <SolidColorBrush x:Key="Vst2BadgeBrush" Color="#9C7CE8"/>
        <SolidColorBrush x:Key="Vst3BadgeBrush" Color="#6AAB73"/>
        <SolidColorBrush x:Key="InternalBadgeBrush" Color="#4B6EAF"/>

        <!-- Category list item style -->
        <Style x:Key="CategoryListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3C3F41"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Plugin list item style -->
        <Style x:Key="PluginListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3C3F41"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <Border Grid.Row="0"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Border Background="#252628"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Icon -->
                        <TextBlock Grid.Column="0"
                                   Text="&#x1F50D;"
                                   FontSize="14"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>

                        <TextBox x:Name="SearchBox"
                                 Grid.Column="1"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="{DynamicResource ForegroundBrush}"
                                 CaretBrush="{DynamicResource ForegroundBrush}"
                                 FontSize="13"
                                 VerticalAlignment="Center"/>

                        <!-- Placeholder text -->
                        <TextBlock Grid.Column="1"
                                   Text="Search effects..."
                                   FontSize="13"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Clear button -->
                        <Button Grid.Column="2"
                                Content="X"
                                Command="{Binding ClearSearchCommand}"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{DynamicResource SecondaryForegroundBrush}"
                                FontSize="12"
                                Padding="6,2"
                                Cursor="Hand"
                                VerticalAlignment="Center">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasSearchText}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content: Categories and Plugin List -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180" MinWidth="120"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Categories Panel -->
            <Border Grid.Column="0"
                    Background="{DynamicResource PanelBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Categories Header -->
                    <Border Grid.Row="0"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="12,10">
                        <TextBlock Text="Categories"
                                   FontWeight="SemiBold"
                                   FontSize="12"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                    </Border>

                    <!-- Categories List -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Categories}"
                             SelectedItem="{Binding SelectedCategory}"
                             ItemContainerStyle="{StaticResource CategoryListItemStyle}"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="4"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="{Binding Name}"
                                               FontSize="12"
                                               VerticalAlignment="Center"/>

                                    <Border Grid.Column="1"
                                            Background="{DynamicResource SecondaryForegroundBrush}"
                                            CornerRadius="8"
                                            Padding="6,2"
                                            Margin="6,0,0,0"
                                            Visibility="{Binding ShowCount, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="{Binding Count}"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource BackgroundBrush}"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                          Width="4"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="Transparent"/>

            <!-- Plugin List Panel -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Recent Plugins Section (collapsible) -->
                <Border Grid.Row="0"
                        Background="{DynamicResource PanelBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Visibility="{Binding HasRecentPlugins, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Expander IsExpanded="{Binding ShowRecentPlugins}"
                              Background="Transparent"
                              BorderThickness="0">
                        <Expander.Header>
                            <TextBlock Text="Recent"
                                       FontWeight="SemiBold"
                                       FontSize="12"
                                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                                       Margin="4,0,0,0"/>
                        </Expander.Header>
                        <ListBox ItemsSource="{Binding RecentPlugins}"
                                 SelectedItem="{Binding SelectedPlugin}"
                                 ItemContainerStyle="{StaticResource PluginListItemStyle}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 MaxHeight="150"
                                 Padding="4"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="13"
                                                       FontWeight="Medium"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Vendor}"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <!-- Format Badge -->
                                        <Border Grid.Column="2"
                                                CornerRadius="3"
                                                Padding="6,2"
                                                VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="{StaticResource Vst2BadgeBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Format}" Value="VST3">
                                                            <Setter Property="Background" Value="{StaticResource Vst3BadgeBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Format}" Value="INT">
                                                            <Setter Property="Background" Value="{StaticResource InternalBadgeBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Format}"
                                                       FontSize="9"
                                                       FontWeight="Bold"
                                                       Foreground="White"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Expander>
                </Border>

                <!-- All Plugins List -->
                <ListBox Grid.Row="1"
                         x:Name="PluginList"
                         ItemsSource="{Binding FilteredPlugins}"
                         SelectedItem="{Binding SelectedPlugin}"
                         ItemContainerStyle="{StaticResource PluginListItemStyle}"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="8"
                         VirtualizingPanel.IsVirtualizing="True"
                         VirtualizingPanel.VirtualizationMode="Recycling"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding Vendor}"
                                               FontSize="11"
                                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,2,0,0"/>
                                </StackPanel>

                                <!-- Category Tag -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding CategoryTag}"
                                           FontSize="10"
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>

                                <!-- Format Badge -->
                                <Border Grid.Column="2"
                                        CornerRadius="3"
                                        Padding="6,2"
                                        VerticalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource Vst2BadgeBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Format}" Value="VST3">
                                                    <Setter Property="Background" Value="{StaticResource Vst3BadgeBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Format}" Value="INT">
                                                    <Setter Property="Background" Value="{StaticResource InternalBadgeBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding Format}"
                                               FontSize="9"
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Empty state message -->
                <TextBlock Grid.Row="1"
                           Text="No effects found matching your search."
                           FontSize="13"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="{Binding ShowEmptyMessage, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </Grid>

        <!-- Footer with action buttons -->
        <Border Grid.Row="2"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Plugin count / status -->
                <TextBlock Grid.Column="0"
                           Text="{Binding StatusText}"
                           FontSize="12"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           VerticalAlignment="Center"/>

                <!-- Action buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Cancel"
                            Click="CancelButton_Click"
                            Style="{DynamicResource SecondaryButtonStyle}"
                            Padding="16,8"
                            Margin="0,0,10,0"
                            IsCancel="True"/>
                    <Button Content="Add to Channel"
                            x:Name="AddButton"
                            Click="AddButton_Click"
                            Style="{DynamicResource PrimaryButtonStyle}"
                            Padding="20,8"
                            IsDefault="True"
                            IsEnabled="{Binding HasSelection}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
