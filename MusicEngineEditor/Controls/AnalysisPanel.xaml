<UserControl x:Class="MusicEngineEditor.Controls.AnalysisPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600"
             Background="#1E1F22">

    <UserControl.Resources>
        <!-- Dark theme colors -->
        <Color x:Key="BackgroundColor">#1E1F22</Color>
        <Color x:Key="PanelColor">#252629</Color>
        <Color x:Key="BorderColor">#393B40</Color>
        <Color x:Key="TextColor">#BCBEC4</Color>
        <Color x:Key="AccentColor">#00CED1</Color>
        <Color x:Key="HeaderColor">#2B2D30</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="HeaderBrush" Color="{StaticResource HeaderColor}"/>

        <!-- Toggle button style -->
        <Style x:Key="AnalyzerToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="#1E1F22"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Settings button style -->
        <Style x:Key="SettingsButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3C3F41"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tab control style -->
        <Style x:Key="AnalyzerTabStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="AnalyzerTabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1,1,1,0"
                                CornerRadius="4,4,0,0"
                                Padding="{TemplateBinding Padding}"
                                Margin="0,0,2,0">
                            <ContentPresenter ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource PanelBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3C3F41"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header / Toolbar -->
        <Border Grid.Row="0"
                Background="{StaticResource HeaderBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Column="0"
                           Text="Audio Analysis"
                           Foreground="{StaticResource TextBrush}"
                           FontSize="12"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <!-- Analyzer toggles -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="16,0">
                    <ToggleButton x:Name="SpectrumToggle"
                                  Content="Spectrum"
                                  IsChecked="True"
                                  Style="{StaticResource AnalyzerToggleStyle}"
                                  Margin="0,0,4,0"
                                  Click="OnSpectrumToggleClick"/>
                    <ToggleButton x:Name="GoniometerToggle"
                                  Content="Goniometer"
                                  IsChecked="True"
                                  Style="{StaticResource AnalyzerToggleStyle}"
                                  Margin="0,0,4,0"
                                  Click="OnGoniometerToggleClick"/>
                    <ToggleButton x:Name="CorrelationToggle"
                                  Content="Correlation"
                                  IsChecked="True"
                                  Style="{StaticResource AnalyzerToggleStyle}"
                                  Margin="0,0,4,0"
                                  Click="OnCorrelationToggleClick"/>
                    <ToggleButton x:Name="PeakToggle"
                                  Content="True Peak"
                                  IsChecked="True"
                                  Style="{StaticResource AnalyzerToggleStyle}"
                                  Click="OnPeakToggleClick"/>
                </StackPanel>

                <!-- Settings and mode buttons -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <ToggleButton x:Name="CompactModeToggle"
                                  Content="Compact"
                                  Style="{StaticResource AnalyzerToggleStyle}"
                                  Margin="0,0,8,0"
                                  Click="OnCompactModeToggleClick"/>
                    <Button x:Name="ResetButton"
                            Style="{StaticResource SettingsButtonStyle}"
                            ToolTip="Reset all peaks"
                            Click="OnResetClick">
                        <TextBlock Text="Reset" FontSize="11"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main content area -->
        <Border Grid.Row="1"
                Background="{StaticResource PanelBrush}"
                Padding="8">
            <!-- Expanded mode: Grid layout -->
            <Grid x:Name="ExpandedLayout">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="100"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Spectrum Analyzer (left, takes most space) -->
                <Border Grid.Row="0" Grid.Column="0"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="0,0,8,0"
                        Visibility="{Binding ElementName=SpectrumToggle, Path=IsChecked, Converter={StaticResource BoolToVisConverter}}">
                    <local:SpectrumDisplay x:Name="SpectrumAnalyzer"/>
                </Border>

                <!-- Goniometer (center-right) -->
                <Border Grid.Row="0" Grid.Column="1"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Width="180" Height="180"
                        Margin="0,0,8,0"
                        Visibility="{Binding ElementName=GoniometerToggle, Path=IsChecked, Converter={StaticResource BoolToVisConverter}}">
                    <local:GoniometerDisplay x:Name="Goniometer"/>
                </Border>

                <!-- True Peak Meter (right) -->
                <Border Grid.Row="0" Grid.Column="2"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Width="80"
                        Visibility="{Binding ElementName=PeakToggle, Path=IsChecked, Converter={StaticResource BoolToVisConverter}}">
                    <local:TruePeakMeter x:Name="TruePeakMeter"/>
                </Border>

                <!-- Correlation Meter (bottom, full width) -->
                <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="0,8,0,0"
                        Visibility="{Binding ElementName=CorrelationToggle, Path=IsChecked, Converter={StaticResource BoolToVisConverter}}">
                    <local:CorrelationMeterDisplay x:Name="CorrelationMeter"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
