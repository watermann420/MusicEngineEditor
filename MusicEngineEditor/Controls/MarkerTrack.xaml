<UserControl x:Class="MusicEngineEditor.Controls.MarkerTrack"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls"
             mc:Ignorable="d"
             d:DesignHeight="28" d:DesignWidth="800"
             Background="{DynamicResource PanelBackgroundBrush}"
             ClipToBounds="True">

    <UserControl.Resources>
        <!-- Marker Colors -->
        <SolidColorBrush x:Key="MarkerBrush" Color="#FFC107"/>
        <SolidColorBrush x:Key="LocatorMarkerBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="CycleMarkerBrush" Color="#2196F3"/>
        <SolidColorBrush x:Key="TimelineBrush" Color="#40FFFFFF"/>
        <SolidColorBrush x:Key="GridBrush" Color="#20FFFFFF"/>
        <SolidColorBrush x:Key="BeatGridBrush" Color="#30FFFFFF"/>
        <SolidColorBrush x:Key="BarGridBrush" Color="#50FFFFFF"/>

        <!-- Marker Flag Style -->
        <Style x:Key="MarkerFlagStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="2,2,0,0"/>
            <Setter Property="Padding" Value="4,1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.5" Color="#FFC107"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2"/>
        </Grid.RowDefinitions>

        <!-- Main Timeline Canvas -->
        <Canvas x:Name="TimelineCanvas"
                Grid.Row="0"
                Background="Transparent"
                MouseLeftButtonDown="TimelineCanvas_MouseLeftButtonDown"
                MouseLeftButtonUp="TimelineCanvas_MouseLeftButtonUp"
                MouseMove="TimelineCanvas_MouseMove"
                MouseRightButtonDown="TimelineCanvas_MouseRightButtonDown"
                SizeChanged="TimelineCanvas_SizeChanged">

            <!-- Grid Lines -->
            <Canvas x:Name="GridCanvas" IsHitTestVisible="False"/>

            <!-- Markers Container -->
            <Canvas x:Name="MarkersCanvas"/>

            <!-- Cycle Region (Loop Range) -->
            <Rectangle x:Name="CycleRegion"
                       Fill="#202196F3"
                       Stroke="{StaticResource CycleMarkerBrush}"
                       StrokeThickness="1"
                       Visibility="Collapsed"
                       IsHitTestVisible="False"/>

            <!-- Playhead Indicator -->
            <Path x:Name="PlayheadIndicator"
                  Fill="{DynamicResource ForegroundBrush}"
                  Visibility="Collapsed"
                  IsHitTestVisible="False">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="0,0" IsClosed="True">
                            <LineSegment Point="6,0"/>
                            <LineSegment Point="6,10"/>
                            <LineSegment Point="3,16"/>
                            <LineSegment Point="0,10"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>

            <!-- Time/Beat Labels -->
            <Canvas x:Name="LabelsCanvas" IsHitTestVisible="False"/>
        </Canvas>

        <!-- Bottom Border -->
        <Border Grid.Row="1"
                Background="{DynamicResource BorderBrush}"/>

        <!-- Context Menu -->
        <Grid.ContextMenu>
            <ContextMenu x:Name="MarkerContextMenu">
                <MenuItem Header="Add Marker" Click="AddMarker_Click"/>
                <Separator/>
                <MenuItem Header="Set Cycle Start" Click="SetCycleStart_Click"/>
                <MenuItem Header="Set Cycle End" Click="SetCycleEnd_Click"/>
                <MenuItem Header="Clear Cycle" Click="ClearCycle_Click"/>
                <Separator/>
                <MenuItem Header="Snap to Grid" x:Name="SnapToGridMenuItem" IsCheckable="True" IsChecked="True"/>
                <MenuItem Header="Grid Settings">
                    <MenuItem Header="1/4 Beat" Tag="0.25" Click="SetGridResolution_Click"/>
                    <MenuItem Header="1/2 Beat" Tag="0.5" Click="SetGridResolution_Click"/>
                    <MenuItem Header="1 Beat" Tag="1" Click="SetGridResolution_Click" IsChecked="True"/>
                    <MenuItem Header="2 Beats" Tag="2" Click="SetGridResolution_Click"/>
                    <MenuItem Header="4 Beats (Bar)" Tag="4" Click="SetGridResolution_Click"/>
                </MenuItem>
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</UserControl>
