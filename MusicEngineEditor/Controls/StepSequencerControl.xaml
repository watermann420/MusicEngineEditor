<UserControl x:Class="MusicEngineEditor.Controls.StepSequencerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MusicEngineEditor.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="900"
             Background="#0D0D0D">

    <UserControl.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0D0D0D"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#181818"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#00D9FF"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#00FF88"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#808080"/>
        <SolidColorBrush x:Key="DownbeatBrush" Color="#252525"/>
        <SolidColorBrush x:Key="OffbeatBrush" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="PlayingStepBrush" Color="#00FF88"/>

        <!-- Button Style -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#303030"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <!-- Slider Style -->
        <Style x:Key="DarkSliderStyle" TargetType="Slider">
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="1"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Toggle Button Style (Mute/Solo) -->
        <Style x:Key="MuteToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="22"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C75450"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#303030"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SoloToggleStyle" TargetType="ToggleButton" BasedOn="{StaticResource MuteToggleStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D9A343"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#303030"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="{StaticResource PanelBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Transport Controls -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,16,0">
                    <Button x:Name="PlayButton" Style="{StaticResource ToolbarButtonStyle}" Content="Play" Click="PlayButton_Click" Width="50"/>
                    <Button x:Name="StopButton" Style="{StaticResource ToolbarButtonStyle}" Content="Stop" Click="StopButton_Click" Width="50"/>
                    <Button x:Name="ResetButton" Style="{StaticResource ToolbarButtonStyle}" Content="Reset" Click="ResetButton_Click" Width="50"/>
                </StackPanel>

                <!-- Pattern Length -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                    <TextBlock Text="Steps:" Foreground="{StaticResource SecondaryForegroundBrush}" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <ComboBox x:Name="StepCountCombo" Style="{StaticResource DarkComboBoxStyle}" Width="70" SelectionChanged="StepCountCombo_SelectionChanged">
                        <ComboBoxItem Content="16" IsSelected="True"/>
                        <ComboBoxItem Content="32"/>
                        <ComboBoxItem Content="64"/>
                    </ComboBox>
                </StackPanel>

                <!-- Direction -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                    <TextBlock Text="Direction:" Foreground="{StaticResource SecondaryForegroundBrush}" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <ComboBox x:Name="DirectionCombo" Style="{StaticResource DarkComboBoxStyle}" Width="90" SelectionChanged="DirectionCombo_SelectionChanged">
                        <ComboBoxItem Content="Forward" IsSelected="True"/>
                        <ComboBoxItem Content="Reverse"/>
                        <ComboBoxItem Content="Ping-Pong"/>
                        <ComboBoxItem Content="Random"/>
                    </ComboBox>
                </StackPanel>

                <!-- Swing -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                    <TextBlock Text="Swing:" Foreground="{StaticResource SecondaryForegroundBrush}" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <Slider x:Name="SwingSlider" Style="{StaticResource DarkSliderStyle}" Value="0" ValueChanged="SwingSlider_ValueChanged"/>
                    <TextBlock x:Name="SwingValueText" Text="0%" Foreground="{StaticResource ForegroundBrush}" Width="35" VerticalAlignment="Center" Margin="6,0,0,0"/>
                </StackPanel>

                <!-- Pattern Actions -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Style="{StaticResource ToolbarButtonStyle}" Content="Clear" Click="ClearButton_Click"/>
                    <Button Style="{StaticResource ToolbarButtonStyle}" Content="Random" Click="RandomButton_Click"/>
                    <Button Style="{StaticResource ToolbarButtonStyle}" Content="Basic Beat" Click="BasicBeatButton_Click"/>
                </StackPanel>

                <!-- Status -->
                <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="CurrentStepText" Text="Step: --" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold" Margin="0,0,16,0"/>
                    <TextBlock x:Name="StatusText" Text="" Foreground="{StaticResource SecondaryForegroundBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Grid Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Row Headers -->
            <Border Grid.Column="0" Background="{StaticResource PanelBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
                <ScrollViewer x:Name="RowHeaderScrollViewer" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="RowHeadersControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Height="36" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Background="Transparent">
                                    <Grid Margin="4,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Color Indicator -->
                                        <Border Grid.Column="0" Width="4" CornerRadius="2" Margin="0,4">
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding Color}"/>
                                            </Border.Background>
                                        </Border>

                                        <!-- Name -->
                                        <TextBlock Grid.Column="1" Text="{Binding Name}"
                                                   Foreground="{StaticResource ForegroundBrush}"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"
                                                   FontSize="11"
                                                   Margin="6,0,4,0"/>

                                        <!-- Mute/Solo -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                            <ToggleButton Style="{StaticResource MuteToggleStyle}"
                                                          Content="M"
                                                          IsChecked="{Binding IsMuted}"
                                                          ToolTip="Mute"/>
                                            <ToggleButton Style="{StaticResource SoloToggleStyle}"
                                                          Content="S"
                                                          IsChecked="{Binding IsSolo}"
                                                          ToolTip="Solo"
                                                          Margin="2,0,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Step Grid -->
            <Border Grid.Column="1" Background="{StaticResource BackgroundBrush}">
                <ScrollViewer x:Name="StepGridScrollViewer"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              ScrollChanged="StepGridScrollViewer_ScrollChanged">
                    <Canvas x:Name="StepGridCanvas"
                            Background="Transparent"
                            MouseLeftButtonDown="StepGridCanvas_MouseLeftButtonDown"
                            MouseRightButtonDown="StepGridCanvas_MouseRightButtonDown"
                            MouseMove="StepGridCanvas_MouseMove"
                            MouseLeftButtonUp="StepGridCanvas_MouseLeftButtonUp"
                            ClipToBounds="True">
                        <!-- Steps are drawn programmatically -->
                    </Canvas>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Footer / Loop Controls -->
        <Border Grid.Row="2" Background="{StaticResource PanelBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid Margin="8,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Loop Controls -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox x:Name="LoopCheckBox" Content="Loop" Foreground="{StaticResource ForegroundBrush}" IsChecked="True" Checked="LoopCheckBox_Changed" Unchecked="LoopCheckBox_Changed"/>
                    <TextBlock Text="Start:" Foreground="{StaticResource SecondaryForegroundBrush}" VerticalAlignment="Center" Margin="16,0,6,0"/>
                    <TextBox x:Name="LoopStartTextBox" Width="40" Text="1" Background="#252525" Foreground="{StaticResource ForegroundBrush}" BorderBrush="{StaticResource BorderBrush}" TextChanged="LoopStartTextBox_TextChanged"/>
                    <TextBlock Text="End:" Foreground="{StaticResource SecondaryForegroundBrush}" VerticalAlignment="Center" Margin="12,0,6,0"/>
                    <TextBox x:Name="LoopEndTextBox" Width="40" Text="16" Background="#252525" Foreground="{StaticResource ForegroundBrush}" BorderBrush="{StaticResource BorderBrush}" TextChanged="LoopEndTextBox_TextChanged"/>
                </StackPanel>

                <!-- Velocity Display Toggle -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0,0,0">
                    <CheckBox x:Name="ShowVelocityCheckBox" Content="Show Velocity" Foreground="{StaticResource ForegroundBrush}" IsChecked="True" Checked="DisplayOptionsChanged" Unchecked="DisplayOptionsChanged"/>
                    <CheckBox x:Name="ShowProbabilityCheckBox" Content="Show Probability" Foreground="{StaticResource ForegroundBrush}" IsChecked="True" Margin="12,0,0,0" Checked="DisplayOptionsChanged" Unchecked="DisplayOptionsChanged"/>
                </StackPanel>

                <!-- Add Row Button -->
                <Button Grid.Column="3" Style="{StaticResource ToolbarButtonStyle}" Content="+ Add Row" Click="AddRowButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
