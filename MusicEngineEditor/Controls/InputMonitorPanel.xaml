<UserControl x:Class="MusicEngineEditor.Controls.InputMonitorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:MusicEngineEditor.Controls"
             xmlns:vm="clr-namespace:MusicEngineEditor.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="280" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=vm:InputMonitorViewModel}"
             Background="#1E1F22">

    <UserControl.Resources>
        <!-- Colors -->
        <Color x:Key="PanelBackgroundColor">#1E1F22</Color>
        <Color x:Key="CardBackgroundColor">#252629</Color>
        <Color x:Key="BorderColor">#393B40</Color>
        <Color x:Key="TextPrimaryColor">#BCBEC4</Color>
        <Color x:Key="TextSecondaryColor">#6F737A</Color>
        <Color x:Key="AccentColor">#4B6EAF</Color>
        <Color x:Key="AccentHoverColor">#5A7FC4</Color>
        <Color x:Key="SuccessColor">#6AAB73</Color>
        <Color x:Key="WarningColor">#E8B339</Color>
        <Color x:Key="ErrorColor">#F75464</Color>
        <Color x:Key="MutedColor">#5C5F66</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
        <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
        <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource MutedColor}"/>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Section Style -->
        <Style x:Key="SectionLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Toggle Button Style -->
        <Style x:Key="MonitorToggleStyle" TargetType="ToggleButton">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="Background" Value="{StaticResource MutedBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SuccessBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small Button Style -->
        <Style x:Key="SmallButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Background" Value="#3C3F44"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A4D52"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Volume Slider Style -->
        <Style x:Key="VolumeSliderStyle" TargetType="Slider">
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="1"/>
            <Setter Property="LargeChange" Value="0.1"/>
            <Setter Property="SmallChange" Value="0.01"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid Height="20">
                            <Border Height="4"
                                    Background="#1A1A1A"
                                    CornerRadius="2"
                                    VerticalAlignment="Center"/>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Width="14" Height="14">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Fill="{StaticResource AccentBrush}"
                                                         Stroke="{StaticResource BorderBrush}"
                                                         StrokeThickness="1"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="{StaticResource PanelBackgroundBrush}"
            Padding="12">
        <StackPanel>
            <!-- Header -->
            <DockPanel Margin="0,0,0,12">
                <TextBlock Text="Input Monitor"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           DockPanel.Dock="Left"
                           VerticalAlignment="Center"/>
                <Button Content="Refresh"
                        Style="{StaticResource SmallButtonStyle}"
                        Command="{Binding RefreshDevicesCommand}"
                        DockPanel.Dock="Right"/>
            </DockPanel>

            <!-- Device Selection -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="INPUT DEVICE" Style="{StaticResource SectionLabelStyle}"/>
                    <controls:InputDeviceSelector SelectedDevice="{Binding SelectedDevice, Mode=TwoWay}"
                                                  AvailableDevices="{Binding AvailableDevices}"
                                                  RefreshCommand="{Binding RefreshDevicesCommand}"
                                                  SampleRate="{Binding SampleRate}"
                                                  ChannelCount="{Binding ChannelCount}"/>
                </StackPanel>
            </Border>

            <!-- Level Meters -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <DockPanel Margin="0,0,0,8">
                        <TextBlock Text="INPUT LEVELS" Style="{StaticResource SectionLabelStyle}" DockPanel.Dock="Left" Margin="0"/>
                        <Button Content="Reset"
                                Style="{StaticResource SmallButtonStyle}"
                                Command="{Binding ResetPeaksCommand}"
                                DockPanel.Dock="Right"
                                Width="50"/>
                    </DockPanel>

                    <Grid Height="80">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Stereo Level Meter -->
                        <controls:LevelMeter x:Name="InputMeter"
                                             Grid.Column="0"
                                             LeftLevel="{Binding LeftLevel}"
                                             RightLevel="{Binding RightLevel}"
                                             ShowScale="False"
                                             ShowChannelLabels="True"
                                             ShowPeakHold="True"
                                             Margin="0,0,8,0"/>

                        <!-- Peak/Clip Indicators -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <!-- Left Clip -->
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="L" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" Width="12"/>
                                <Ellipse Width="10" Height="10">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="#4D1A1A"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding LeftClipping}" Value="True">
                                                    <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </StackPanel>
                            <!-- Right Clip -->
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="R" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" Width="12"/>
                                <Ellipse Width="10" Height="10">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="#4D1A1A"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RightClipping}" Value="True">
                                                    <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Monitoring Controls -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="MONITORING" Style="{StaticResource SectionLabelStyle}"/>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Monitor Enable -->
                        <ToggleButton Grid.Column="0"
                                      Style="{StaticResource MonitorToggleStyle}"
                                      IsChecked="{Binding IsMonitoringEnabled, Mode=TwoWay}"
                                      Content="Monitor"
                                      ToolTip="Enable input monitoring through speakers"/>

                        <!-- Direct Monitor -->
                        <ToggleButton Grid.Column="2"
                                      Style="{StaticResource MonitorToggleStyle}"
                                      IsChecked="{Binding IsDirectMonitoring, Mode=TwoWay}"
                                      Content="Direct"
                                      ToolTip="Low-latency direct monitoring (bypasses PDC)"/>
                    </Grid>

                    <!-- Volume Slider -->
                    <DockPanel Margin="0,4,0,0">
                        <TextBlock Text="Volume"
                                   FontSize="10"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   DockPanel.Dock="Left"
                                   VerticalAlignment="Center"
                                   Width="50"/>
                        <TextBlock Text="{Binding MonitoringVolume, StringFormat={}{0:P0}}"
                                   FontSize="10"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   DockPanel.Dock="Right"
                                   VerticalAlignment="Center"
                                   Width="40"
                                   TextAlignment="Right"/>
                        <Slider Style="{StaticResource VolumeSliderStyle}"
                                Value="{Binding MonitoringVolume, Mode=TwoWay}"
                                Margin="8,0"/>
                    </DockPanel>
                </StackPanel>
            </Border>

            <!-- Status -->
            <TextBlock Text="{Binding StatusText}"
                       FontSize="10"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0"/>
        </StackPanel>
    </Border>
</UserControl>
