<UserControl x:Class="MusicEngineEditor.Controls.MixRadarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="350"
             Background="#1E1F22"
             MinHeight="200"
             MinWidth="200">

    <UserControl.Resources>
        <!-- Dark theme colors -->
        <Color x:Key="BackgroundColor">#1E1F22</Color>
        <Color x:Key="GridColor">#2B2D30</Color>
        <Color x:Key="BorderColor">#393B40</Color>
        <Color x:Key="AxisColor">#4A4D52</Color>
        <Color x:Key="TextColor">#6F737A</Color>
        <Color x:Key="MixFillColor">#6000CED1</Color>
        <Color x:Key="MixStrokeColor">#00CED1</Color>
        <Color x:Key="ReferenceFillColor">#40FF9800</Color>
        <Color x:Key="ReferenceStrokeColor">#FF9800</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="GridBrush" Color="{StaticResource GridColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="AxisBrush" Color="{StaticResource AxisColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="MixFillBrush" Color="{StaticResource MixFillColor}"/>
        <SolidColorBrush x:Key="MixStrokeBrush" Color="{StaticResource MixStrokeColor}"/>
        <SolidColorBrush x:Key="ReferenceFillBrush" Color="{StaticResource ReferenceFillColor}"/>
        <SolidColorBrush x:Key="ReferenceStrokeBrush" Color="{StaticResource ReferenceStrokeColor}"/>

        <!-- Toggle Style -->
        <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="track" Background="#3A3A3A" CornerRadius="9" BorderThickness="1" BorderBrush="#5A5A5A">
                            <Ellipse x:Name="thumb" Width="14" Height="14" Fill="#888888" Margin="1,0,0,0" HorizontalAlignment="Left"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="track" Property="Background" Value="#4B6EAF"/>
                                <Setter TargetName="thumb" Property="Fill" Value="White"/>
                                <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="thumb" Property="Margin" Value="0,0,1,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Background="{StaticResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#2B2D30"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="10,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Mix Radar"
                               FontWeight="SemiBold"
                               FontSize="12"
                               Foreground="{DynamicResource BrightForegroundBrush}"
                               VerticalAlignment="Center"/>

                    <!-- Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <ToggleButton x:Name="ShowReferenceToggle"
                                      Style="{StaticResource ToggleSwitchStyle}"
                                      IsChecked="False"
                                      Checked="ShowReferenceToggle_Changed"
                                      Unchecked="ShowReferenceToggle_Changed"
                                      ToolTip="Show reference overlay"/>
                        <TextBlock Text="Reference"
                                   FontSize="10"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="4,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Radar display -->
            <Border Grid.Row="1"
                    Background="#1A1A1A"
                    CornerRadius="3"
                    BorderBrush="#3A3A3A"
                    BorderThickness="1"
                    Margin="8">
                <Grid ClipToBounds="True">
                    <!-- Grid circles and axes -->
                    <Canvas x:Name="GridCanvas"
                            ClipToBounds="True"
                            IsHitTestVisible="False"/>

                    <!-- Reference curve -->
                    <Canvas x:Name="ReferenceCanvas"
                            ClipToBounds="True"
                            IsHitTestVisible="False"/>

                    <!-- Mix curve with fill -->
                    <Canvas x:Name="MixCanvas"
                            ClipToBounds="True"
                            IsHitTestVisible="False"/>

                    <!-- Band labels -->
                    <Canvas x:Name="LabelsCanvas"
                            ClipToBounds="True"
                            IsHitTestVisible="False"/>

                    <!-- Center info -->
                    <Border HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="#C01A1A1A"
                            CornerRadius="4"
                            Padding="8,4">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="BalanceText"
                                       Text="Balanced"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource MixStrokeBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="ScoreText"
                                       Text="Score: --"
                                       FontSize="9"
                                       Foreground="{StaticResource TextBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Legend and band values -->
            <Border Grid.Row="2"
                    Margin="8,0,8,8"
                    Background="#1A1A1A"
                    CornerRadius="3"
                    Padding="8,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left bands -->
                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                            <TextBlock Text="Sub (20-60):"
                                       FontSize="9"
                                       Foreground="{StaticResource TextBrush}"
                                       Width="70"/>
                            <TextBlock x:Name="SubBandText"
                                       Text="--"
                                       FontSize="9"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource MixStrokeBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                            <TextBlock Text="Bass (60-250):"
                                       FontSize="9"
                                       Foreground="{StaticResource TextBrush}"
                                       Width="70"/>
                            <TextBlock x:Name="BassBandText"
                                       Text="--"
                                       FontSize="9"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource MixStrokeBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                            <TextBlock Text="LowMid (250-500):"
                                       FontSize="9"
                                       Foreground="{StaticResource TextBrush}"
                                       Width="70"/>
                            <TextBlock x:Name="LowMidBandText"
                                       Text="--"
                                       FontSize="9"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource MixStrokeBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Mid (500-2k):"
                                       FontSize="9"
                                       Foreground="{StaticResource TextBrush}"
                                       Width="70"/>
                            <TextBlock x:Name="MidBandText"
                                       Text="--"
                                       FontSize="9"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource MixStrokeBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Legend -->
                    <StackPanel Grid.Column="1"
                                VerticalAlignment="Center"
                                Margin="12,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <Border Background="{StaticResource MixFillBrush}"
                                    BorderBrush="{StaticResource MixStrokeBrush}"
                                    BorderThickness="1"
                                    Width="16" Height="16" CornerRadius="2"
                                    Margin="0,0,4,0"/>
                            <TextBlock Text="Mix"
                                       FontSize="9"
                                       Foreground="{StaticResource TextBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel x:Name="ReferenceLegend"
                                    Orientation="Horizontal"
                                    Visibility="Collapsed">
                            <Border Background="{StaticResource ReferenceFillBrush}"
                                    Width="16" Height="16" CornerRadius="2"
                                    Margin="0,0,4,0"/>
                            <TextBlock Text="Ref"
                                       FontSize="9"
                                       Foreground="{StaticResource TextBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Right bands -->
                    <StackPanel Grid.Column="2" Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                            <TextBlock Text="HiMid (2k-4k):"
                                       FontSize="9"
                                       Foreground="{StaticResource TextBrush}"
                                       Width="70"/>
                            <TextBlock x:Name="HighMidBandText"
                                       Text="--"
                                       FontSize="9"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource MixStrokeBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                            <TextBlock Text="Pres (4k-8k):"
                                       FontSize="9"
                                       Foreground="{StaticResource TextBrush}"
                                       Width="70"/>
                            <TextBlock x:Name="PresenceBandText"
                                       Text="--"
                                       FontSize="9"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource MixStrokeBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                            <TextBlock Text="Brill (8k-12k):"
                                       FontSize="9"
                                       Foreground="{StaticResource TextBrush}"
                                       Width="70"/>
                            <TextBlock x:Name="BrillianceBandText"
                                       Text="--"
                                       FontSize="9"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource MixStrokeBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Air (12k+):"
                                       FontSize="9"
                                       Foreground="{StaticResource TextBrush}"
                                       Width="70"/>
                            <TextBlock x:Name="AirBandText"
                                       Text="--"
                                       FontSize="9"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource MixStrokeBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
