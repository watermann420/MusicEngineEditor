<UserControl x:Class="MusicEngineEditor.Controls.LearnPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="400"
             Background="#1E1F22">

    <UserControl.Resources>
        <!-- Colors matching the dark theme -->
        <SolidColorBrush x:Key="LearnPanelBackgroundBrush" Color="#1E1F22"/>
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#2B2D30"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#393B40"/>
        <SolidColorBrush x:Key="SubtleBorderBrush" Color="#43454A"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#BCBEC4"/>
        <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#6F737A"/>
        <SolidColorBrush x:Key="BrightForegroundBrush" Color="#DFE1E5"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#4B6EAF"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#5A7FC4"/>
        <SolidColorBrush x:Key="CodeBackgroundBrush" Color="#1A1B1E"/>
        <SolidColorBrush x:Key="RunButtonBrush" Color="#499C54"/>
        <SolidColorBrush x:Key="RunButtonHoverBrush" Color="#5AAF65"/>
        <SolidColorBrush x:Key="CategoryHeaderBrush" Color="#DFE1E5"/>
        <SolidColorBrush x:Key="SearchBackgroundBrush" Color="#2B2D30"/>

        <!-- Search TextBox Style -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource SearchBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SubtleBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="CaretBrush" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="&#128269;"
                                           FontSize="12"
                                           Foreground="{StaticResource SecondaryForegroundBrush}"
                                           VerticalAlignment="Center"
                                           Margin="8,0,4,0"/>
                                <ScrollViewer x:Name="PART_ContentHost"
                                              Grid.Column="1"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Example Action Button Style -->
        <Style x:Key="ExampleActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3C3F41"/>
                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Run Button Style (Green) -->
        <Style x:Key="RunExampleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource RunButtonBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource RunButtonHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D8B47"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Category Expander Style -->
        <Style x:Key="CategoryExpanderStyle" TargetType="Expander">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource CategoryHeaderBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="IsExpanded" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Expander">
                        <Border Background="{TemplateBinding Background}" BorderThickness="0">
                            <StackPanel>
                                <ToggleButton x:Name="HeaderSite"
                                              IsChecked="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Cursor="Hand"
                                              Padding="8,10">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="toggleBorder"
                                                    Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}"
                                                    CornerRadius="4">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock x:Name="Arrow"
                                                               Grid.Column="0"
                                                               Text="&#9654;"
                                                               FontSize="10"
                                                               Foreground="{StaticResource SecondaryForegroundBrush}"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,8,0"
                                                               RenderTransformOrigin="0.5,0.5">
                                                        <TextBlock.RenderTransform>
                                                            <RotateTransform x:Name="ArrowRotation" Angle="0"/>
                                                        </TextBlock.RenderTransform>
                                                    </TextBlock>
                                                    <ContentPresenter Grid.Column="1"
                                                                      Content="{Binding Header, RelativeSource={RelativeSource AncestorType=Expander}}"
                                                                      VerticalAlignment="Center"/>
                                                    <TextBlock x:Name="CountBadge"
                                                               Grid.Column="2"
                                                               Text="{Binding Tag, RelativeSource={RelativeSource AncestorType=Expander}}"
                                                               FontSize="10"
                                                               Foreground="{StaticResource SecondaryForegroundBrush}"
                                                               VerticalAlignment="Center"
                                                               Margin="8,0,0,0"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="Arrow" Property="RenderTransform">
                                                        <Setter.Value>
                                                            <RotateTransform Angle="90"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="toggleBorder" Property="Background" Value="#3C3F41"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                                <ContentPresenter x:Name="ExpandSite"
                                                  Visibility="Collapsed"
                                                  Margin="0,0,0,8"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="ExpandSite" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Example Card DataTemplate -->
        <DataTemplate x:Key="ExampleCardTemplate">
            <Border Background="{StaticResource PanelBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Margin="8,4"
                    Padding="12">
                <StackPanel>
                    <!-- Title and Description -->
                    <TextBlock Text="{Binding Title}"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource BrightForegroundBrush}"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding Description}"
                               FontSize="11"
                               Foreground="{StaticResource SecondaryForegroundBrush}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>

                    <!-- Code Snippet -->
                    <Border Background="{StaticResource CodeBackgroundBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="10,8"
                            Margin="0,0,0,10">
                        <TextBlock Text="{Binding Code}"
                                   FontFamily="JetBrains Mono, Cascadia Code, Consolas, Courier New"
                                   FontSize="11"
                                   Foreground="{StaticResource ForegroundBrush}"
                                   TextWrapping="Wrap"/>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="&#9654; Run"
                                Style="{StaticResource RunExampleButtonStyle}"
                                Tag="{Binding}"
                                Click="OnRunClick"
                                ToolTip="Run this example"
                                Margin="0,0,6,0"/>
                        <Button Content="&#128203; Copy"
                                Style="{StaticResource ExampleActionButtonStyle}"
                                Tag="{Binding}"
                                Click="OnCopyClick"
                                ToolTip="Copy code to clipboard"
                                Margin="0,0,6,0"/>
                        <Button Content="&#10149; Insert"
                                Style="{StaticResource ExampleActionButtonStyle}"
                                Tag="{Binding}"
                                Click="OnInsertClick"
                                ToolTip="Insert at cursor position"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Search Box -->
            <RowDefinition Height="Auto"/>
            <!-- Content -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource PanelBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="&#128218;"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Learn"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource BrightForegroundBrush}"/>
                    <TextBlock Text="Code examples and tutorials"
                               FontSize="10"
                               Foreground="{StaticResource SecondaryForegroundBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Search Box -->
        <Border Grid.Row="1"
                Padding="12,8">
            <TextBox x:Name="SearchTextBox"
                     Style="{StaticResource SearchTextBoxStyle}"
                     TextChanged="OnSearchTextChanged"/>
        </Border>

        <!-- Categories and Examples -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel x:Name="CategoriesPanel" Margin="0,0,0,12">
                <!-- Getting Started Category -->
                <Expander x:Name="GettingStartedExpander"
                          Style="{StaticResource CategoryExpanderStyle}"
                          Tag="2">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#127919;" Margin="0,0,8,0"/>
                            <TextBlock Text="Getting Started" FontWeight="SemiBold" FontSize="13"/>
                        </StackPanel>
                    </Expander.Header>
                    <ItemsControl x:Name="GettingStartedItems"
                                  ItemTemplate="{StaticResource ExampleCardTemplate}"/>
                </Expander>

                <!-- MIDI Category -->
                <Expander x:Name="MidiExpander"
                          Style="{StaticResource CategoryExpanderStyle}"
                          Tag="2">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#127929;" Margin="0,0,8,0"/>
                            <TextBlock Text="MIDI" FontWeight="SemiBold" FontSize="13"/>
                        </StackPanel>
                    </Expander.Header>
                    <ItemsControl x:Name="MidiItems"
                                  ItemTemplate="{StaticResource ExampleCardTemplate}"/>
                </Expander>

                <!-- VST Plugins Category -->
                <Expander x:Name="VstExpander"
                          Style="{StaticResource CategoryExpanderStyle}"
                          Tag="1">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#128268;" Margin="0,0,8,0"/>
                            <TextBlock Text="VST Plugins" FontWeight="SemiBold" FontSize="13"/>
                        </StackPanel>
                    </Expander.Header>
                    <ItemsControl x:Name="VstItems"
                                  ItemTemplate="{StaticResource ExampleCardTemplate}"/>
                </Expander>

                <!-- Patterns & Sequencing Category -->
                <Expander x:Name="PatternsExpander"
                          Style="{StaticResource CategoryExpanderStyle}"
                          Tag="1">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#127926;" Margin="0,0,8,0"/>
                            <TextBlock Text="Patterns &amp; Sequencing" FontWeight="SemiBold" FontSize="13"/>
                        </StackPanel>
                    </Expander.Header>
                    <ItemsControl x:Name="PatternsItems"
                                  ItemTemplate="{StaticResource ExampleCardTemplate}"/>
                </Expander>

                <!-- Audio Category -->
                <Expander x:Name="AudioExpander"
                          Style="{StaticResource CategoryExpanderStyle}"
                          Tag="0">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#128266;" Margin="0,0,8,0"/>
                            <TextBlock Text="Audio" FontWeight="SemiBold" FontSize="13"/>
                        </StackPanel>
                    </Expander.Header>
                    <ItemsControl x:Name="AudioItems"
                                  ItemTemplate="{StaticResource ExampleCardTemplate}"/>
                </Expander>

                <!-- Advanced Category -->
                <Expander x:Name="AdvancedExpander"
                          Style="{StaticResource CategoryExpanderStyle}"
                          Tag="0">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#128640;" Margin="0,0,8,0"/>
                            <TextBlock Text="Advanced" FontWeight="SemiBold" FontSize="13"/>
                        </StackPanel>
                    </Expander.Header>
                    <ItemsControl x:Name="AdvancedItems"
                                  ItemTemplate="{StaticResource ExampleCardTemplate}"/>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
