<UserControl x:Class="MusicEngineEditor.Controls.TempoDetectionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="350"
             Background="{DynamicResource PanelBackgroundBrush}">

    <UserControl.Resources>
        <!-- Large BPM Display Style -->
        <Style x:Key="BpmDisplayStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource BrightForegroundBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Confidence Bar Style -->
        <Style x:Key="ConfidenceBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="6"/>
            <Setter Property="Background" Value="#1E1F22"/>
            <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="6"
            Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="Tempo Detection"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource BrightForegroundBrush}"
                       Margin="0,0,0,16"/>

            <!-- Large BPM Display -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,8">
                <TextBlock x:Name="BpmDisplay"
                           Text="---"
                           Style="{StaticResource BpmDisplayStyle}"/>
                <TextBlock Text="BPM"
                           FontSize="14"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Confidence Indicator -->
            <Grid Grid.Row="2" Margin="0,8,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Confidence:"
                           FontSize="12"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>

                <ProgressBar Grid.Column="1"
                             x:Name="ConfidenceBar"
                             Style="{StaticResource ConfidenceBarStyle}"
                             Minimum="0"
                             Maximum="100"
                             Value="0"
                             VerticalAlignment="Center"/>

                <TextBlock Grid.Column="2"
                           x:Name="ConfidenceText"
                           Text="0%"
                           FontSize="12"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"
                           MinWidth="35"/>
            </Grid>

            <!-- Tap Tempo Section -->
            <Border Grid.Row="3"
                    Background="{DynamicResource BackgroundBrush}"
                    CornerRadius="4"
                    Padding="12"
                    Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Tap Tempo"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundBrush}"/>
                        <TextBlock x:Name="TapCountText"
                                   Text="0 taps"
                                   FontSize="11"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            x:Name="TapButton"
                            Content="TAP"
                            Click="TapButton_Click"
                            Style="{DynamicResource PrimaryButtonStyle}"
                            Width="80"
                            Padding="0,12"/>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,16">
                <Button x:Name="DetectButton"
                        Content="Detect from Selection"
                        Click="DetectButton_Click"
                        Style="{DynamicResource SecondaryButtonStyle}"
                        Margin="0,0,8,0"/>

                <Button x:Name="ApplyButton"
                        Content="Apply BPM"
                        Click="ApplyButton_Click"
                        Style="{DynamicResource PrimaryButtonStyle}"
                        IsEnabled="False"/>
            </StackPanel>

            <!-- Beat Visualization -->
            <Border Grid.Row="5"
                    Background="{DynamicResource BackgroundBrush}"
                    CornerRadius="4"
                    Margin="0,0,0,8">
                <Canvas x:Name="BeatCanvas"
                        Height="40"
                        ClipToBounds="True"/>
            </Border>

            <!-- Status -->
            <TextBlock Grid.Row="6"
                       x:Name="StatusText"
                       Text="Ready"
                       FontSize="11"
                       Foreground="{DynamicResource SecondaryForegroundBrush}"/>
        </Grid>
    </Border>
</UserControl>
