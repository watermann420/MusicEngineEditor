<UserControl x:Class="MusicEngineEditor.Controls.StretchMarkersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="600"
             Background="#1E1E1E">

    <UserControl.Resources>
        <!-- Marker Colors -->
        <SolidColorBrush x:Key="MarkerNormalBrush" Color="#FF9900"/>
        <SolidColorBrush x:Key="MarkerSelectedBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="MarkerHoverBrush" Color="#FFCC00"/>
        <SolidColorBrush x:Key="StretchRegionBrush" Color="#404CAF50"/>
        <SolidColorBrush x:Key="CompressRegionBrush" Color="#40F44336"/>
        <SolidColorBrush x:Key="WaveformBrush" Color="#4A9EFF"/>
        <SolidColorBrush x:Key="GridBrush" Color="#333333"/>
        <SolidColorBrush x:Key="RulerBrush" Color="#252526"/>

        <!-- Toolbar Button Style -->
        <Style x:Key="StretchToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Button Style -->
        <Style x:Key="StretchToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4B6EAF"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="4" BorderBrush="#3C3C3C" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Actions -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <ToggleButton x:Name="StretchEnabledToggle"
                                  Content="Stretch"
                                  Width="65"
                                  Style="{StaticResource StretchToggleButtonStyle}"
                                  ToolTip="Enable/Disable Time Stretching"
                                  Checked="StretchEnabledToggle_Changed"
                                  Unchecked="StretchEnabledToggle_Changed"/>

                    <Rectangle Width="1" Fill="#555555" Margin="8,2"/>

                    <Button x:Name="AddMarkerBtn"
                            Content="+ Marker"
                            Style="{StaticResource StretchToolbarButtonStyle}"
                            ToolTip="Click on waveform to add stretch marker"
                            Click="AddMarkerBtn_Click"/>

                    <Button x:Name="RemoveMarkerBtn"
                            Content="- Marker"
                            Style="{StaticResource StretchToolbarButtonStyle}"
                            ToolTip="Remove selected marker"
                            Click="RemoveMarkerBtn_Click"
                            IsEnabled="False"/>

                    <Rectangle Width="1" Fill="#555555" Margin="8,2"/>

                    <ToggleButton x:Name="SnapToGridToggle"
                                  Content="Snap"
                                  Style="{StaticResource StretchToggleButtonStyle}"
                                  ToolTip="Snap markers to grid"
                                  IsChecked="True"/>

                    <Button x:Name="ResetAllBtn"
                            Content="Reset"
                            Style="{StaticResource StretchToolbarButtonStyle}"
                            ToolTip="Reset all markers to original positions"
                            Click="ResetAllBtn_Click"/>

                    <Rectangle Width="1" Fill="#555555" Margin="8,2"/>

                    <Button x:Name="PreviewBtn"
                            Content="Preview"
                            Style="{StaticResource StretchToolbarButtonStyle}"
                            ToolTip="Preview stretched audio"
                            Click="PreviewBtn_Click"/>
                </StackPanel>

                <!-- Right: Grid Size and Info -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Grid:"
                               VerticalAlignment="Center"
                               Foreground="#AAAAAA"
                               Margin="8,0,4,0"/>
                    <ComboBox x:Name="GridSizeCombo"
                              Width="70"
                              SelectedIndex="3"
                              SelectionChanged="GridSizeCombo_SelectionChanged">
                        <ComboBoxItem Content="1/4" Tag="1.0"/>
                        <ComboBoxItem Content="1/8" Tag="0.5"/>
                        <ComboBoxItem Content="1/16" Tag="0.25"/>
                        <ComboBoxItem Content="1/32" Tag="0.125"/>
                    </ComboBox>

                    <Rectangle Width="1" Fill="#555555" Margin="8,2"/>

                    <TextBlock x:Name="MarkerInfoText"
                               Text="0 markers"
                               VerticalAlignment="Center"
                               Foreground="#888888"
                               Margin="4,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Time Ruler -->
        <Canvas x:Name="TimeRuler"
                Grid.Row="1"
                Background="{StaticResource RulerBrush}"
                ClipToBounds="True"/>

        <!-- Main Canvas with Waveform and Markers -->
        <Grid Grid.Row="2">
            <!-- Grid Lines Canvas -->
            <Canvas x:Name="GridCanvas"
                    Background="Transparent"
                    IsHitTestVisible="False"/>

            <!-- Stretch Region Visualization -->
            <Canvas x:Name="StretchRegionCanvas"
                    Background="Transparent"
                    IsHitTestVisible="False"/>

            <!-- Waveform Canvas -->
            <Canvas x:Name="WaveformCanvas"
                    Background="Transparent"
                    IsHitTestVisible="False">
                <Path x:Name="WaveformPath"
                      Stroke="{StaticResource WaveformBrush}"
                      StrokeThickness="1"
                      Opacity="0.7"/>
            </Canvas>

            <!-- Markers Canvas (Interactive) -->
            <Canvas x:Name="MarkersCanvas"
                    Background="Transparent"
                    ClipToBounds="True"
                    MouseLeftButtonDown="MarkersCanvas_MouseLeftButtonDown"
                    MouseMove="MarkersCanvas_MouseMove"
                    MouseLeftButtonUp="MarkersCanvas_MouseLeftButtonUp"
                    MouseRightButtonDown="MarkersCanvas_MouseRightButtonDown"/>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3"
                Background="#2D2D30"
                BorderBrush="#3C3C3C"
                BorderThickness="0,1,0,0"
                Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Text -->
                <TextBlock x:Name="StatusText"
                           Grid.Column="0"
                           Text="Ready"
                           Foreground="#888888"
                           FontSize="11"
                           VerticalAlignment="Center"/>

                <!-- Selected Marker Ratio -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="16,0">
                    <TextBlock Text="Stretch Ratio: "
                               Foreground="#888888"
                               FontSize="11"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="StretchRatioText"
                               Text="1.00x"
                               Foreground="#4CAF50"
                               FontWeight="SemiBold"
                               FontSize="11"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Total Duration -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Duration: "
                               Foreground="#888888"
                               FontSize="11"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="DurationText"
                               Text="0:00.000"
                               Foreground="#CCCCCC"
                               FontSize="11"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Context Menu -->
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Add Marker Here" Click="AddMarkerHereMenuItem_Click"/>
                <MenuItem Header="Remove Selected Marker" x:Name="RemoveMarkerMenuItem" Click="RemoveMarkerMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="Reset Marker" x:Name="ResetMarkerMenuItem" Click="ResetMarkerMenuItem_Click"/>
                <MenuItem Header="Reset All Markers" Click="ResetAllMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="Snap to Grid" x:Name="SnapMenuItem" IsCheckable="True" IsChecked="True" Click="SnapMenuItem_Click"/>
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</UserControl>
