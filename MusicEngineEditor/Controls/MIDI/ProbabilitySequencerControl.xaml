<UserControl x:Class="MusicEngineEditor.Controls.MIDI.ProbabilitySequencerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls.MIDI"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="900"
             Background="#0D0D0D"
             Loaded="OnLoaded"
             Unloaded="OnUnloaded">

    <UserControl.Resources>
        <!-- Colors -->
        <Color x:Key="BackgroundColor">#0D0D0D</Color>
        <Color x:Key="PanelColor">#181818</Color>
        <Color x:Key="BorderColor">#2A2A2A</Color>
        <Color x:Key="AccentColor">#00D9FF</Color>
        <Color x:Key="SuccessColor">#00FF88</Color>
        <Color x:Key="TextPrimaryColor">#E0E0E0</Color>
        <Color x:Key="TextSecondaryColor">#808080</Color>
        <Color x:Key="StepActiveColor">#00D9FF</Color>
        <Color x:Key="StepInactiveColor">#1A1A1A</Color>
        <Color x:Key="StepPlayingColor">#00FF88</Color>
        <Color x:Key="DownbeatColor">#252525</Color>
        <Color x:Key="OffbeatColor">#1E1E1E</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="StepActiveBrush" Color="{StaticResource StepActiveColor}"/>
        <SolidColorBrush x:Key="StepInactiveBrush" Color="{StaticResource StepInactiveColor}"/>
        <SolidColorBrush x:Key="StepPlayingBrush" Color="{StaticResource StepPlayingColor}"/>
        <SolidColorBrush x:Key="DownbeatBrush" Color="{StaticResource DownbeatColor}"/>
        <SolidColorBrush x:Key="OffbeatBrush" Color="{StaticResource OffbeatColor}"/>

        <!-- Value Converters -->
        <local:ProbabilitySequencerProbabilityToHeightConverter x:Key="ProbabilityToHeightConverter"/>
        <local:ProbabilitySequencerProbabilityToColorConverter x:Key="ProbabilityToColorConverter"/>
        <local:ProbabilitySequencerConditionToStringConverter x:Key="ConditionToStringConverter"/>
        <local:ProbabilitySequencerRatchetSpeedToStringConverter x:Key="RatchetSpeedToStringConverter"/>
        <local:ProbabilitySequencerBoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:ProbabilitySequencerPercentageConverter x:Key="PercentageConverter"/>

        <!-- Header Toggle Button Style -->
        <Style x:Key="HeaderToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toolbar Button Style -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <!-- Slider Thumb Style -->
        <Style x:Key="ProbabilitySliderThumb" TargetType="Thumb">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="{StaticResource AccentBrush}"
                                CornerRadius="2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Vertical Slider Style for Probability -->
        <Style x:Key="VerticalProbabilitySliderStyle" TargetType="Slider">
            <Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border x:Name="TrackBackground"
                                    Width="4"
                                    Background="{StaticResource PanelBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="2"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ProbabilitySliderThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="{StaticResource BackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Toolbar -->
            <Border Grid.Row="0"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="4,4,0,0"
                    Padding="8,6">
                <DockPanel>
                    <!-- Title -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <TextBlock Text="PROBABILITY SEQUENCER"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="StepCountText"
                                   Text=" (16 steps)"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="11"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Toolbar Controls -->
                    <StackPanel Orientation="Horizontal"
                                DockPanel.Dock="Right"
                                HorizontalAlignment="Right">
                        <!-- Step Count -->
                        <TextBlock Text="Steps:"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   VerticalAlignment="Center"
                                   Margin="0,0,4,0"/>
                        <ComboBox x:Name="StepCountCombo"
                                  Style="{StaticResource DarkComboBoxStyle}"
                                  Width="50"
                                  SelectionChanged="StepCountCombo_SelectionChanged">
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="8"/>
                            <ComboBoxItem Content="16" IsSelected="True"/>
                            <ComboBoxItem Content="32"/>
                            <ComboBoxItem Content="64"/>
                        </ComboBox>

                        <Border Width="1" Background="{StaticResource BorderBrush}" Margin="8,2"/>

                        <!-- Step Length -->
                        <TextBlock Text="Length:"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   VerticalAlignment="Center"
                                   Margin="0,0,4,0"/>
                        <ComboBox x:Name="StepLengthCombo"
                                  Style="{StaticResource DarkComboBoxStyle}"
                                  Width="60"
                                  SelectionChanged="StepLengthCombo_SelectionChanged">
                            <ComboBoxItem Content="1/32" Tag="0.125"/>
                            <ComboBoxItem Content="1/16" Tag="0.25" IsSelected="True"/>
                            <ComboBoxItem Content="1/8" Tag="0.5"/>
                            <ComboBoxItem Content="1/4" Tag="1.0"/>
                        </ComboBox>

                        <Border Width="1" Background="{StaticResource BorderBrush}" Margin="8,2"/>

                        <!-- Fill Mode Toggle -->
                        <ToggleButton x:Name="FillModeToggle"
                                      Content="FILL"
                                      Style="{StaticResource HeaderToggleStyle}"
                                      ToolTip="Enable Fill Mode (triggers Fill-conditioned steps)"
                                      Click="FillModeToggle_Click"/>

                        <Border Width="1" Background="{StaticResource BorderBrush}" Margin="8,2"/>

                        <!-- Randomize -->
                        <Button Content="Randomize"
                                Style="{StaticResource ToolbarButtonStyle}"
                                Click="RandomizeButton_Click"
                                ToolTip="Randomize all probabilities"/>

                        <Button Content="Clear"
                                Style="{StaticResource ToolbarButtonStyle}"
                                Click="ClearButton_Click"
                                ToolTip="Clear all steps"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Main Step Grid Area -->
            <Grid Grid.Row="1" Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Step Number Row -->
                <Canvas x:Name="StepNumbersCanvas"
                        Grid.Row="0"
                        Height="20"
                        Background="Transparent"/>

                <!-- Step Grid with Probability Bars -->
                <Border Grid.Row="1"
                        Background="{StaticResource PanelBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        ClipToBounds="True">
                    <Canvas x:Name="StepGridCanvas"
                            Background="Transparent"
                            MouseLeftButtonDown="StepGridCanvas_MouseLeftButtonDown"
                            MouseRightButtonDown="StepGridCanvas_MouseRightButtonDown"
                            MouseMove="StepGridCanvas_MouseMove"
                            MouseLeftButtonUp="StepGridCanvas_MouseLeftButtonUp"
                            MouseWheel="StepGridCanvas_MouseWheel"/>
                </Border>

                <!-- Probability Value Row -->
                <Canvas x:Name="ProbabilityValuesCanvas"
                        Grid.Row="2"
                        Height="20"
                        Background="Transparent"
                        Margin="0,4,0,0"/>
            </Grid>

            <!-- Step Detail Panel (shown when step is selected) -->
            <Border x:Name="StepDetailPanel"
                    Grid.Row="2"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="12,8"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Step Info -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Step "
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="11"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="SelectedStepText"
                                   Text="1"
                                   Foreground="{StaticResource AccentBrush}"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <Border Grid.Column="1" Width="1" Background="{StaticResource BorderBrush}" Margin="12,2"/>

                    <!-- Probability -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Probability:"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   VerticalAlignment="Center"
                                   Margin="0,0,6,0"/>
                        <Slider x:Name="ProbabilitySlider"
                                Width="100"
                                Minimum="0"
                                Maximum="100"
                                Value="100"
                                VerticalAlignment="Center"
                                ValueChanged="ProbabilitySlider_ValueChanged"/>
                        <TextBlock x:Name="ProbabilityValueText"
                                   Text="100%"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   FontSize="10"
                                   Width="40"
                                   TextAlignment="Right"
                                   VerticalAlignment="Center"
                                   Margin="4,0,0,0"/>
                    </StackPanel>

                    <Border Grid.Column="3" Width="1" Background="{StaticResource BorderBrush}" Margin="12,2"/>

                    <!-- Ratchet -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Ratchet:"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   VerticalAlignment="Center"
                                   Margin="0,0,6,0"/>
                        <ComboBox x:Name="RatchetCountCombo"
                                  Style="{StaticResource DarkComboBoxStyle}"
                                  Width="45"
                                  SelectionChanged="RatchetCountCombo_SelectionChanged"
                                  ToolTip="Number of note repeats within the step">
                            <ComboBoxItem Content="1" IsSelected="True"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="6"/>
                            <ComboBoxItem Content="8"/>
                        </ComboBox>
                        <TextBlock Text="Speed:"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   VerticalAlignment="Center"
                                   Margin="8,0,6,0"/>
                        <ComboBox x:Name="RatchetSpeedCombo"
                                  Style="{StaticResource DarkComboBoxStyle}"
                                  Width="55"
                                  SelectionChanged="RatchetSpeedCombo_SelectionChanged"
                                  ToolTip="Speed of ratchet notes">
                            <ComboBoxItem Content="1/1" Tag="1.0" IsSelected="True"/>
                            <ComboBoxItem Content="1/2" Tag="0.5"/>
                            <ComboBoxItem Content="1/4" Tag="0.25"/>
                            <ComboBoxItem Content="1/8" Tag="0.125"/>
                            <ComboBoxItem Content="1/16" Tag="0.0625"/>
                            <ComboBoxItem Content="1/32" Tag="0.03125"/>
                        </ComboBox>
                    </StackPanel>

                    <Border Grid.Column="5" Width="1" Background="{StaticResource BorderBrush}" Margin="12,2"/>

                    <!-- Condition -->
                    <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Condition:"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   VerticalAlignment="Center"
                                   Margin="0,0,6,0"/>
                        <ComboBox x:Name="ConditionCombo"
                                  Style="{StaticResource DarkComboBoxStyle}"
                                  Width="100"
                                  SelectionChanged="ConditionCombo_SelectionChanged"
                                  ToolTip="Condition for step triggering">
                            <ComboBoxItem Content="Always" Tag="Always" IsSelected="True"/>
                            <ComboBoxItem Content="Every 2nd" Tag="EveryN"/>
                            <ComboBoxItem Content="Every 4th" Tag="EveryN4"/>
                            <ComboBoxItem Content="Random 50%" Tag="Random50"/>
                            <ComboBoxItem Content="Fill Only" Tag="Fill"/>
                            <ComboBoxItem Content="First Only" Tag="FirstOnly"/>
                            <ComboBoxItem Content="Not First" Tag="NotFirst"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Grid.Column="7"
                            Content="X"
                            Style="{StaticResource ToolbarButtonStyle}"
                            Width="24"
                            Click="CloseDetailPanel_Click"
                            ToolTip="Close panel"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
