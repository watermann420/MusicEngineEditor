<UserControl x:Class="MusicEngineEditor.Controls.MIDI.MPEControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls.MIDI"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800"
             Background="#0D0D0D"
             ClipToBounds="True"
             Focusable="True">

    <UserControl.Resources>
        <!-- Theme Colors -->
        <Color x:Key="BackgroundColor">#0D0D0D</Color>
        <Color x:Key="PanelColor">#181818</Color>
        <Color x:Key="AccentColor">#00D9FF</Color>
        <Color x:Key="TextColor">#E0E0E0</Color>
        <Color x:Key="SecondaryTextColor">#808080</Color>
        <Color x:Key="BorderColor">#2A2A2A</Color>
        <Color x:Key="GridLineColor">#252525</Color>
        <Color x:Key="BarLineColor">#3A3A3A</Color>

        <!-- Expression Lane Colors -->
        <Color x:Key="PitchBendColor">#00D9FF</Color>
        <Color x:Key="PressureColor">#FF9800</Color>
        <Color x:Key="SlideColor">#9C27B0</Color>
        <Color x:Key="NoteColor">#00CC66</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="GridLineBrush" Color="{StaticResource GridLineColor}"/>
        <SolidColorBrush x:Key="BarLineBrush" Color="{StaticResource BarLineColor}"/>
        <SolidColorBrush x:Key="PitchBendBrush" Color="{StaticResource PitchBendColor}"/>
        <SolidColorBrush x:Key="PressureBrush" Color="{StaticResource PressureColor}"/>
        <SolidColorBrush x:Key="SlideBrush" Color="{StaticResource SlideColor}"/>
        <SolidColorBrush x:Key="NoteBrush" Color="{StaticResource NoteColor}"/>

        <!-- MPE Zone Toggle Button Style -->
        <Style x:Key="MPEZoneButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- MPE Expression Lane Toggle Style -->
        <Style x:Key="MPELaneToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="Margin" Value="1,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="MinWidth" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3F5A7D"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- MPE Tool Button Style -->
        <Style x:Key="MPEToolButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="1,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3F5A7D"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small Button Style -->
        <Style x:Key="MPESmallButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="MPEComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="MinWidth" Value="60"/>
        </Style>

        <!-- Slider Style for Pitch Bend Range -->
        <Style x:Key="MPESliderStyle" TargetType="Slider">
            <Setter Property="Minimum" Value="1"/>
            <Setter Property="Maximum" Value="96"/>
            <Setter Property="TickFrequency" Value="12"/>
            <Setter Property="IsSnapToTickEnabled" Value="False"/>
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Width" Value="80"/>
        </Style>

        <!-- Converters -->
        <local:MPEPressureToColorConverter x:Key="MPEPressureToColorConverter"/>
        <local:MPEPitchBendToHeightConverter x:Key="MPEPitchBendToHeightConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header / Configuration Panel -->
            <RowDefinition Height="Auto"/>
            <!-- Note Display Area -->
            <RowDefinition Height="*" MinHeight="100"/>
            <!-- Pitch Bend Lane -->
            <RowDefinition Height="80"/>
            <!-- Pressure Lane -->
            <RowDefinition Height="60"/>
            <!-- Slide Lane -->
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Header / Configuration Panel -->
        <Border Grid.Row="0"
                Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- MPE Zone Configuration -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="MPE Zone:"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ToggleButton x:Name="LowerZoneButton"
                                  Style="{StaticResource MPEZoneButtonStyle}"
                                  Content="Lower"
                                  IsChecked="True"
                                  Checked="ZoneButton_Checked"
                                  ToolTip="Lower Zone (Master Ch. 1, Members 2-15)"/>
                    <ToggleButton x:Name="UpperZoneButton"
                                  Style="{StaticResource MPEZoneButtonStyle}"
                                  Content="Upper"
                                  Checked="ZoneButton_Checked"
                                  ToolTip="Upper Zone (Master Ch. 16, Members 1-15)"/>
                    <ToggleButton x:Name="GlobalButton"
                                  Style="{StaticResource MPEZoneButtonStyle}"
                                  Content="Global"
                                  Checked="ZoneButton_Checked"
                                  ToolTip="Global (All 16 channels)"/>

                    <Rectangle Width="1" Fill="{StaticResource BorderBrush}" Margin="12,2"/>

                    <!-- Member Channel Count -->
                    <TextBlock Text="Channels:"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="0,0,6,0"/>
                    <ComboBox x:Name="ChannelCountCombo"
                              Style="{StaticResource MPEComboBoxStyle}"
                              SelectionChanged="ChannelCountCombo_SelectionChanged"
                              ToolTip="Number of member channels">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="4"/>
                        <ComboBoxItem Content="6"/>
                        <ComboBoxItem Content="8"/>
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="12"/>
                        <ComboBoxItem Content="14"/>
                        <ComboBoxItem Content="15" IsSelected="True"/>
                    </ComboBox>
                </StackPanel>

                <!-- Pitch Bend Range Configuration -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                    <Rectangle Width="1" Fill="{StaticResource BorderBrush}" Margin="0,2,12,2"/>

                    <TextBlock Text="Pitch Bend Range:"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="0,0,6,0"/>
                    <Slider x:Name="PitchBendRangeSlider"
                            Style="{StaticResource MPESliderStyle}"
                            Value="48"
                            ValueChanged="PitchBendRangeSlider_ValueChanged"
                            ToolTip="Pitch bend range in semitones"/>
                    <TextBlock x:Name="PitchBendRangeText"
                               Text="48 st"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="11"
                               FontFamily="Consolas"
                               VerticalAlignment="Center"
                               MinWidth="40"
                               Margin="6,0,0,0"/>
                </StackPanel>

                <!-- Right Side: Tools and Status -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Drawing Tools -->
                    <TextBlock Text="Tool:"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="0,0,6,0"/>
                    <RadioButton x:Name="DrawToolButton"
                                 Style="{StaticResource MPEToolButtonStyle}"
                                 Content="Draw"
                                 IsChecked="True"
                                 GroupName="MPETools"
                                 ToolTip="Free draw expression curves"/>
                    <RadioButton x:Name="LineToolButton"
                                 Style="{StaticResource MPEToolButtonStyle}"
                                 Content="Line"
                                 GroupName="MPETools"
                                 ToolTip="Draw straight lines"/>
                    <RadioButton x:Name="EraseToolButton"
                                 Style="{StaticResource MPEToolButtonStyle}"
                                 Content="Erase"
                                 GroupName="MPETools"
                                 ToolTip="Erase expression data"/>

                    <Rectangle Width="1" Fill="{StaticResource BorderBrush}" Margin="12,2"/>

                    <!-- Clear Button -->
                    <Button x:Name="ClearAllButton"
                            Style="{StaticResource MPESmallButtonStyle}"
                            Content="Clear All"
                            Click="ClearAllButton_Click"
                            ToolTip="Clear all expression data"/>

                    <!-- Status -->
                    <TextBlock x:Name="StatusText"
                               Text="Select a note to edit MPE data"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Note Display Area with Per-Note Pitch Bend Curves -->
        <Grid Grid.Row="1" ClipToBounds="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Note Lane Header -->
            <Border Grid.Column="0"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,1,0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Notes"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               FontSize="10"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="+ Pitch"
                               Foreground="{StaticResource PitchBendBrush}"
                               FontSize="9"
                               HorizontalAlignment="Center"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Border>

            <!-- Note Display Canvas -->
            <Grid Grid.Column="1" ClipToBounds="True">
                <!-- Grid Background -->
                <Canvas x:Name="NoteGridCanvas"
                        Background="{StaticResource BackgroundBrush}"
                        ClipToBounds="True"/>

                <!-- Notes with Pitch Bend Curves -->
                <Canvas x:Name="NoteDisplayCanvas"
                        Background="Transparent"
                        ClipToBounds="True"
                        MouseLeftButtonDown="NoteDisplayCanvas_MouseLeftButtonDown"
                        MouseLeftButtonUp="NoteDisplayCanvas_MouseLeftButtonUp"
                        MouseMove="NoteDisplayCanvas_MouseMove"
                        MouseLeave="NoteDisplayCanvas_MouseLeave"/>

                <!-- Per-Note Pitch Bend Curves Overlay -->
                <Canvas x:Name="PitchBendCurvesCanvas"
                        Background="Transparent"
                        ClipToBounds="True"
                        IsHitTestVisible="False"/>

                <!-- Selected Note Highlight -->
                <Canvas x:Name="SelectionOverlayCanvas"
                        Background="Transparent"
                        ClipToBounds="True"
                        IsHitTestVisible="False"/>

                <!-- Value Tooltip -->
                <Border x:Name="NoteTooltip"
                        Background="#E0181818"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="3"
                        Padding="6,3"
                        Visibility="Collapsed"
                        IsHitTestVisible="False"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                    <TextBlock x:Name="NoteTooltipText"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="10"
                               FontFamily="Consolas"/>
                </Border>
            </Grid>
        </Grid>

        <!-- Pitch Bend Lane -->
        <Grid Grid.Row="2" ClipToBounds="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lane Header -->
            <Border Grid.Column="0"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="+8192"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               FontSize="8"
                               HorizontalAlignment="Right"
                               Margin="0,2,4,0"/>

                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Pitch"
                                   Foreground="{StaticResource PitchBendBrush}"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Bend"
                                   Foreground="{StaticResource PitchBendBrush}"
                                   FontSize="10"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Grid.Row="2" Text="-8192"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               FontSize="8"
                               HorizontalAlignment="Right"
                               Margin="0,0,4,2"/>
                </Grid>
            </Border>

            <!-- Pitch Bend Canvas -->
            <Grid Grid.Column="1" ClipToBounds="True">
                <Canvas x:Name="PitchBendGridCanvas"
                        Background="#1A1A1A"
                        ClipToBounds="True"/>
                <Canvas x:Name="PitchBendCurveCanvas"
                        Background="Transparent"
                        ClipToBounds="True"
                        MouseLeftButtonDown="PitchBendCanvas_MouseLeftButtonDown"
                        MouseLeftButtonUp="ExpressionCanvas_MouseLeftButtonUp"
                        MouseMove="PitchBendCanvas_MouseMove"
                        MouseLeave="ExpressionCanvas_MouseLeave"/>
                <Line x:Name="PitchBendCenterLine"
                      Stroke="{StaticResource BarLineBrush}"
                      StrokeThickness="1"
                      StrokeDashArray="4,2"
                      Y1="40" Y2="40"
                      IsHitTestVisible="False"/>
                <Border x:Name="PitchBendTooltip"
                        Background="#E0181818"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="3"
                        Padding="4,2"
                        Visibility="Collapsed"
                        IsHitTestVisible="False"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                    <TextBlock x:Name="PitchBendTooltipText"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="10"
                               FontFamily="Consolas"/>
                </Border>
            </Grid>
        </Grid>

        <!-- Pressure/Aftertouch Lane -->
        <Grid Grid.Row="3" ClipToBounds="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lane Header -->
            <Border Grid.Column="0"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="127"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               FontSize="8"
                               HorizontalAlignment="Right"
                               Margin="0,2,4,0"/>

                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Pressure"
                                   Foreground="{StaticResource PressureBrush}"
                                   FontSize="9"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Grid.Row="2" Text="0"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               FontSize="8"
                               HorizontalAlignment="Right"
                               Margin="0,0,4,2"/>
                </Grid>
            </Border>

            <!-- Pressure Canvas -->
            <Grid Grid.Column="1" ClipToBounds="True">
                <Canvas x:Name="PressureGridCanvas"
                        Background="#1A1A1A"
                        ClipToBounds="True"/>
                <Canvas x:Name="PressureCurveCanvas"
                        Background="Transparent"
                        ClipToBounds="True"
                        MouseLeftButtonDown="PressureCanvas_MouseLeftButtonDown"
                        MouseLeftButtonUp="ExpressionCanvas_MouseLeftButtonUp"
                        MouseMove="PressureCanvas_MouseMove"
                        MouseLeave="ExpressionCanvas_MouseLeave"/>
                <Border x:Name="PressureTooltip"
                        Background="#E0181818"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="3"
                        Padding="4,2"
                        Visibility="Collapsed"
                        IsHitTestVisible="False"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                    <TextBlock x:Name="PressureTooltipText"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="10"
                               FontFamily="Consolas"/>
                </Border>
            </Grid>
        </Grid>

        <!-- Slide/Timbre Lane -->
        <Grid Grid.Row="4" ClipToBounds="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lane Header -->
            <Border Grid.Column="0"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,1,1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="127"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               FontSize="8"
                               HorizontalAlignment="Right"
                               Margin="0,2,4,0"/>

                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Slide"
                                   Foreground="{StaticResource SlideBrush}"
                                   FontSize="9"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="(CC74)"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   FontSize="8"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Grid.Row="2" Text="0"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               FontSize="8"
                               HorizontalAlignment="Right"
                               Margin="0,0,4,2"/>
                </Grid>
            </Border>

            <!-- Slide Canvas -->
            <Grid Grid.Column="1" ClipToBounds="True">
                <Canvas x:Name="SlideGridCanvas"
                        Background="#1A1A1A"
                        ClipToBounds="True"/>
                <Canvas x:Name="SlideCurveCanvas"
                        Background="Transparent"
                        ClipToBounds="True"
                        MouseLeftButtonDown="SlideCanvas_MouseLeftButtonDown"
                        MouseLeftButtonUp="ExpressionCanvas_MouseLeftButtonUp"
                        MouseMove="SlideCanvas_MouseMove"
                        MouseLeave="ExpressionCanvas_MouseLeave"/>
                <Border x:Name="SlideTooltip"
                        Background="#E0181818"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="3"
                        Padding="4,2"
                        Visibility="Collapsed"
                        IsHitTestVisible="False"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                    <TextBlock x:Name="SlideTooltipText"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="10"
                               FontFamily="Consolas"/>
                </Border>
            </Grid>
        </Grid>

        <!-- Grid Splitters for resizable lanes -->
        <GridSplitter Grid.Row="1" Height="4" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                      Background="Transparent" ShowsPreview="True" ResizeDirection="Rows"/>
        <GridSplitter Grid.Row="2" Height="4" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                      Background="Transparent" ShowsPreview="True" ResizeDirection="Rows"/>
        <GridSplitter Grid.Row="3" Height="4" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                      Background="Transparent" ShowsPreview="True" ResizeDirection="Rows"/>
    </Grid>
</UserControl>
