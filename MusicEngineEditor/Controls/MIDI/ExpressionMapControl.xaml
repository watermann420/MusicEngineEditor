<UserControl x:Class="MusicEngineEditor.Controls.MIDI.ExpressionMapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls.MIDI"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800"
             Background="#0D0D0D">

    <UserControl.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0D0D0D"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#181818"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#808080"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#00D9FF"/>
        <SolidColorBrush x:Key="KeyswitchBrush" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="CCBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="ProgramChangeBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="VelocityBrush" Color="#EC4899"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#22C55E"/>

        <!-- Converters -->
        <local:ExpressionMapOutputActionToStringConverter x:Key="ExpressionMapOutputActionConverter"/>
        <local:ExpressionMapTriggerTypeToVisibilityConverter x:Key="ExpressionMapTriggerVisibilityConverter"/>
        <local:ExpressionMapNoteToStringConverter x:Key="ExpressionMapNoteConverter"/>
        <local:ExpressionMapArticulationTypeToBrushConverter x:Key="ExpressionMapTypeBrushConverter"/>

        <!-- Tool Button Style -->
        <Style x:Key="ToolButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="#0D0D0D"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#404040"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Accent Button Style -->
        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource ToolButton}">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="#0D0D0D"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#33E5FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00B8D9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListBox Item Style -->
        <Style x:Key="ArticulationListItem" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E3A5F"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2,0,0,1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#202020"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="EditorTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="CaretBrush" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="SelectionBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="EditorComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="EditorCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="checkBorder"
                                    Width="18" Height="18"
                                    Background="#1E1E1E"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Margin="0,0,8,0">
                                <Path x:Name="checkMark"
                                      Data="M 2,5 L 5,8 L 10,2"
                                      Stroke="{StaticResource AccentBrush}"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBorder" Property="Background" Value="#252525"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GroupBox Style -->
        <Style x:Key="EditorGroupBox" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0"
                                    Background="{StaticResource PanelBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1,1,1,0"
                                    CornerRadius="4,4,0,0"
                                    Padding="12,8">
                                <TextBlock Text="{TemplateBinding Header}"
                                           Foreground="{StaticResource AccentBrush}"
                                           FontWeight="SemiBold"
                                           FontSize="12"/>
                            </Border>
                            <Border Grid.Row="1"
                                    Background="{StaticResource PanelBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1,0,1,1"
                                    CornerRadius="0,0,4,4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Slider Style -->
        <Style x:Key="EditorSlider" TargetType="Slider">
            <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header / Toolbar -->
        <Border Grid.Row="0"
                Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Expression Map Editor"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource AccentBrush}"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="MapNameText"
                               Text=" - Untitled"
                               FontSize="14"
                               Foreground="{StaticResource SecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="4,0,0,0"/>
                    <Border x:Name="ModifiedIndicator"
                            Background="{StaticResource CCBrush}"
                            CornerRadius="4"
                            Padding="6,2"
                            Margin="8,0,0,0"
                            Visibility="Collapsed">
                        <TextBlock Text="Modified"
                                   FontSize="10"
                                   Foreground="#0D0D0D"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="New"
                            Style="{StaticResource ToolButton}"
                            Click="New_Click"
                            ToolTip="Create new expression map"/>
                    <Button Content="Import"
                            Style="{StaticResource ToolButton}"
                            Click="Import_Click"
                            ToolTip="Import expression map from file"/>
                    <Button Content="Export"
                            Style="{StaticResource ToolButton}"
                            Click="Export_Click"
                            ToolTip="Export expression map to file"/>
                    <Rectangle Width="1" Fill="{StaticResource BorderBrush}" Margin="8,4"/>
                    <Button Content="Add Preset"
                            Style="{StaticResource ToolButton}"
                            Click="AddPreset_Click"
                            ToolTip="Add articulations from preset"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Articulation List -->
            <Border Grid.Column="0"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Map Properties -->
                    <Border Grid.Row="0"
                            Background="#141414"
                            Padding="12,10"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <StackPanel>
                            <TextBlock Text="Map Name"
                                       Foreground="{StaticResource SecondaryBrush}"
                                       FontSize="11"
                                       Margin="0,0,0,4"/>
                            <TextBox x:Name="MapNameTextBox"
                                     Style="{StaticResource EditorTextBox}"
                                     Text="Untitled"
                                     TextChanged="MapName_TextChanged"/>
                            <TextBlock Text="Instrument"
                                       Foreground="{StaticResource SecondaryBrush}"
                                       FontSize="11"
                                       Margin="0,10,0,4"/>
                            <TextBox x:Name="InstrumentNameTextBox"
                                     Style="{StaticResource EditorTextBox}"
                                     TextChanged="InstrumentName_TextChanged"/>
                        </StackPanel>
                    </Border>

                    <!-- Search -->
                    <Border Grid.Row="1" Padding="12,8">
                        <Grid>
                            <TextBox x:Name="SearchBox"
                                     Style="{StaticResource EditorTextBox}"
                                     TextChanged="Search_TextChanged"/>
                            <TextBlock Text="Search articulations..."
                                       Foreground="{StaticResource SecondaryBrush}"
                                       FontStyle="Italic"
                                       VerticalAlignment="Center"
                                       Margin="12,0,0,0"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- Articulation List -->
                    <ListBox x:Name="ArticulationList"
                             Grid.Row="2"
                             Background="Transparent"
                             BorderThickness="0"
                             ItemContainerStyle="{StaticResource ArticulationListItem}"
                             SelectionChanged="ArticulationList_SelectionChanged"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Color indicator -->
                                    <Border Grid.Column="0"
                                            Width="4"
                                            CornerRadius="2"
                                            Margin="0,0,10,0"
                                            Background="{Binding DisplayColorBrush}"/>

                                    <!-- Name and trigger info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold"
                                                   FontSize="13"
                                                   Foreground="{StaticResource ForegroundBrush}"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                            <TextBlock Text="{Binding TriggerDisplayText}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource SecondaryBrush}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Type badge -->
                                    <Border Grid.Column="2"
                                            Background="{Binding Type, Converter={StaticResource ExpressionMapTypeBrushConverter}}"
                                            CornerRadius="3"
                                            Padding="8,4"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{Binding TypeShortName}"
                                                   FontSize="10"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Add/Remove Buttons -->
                    <Border Grid.Row="3"
                            Background="#141414"
                            Padding="8"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="+"
                                    Style="{StaticResource AccentButton}"
                                    Click="AddArticulation_Click"
                                    ToolTip="Add articulation"
                                    FontSize="14" FontWeight="Bold"
                                    Margin="2"/>
                            <Button Grid.Column="1" Content="-"
                                    Style="{StaticResource ToolButton}"
                                    Click="RemoveArticulation_Click"
                                    ToolTip="Remove articulation"
                                    FontSize="14" FontWeight="Bold"
                                    Margin="2"/>
                            <Button Grid.Column="2" Content="Copy"
                                    Style="{StaticResource ToolButton}"
                                    Click="DuplicateArticulation_Click"
                                    ToolTip="Duplicate articulation"
                                    FontSize="11"
                                    Margin="2"/>
                            <Button Grid.Column="3" Content="Move"
                                    Style="{StaticResource ToolButton}"
                                    Click="MoveArticulation_Click"
                                    ToolTip="Move up/down"
                                    FontSize="11"
                                    Margin="2">
                                <Button.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Move Up" Click="MoveUp_Click"/>
                                        <MenuItem Header="Move Down" Click="MoveDown_Click"/>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Right Panel: Articulation Editor -->
            <ScrollViewer Grid.Column="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="16">
                <StackPanel x:Name="EditorPanel" Visibility="Collapsed" MaxWidth="500">
                    <!-- Articulation Name -->
                    <TextBlock Text="Articulation Name"
                               Foreground="{StaticResource SecondaryBrush}"
                               FontSize="11"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="ArticulationNameTextBox"
                             Style="{StaticResource EditorTextBox}"
                             TextChanged="ArticulationName_TextChanged"
                             FontSize="14"
                             Margin="0,0,0,20"/>

                    <!-- Articulation Type -->
                    <TextBlock Text="Articulation Type"
                               Foreground="{StaticResource SecondaryBrush}"
                               FontSize="11"
                               Margin="0,0,0,6"/>
                    <ComboBox x:Name="ArticulationTypeCombo"
                              Style="{StaticResource EditorComboBox}"
                              SelectionChanged="ArticulationType_SelectionChanged"
                              Margin="0,0,0,20"/>

                    <!-- Trigger Settings -->
                    <GroupBox Header="TRIGGER SETTINGS" Style="{StaticResource EditorGroupBox}" Margin="0,0,0,16">
                        <StackPanel>
                            <!-- Trigger Type Selection -->
                            <TextBlock Text="Trigger Type"
                                       Foreground="{StaticResource SecondaryBrush}"
                                       FontSize="11"
                                       Margin="0,0,0,6"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <RadioButton x:Name="TriggerKeyswitch" Content="Keyswitch"
                                             Foreground="{StaticResource ForegroundBrush}"
                                             GroupName="TriggerType"
                                             IsChecked="True"
                                             Checked="TriggerType_Changed"
                                             Margin="0,0,16,0"/>
                                <RadioButton x:Name="TriggerCC" Content="CC"
                                             Foreground="{StaticResource ForegroundBrush}"
                                             GroupName="TriggerType"
                                             Checked="TriggerType_Changed"
                                             Margin="0,0,16,0"/>
                                <RadioButton x:Name="TriggerProgramChange" Content="Program Change"
                                             Foreground="{StaticResource ForegroundBrush}"
                                             GroupName="TriggerType"
                                             Checked="TriggerType_Changed"
                                             Margin="0,0,16,0"/>
                                <RadioButton x:Name="TriggerVelocity" Content="Velocity"
                                             Foreground="{StaticResource ForegroundBrush}"
                                             GroupName="TriggerType"
                                             Checked="TriggerType_Changed"/>
                            </StackPanel>

                            <!-- Keyswitch Settings -->
                            <StackPanel x:Name="KeyswitchPanel">
                                <TextBlock Text="Keyswitch Note"
                                           Foreground="{StaticResource SecondaryBrush}"
                                           FontSize="11"
                                           Margin="0,0,0,6"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox x:Name="KeyswitchNoteCombo"
                                              Grid.Column="0"
                                              Style="{StaticResource EditorComboBox}"
                                              SelectionChanged="KeyswitchNote_SelectionChanged"/>
                                    <Button x:Name="LearnButton"
                                            Grid.Column="1"
                                            Content="Learn"
                                            Style="{StaticResource AccentButton}"
                                            Click="Learn_Click"
                                            Margin="8,0,0,0"
                                            Width="70"/>
                                    <Border x:Name="LearnIndicator"
                                            Grid.Column="2"
                                            Background="{StaticResource ErrorBrush}"
                                            CornerRadius="10"
                                            Width="20" Height="20"
                                            Margin="8,0,0,0"
                                            Visibility="Collapsed">
                                        <Ellipse Width="8" Height="8" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </StackPanel>

                            <!-- CC Settings -->
                            <StackPanel x:Name="CCPanel" Visibility="Collapsed" Margin="0,12,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                        <TextBlock Text="CC Number"
                                                   Foreground="{StaticResource SecondaryBrush}"
                                                   FontSize="11"
                                                   Margin="0,0,0,6"/>
                                        <ComboBox x:Name="CCNumberCombo"
                                                  Style="{StaticResource EditorComboBox}"
                                                  SelectionChanged="CCNumber_SelectionChanged"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                        <TextBlock Text="CC Value"
                                                   Foreground="{StaticResource SecondaryBrush}"
                                                   FontSize="11"
                                                   Margin="0,0,0,6"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>
                                            <Slider x:Name="CCValueSlider"
                                                    Grid.Column="0"
                                                    Minimum="0" Maximum="127"
                                                    Style="{StaticResource EditorSlider}"
                                                    ValueChanged="CCValue_Changed"
                                                    VerticalAlignment="Center"/>
                                            <TextBox x:Name="CCValueTextBox"
                                                     Grid.Column="1"
                                                     Style="{StaticResource EditorTextBox}"
                                                     TextChanged="CCValueText_Changed"
                                                     Margin="8,0,0,0"/>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <!-- Program Change Settings -->
                            <StackPanel x:Name="ProgramChangePanel" Visibility="Collapsed" Margin="0,12,0,0">
                                <TextBlock Text="Program Number (0-127)"
                                           Foreground="{StaticResource SecondaryBrush}"
                                           FontSize="11"
                                           Margin="0,0,0,6"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="ProgramChangeSlider"
                                            Grid.Column="0"
                                            Minimum="0" Maximum="127"
                                            Style="{StaticResource EditorSlider}"
                                            ValueChanged="ProgramChange_Changed"
                                            VerticalAlignment="Center"/>
                                    <TextBox x:Name="ProgramChangeTextBox"
                                             Grid.Column="1"
                                             Style="{StaticResource EditorTextBox}"
                                             TextChanged="ProgramChangeText_Changed"
                                             Margin="8,0,0,0"/>
                                </Grid>
                            </StackPanel>

                            <!-- Velocity Settings -->
                            <StackPanel x:Name="VelocityPanel" Visibility="Collapsed" Margin="0,12,0,0">
                                <TextBlock Text="Velocity Range"
                                           Foreground="{StaticResource SecondaryBrush}"
                                           FontSize="11"
                                           Margin="0,0,0,6"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Min" Foreground="{StaticResource SecondaryBrush}" FontSize="10"/>
                                        <TextBox x:Name="VelocityMinTextBox"
                                                 Style="{StaticResource EditorTextBox}"
                                                 Text="1"
                                                 TextChanged="VelocityMin_Changed"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="-"
                                               Foreground="{StaticResource SecondaryBrush}"
                                               VerticalAlignment="Bottom"
                                               Margin="10,0"/>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Max" Foreground="{StaticResource SecondaryBrush}" FontSize="10"/>
                                        <TextBox x:Name="VelocityMaxTextBox"
                                                 Style="{StaticResource EditorTextBox}"
                                                 Text="127"
                                                 TextChanged="VelocityMax_Changed"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <!-- MIDI Channel -->
                            <StackPanel Margin="0,16,0,0">
                                <TextBlock Text="MIDI Channel"
                                           Foreground="{StaticResource SecondaryBrush}"
                                           FontSize="11"
                                           Margin="0,0,0,6"/>
                                <ComboBox x:Name="ChannelComboBox"
                                          Style="{StaticResource EditorComboBox}"
                                          SelectionChanged="Channel_SelectionChanged"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- Output Action Settings -->
                    <GroupBox Header="OUTPUT ACTION" Style="{StaticResource EditorGroupBox}" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="When this articulation is triggered, send:"
                                       Foreground="{StaticResource SecondaryBrush}"
                                       FontSize="11"
                                       Margin="0,0,0,12"/>

                            <!-- Output Type Selection -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <CheckBox x:Name="OutputKeyswitchCheck"
                                          Content="Keyswitch Note"
                                          Style="{StaticResource EditorCheckBox}"
                                          IsChecked="True"
                                          Checked="OutputKeyswitch_Changed"
                                          Unchecked="OutputKeyswitch_Changed"
                                          Margin="0,0,20,0"/>
                                <CheckBox x:Name="OutputCCCheck"
                                          Content="CC Message"
                                          Style="{StaticResource EditorCheckBox}"
                                          Checked="OutputCC_Changed"
                                          Unchecked="OutputCC_Changed"
                                          Margin="0,0,20,0"/>
                                <CheckBox x:Name="OutputProgramChangeCheck"
                                          Content="Program Change"
                                          Style="{StaticResource EditorCheckBox}"
                                          Checked="OutputProgramChange_Changed"
                                          Unchecked="OutputProgramChange_Changed"/>
                            </StackPanel>

                            <!-- Output Keyswitch Settings -->
                            <StackPanel x:Name="OutputKeyswitchPanel" Margin="0,0,0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Output Note"
                                                   Foreground="{StaticResource SecondaryBrush}"
                                                   FontSize="11"
                                                   Margin="0,0,0,4"/>
                                        <ComboBox x:Name="OutputNoteCombo"
                                                  Style="{StaticResource EditorComboBox}"
                                                  SelectionChanged="OutputNote_SelectionChanged"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                        <TextBlock Text="Velocity"
                                                   Foreground="{StaticResource SecondaryBrush}"
                                                   FontSize="11"
                                                   Margin="0,0,0,4"/>
                                        <TextBox x:Name="OutputVelocityTextBox"
                                                 Style="{StaticResource EditorTextBox}"
                                                 Text="100"
                                                 TextChanged="OutputVelocity_Changed"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <!-- Sustain Option -->
                            <CheckBox x:Name="SustainCheck"
                                      Content="Sustain (hold keyswitch while playing)"
                                      Style="{StaticResource EditorCheckBox}"
                                      Checked="Sustain_Changed"
                                      Unchecked="Sustain_Changed"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Display Settings -->
                    <GroupBox Header="DISPLAY SETTINGS" Style="{StaticResource EditorGroupBox}">
                        <StackPanel>
                            <!-- Color -->
                            <TextBlock Text="Display Color"
                                       Foreground="{StaticResource SecondaryBrush}"
                                       FontSize="11"
                                       Margin="0,0,0,6"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <Border x:Name="ColorPreview"
                                        Width="36" Height="36"
                                        Background="{StaticResource AccentBrush}"
                                        CornerRadius="4"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1"/>
                                <ItemsControl x:Name="ColorPalette" Margin="12,0,0,0">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="28" Height="28"
                                                    Background="{Binding}"
                                                    CornerRadius="4"
                                                    Margin="2"
                                                    Cursor="Hand"
                                                    MouseLeftButtonDown="ColorPalette_Click">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="BorderThickness" Value="2"/>
                                                                <Setter Property="BorderBrush" Value="White"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Show in Lane -->
                            <CheckBox x:Name="ShowInLaneCheck"
                                      Content="Show in articulation lane"
                                      Style="{StaticResource EditorCheckBox}"
                                      IsChecked="True"
                                      Checked="ShowInLane_Changed"
                                      Unchecked="ShowInLane_Changed"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Empty State -->
            <StackPanel x:Name="EmptyStatePanel"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="No Articulation Selected"
                           FontSize="18"
                           Foreground="{StaticResource SecondaryBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Select an articulation from the list or add a new one"
                           FontSize="12"
                           Foreground="#606060"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,16"/>
                <Button Content="+ Add Articulation"
                        Style="{StaticResource AccentButton}"
                        Click="AddArticulation_Click"
                        HorizontalAlignment="Center"
                        Padding="16,8"/>
            </StackPanel>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText"
                           Grid.Column="0"
                           Text="Ready"
                           Foreground="{StaticResource SecondaryBrush}"
                           FontSize="11"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="ArticulationCountText"
                           Grid.Column="1"
                           Text="0 articulations"
                           Foreground="{StaticResource SecondaryBrush}"
                           FontSize="11"
                           VerticalAlignment="Center"
                           Margin="0,0,16,0"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Border x:Name="LearnModeIndicator"
                            Background="{StaticResource ErrorBrush}"
                            CornerRadius="3"
                            Padding="8,3"
                            Visibility="Collapsed">
                        <TextBlock Text="LEARN MODE"
                                   FontSize="10"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
