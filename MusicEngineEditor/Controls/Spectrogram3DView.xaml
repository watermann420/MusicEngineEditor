<UserControl x:Class="MusicEngineEditor.Controls.Spectrogram3DView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="500"
             Background="#1E1F22"
             MinHeight="150"
             MinWidth="200">

    <UserControl.Resources>
        <!-- Dark theme colors -->
        <Color x:Key="BackgroundColor">#1E1F22</Color>
        <Color x:Key="GridColor">#2B2D30</Color>
        <Color x:Key="BorderColor">#393B40</Color>
        <Color x:Key="TextColor">#6F737A</Color>
        <Color x:Key="AxisColor">#4A4D52</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="GridBrush" Color="{StaticResource GridColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="AxisBrush" Color="{StaticResource AxisColor}"/>

        <!-- Color gradient for spectrum (blue to red) -->
        <LinearGradientBrush x:Key="SpectrumGradientBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#000040" Offset="0.0"/>
            <GradientStop Color="#0000FF" Offset="0.2"/>
            <GradientStop Color="#00FFFF" Offset="0.4"/>
            <GradientStop Color="#00FF00" Offset="0.5"/>
            <GradientStop Color="#FFFF00" Offset="0.7"/>
            <GradientStop Color="#FF8000" Offset="0.85"/>
            <GradientStop Color="#FF0000" Offset="1.0"/>
        </LinearGradientBrush>

        <!-- Button Style -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Slider Style -->
        <Style x:Key="ControlSliderStyle" TargetType="Slider">
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
            <Setter Property="Height" Value="18"/>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Background="{StaticResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with controls -->
            <Border Grid.Row="0"
                    Background="#2B2D30"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="10,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="3D Spectrogram"
                               FontWeight="SemiBold"
                               FontSize="12"
                               Foreground="{DynamicResource BrightForegroundBrush}"
                               VerticalAlignment="Center"/>

                    <!-- View Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Zoom:"
                                   FontSize="10"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,6,0"/>
                        <Slider x:Name="ZoomSlider"
                                Width="80"
                                Minimum="0.5"
                                Maximum="3.0"
                                Value="1.0"
                                ValueChanged="ZoomSlider_ValueChanged"
                                VerticalAlignment="Center"/>

                        <TextBlock Text="Rotate:"
                                   FontSize="10"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="12,0,6,0"/>
                        <Slider x:Name="RotateSlider"
                                Width="80"
                                Minimum="-45"
                                Maximum="45"
                                Value="20"
                                ValueChanged="RotateSlider_ValueChanged"
                                VerticalAlignment="Center"/>

                        <Button x:Name="ResetViewButton"
                                Style="{StaticResource ControlButtonStyle}"
                                Content="Reset"
                                Click="ResetViewButton_Click"
                                Margin="12,0,0,0"
                                ToolTip="Reset view to default"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 3D Spectrogram Display -->
            <Grid Grid.Row="1" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Frequency labels -->
                <Canvas x:Name="FrequencyLabelsCanvas"
                        Grid.Column="0"
                        Width="40"
                        Background="Transparent"/>

                <!-- Main display area -->
                <Border Grid.Column="1"
                        Background="#1A1A1A"
                        CornerRadius="3"
                        BorderBrush="#3A3A3A"
                        BorderThickness="1">
                    <Grid ClipToBounds="True">
                        <!-- Grid overlay -->
                        <Canvas x:Name="GridCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Waterfall bitmap display -->
                        <Image x:Name="SpectrogramImage"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"
                               Stretch="Fill"
                               MouseWheel="SpectrogramImage_MouseWheel"
                               MouseLeftButtonDown="SpectrogramImage_MouseLeftButtonDown"
                               MouseMove="SpectrogramImage_MouseMove"
                               MouseLeftButtonUp="SpectrogramImage_MouseLeftButtonUp"/>

                        <!-- Peak markers overlay -->
                        <Canvas x:Name="PeakMarkersCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Time axis and scroll -->
            <Grid Grid.Row="2" Margin="48,0,8,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Time labels -->
                <Canvas x:Name="TimeLabelsCanvas"
                        Grid.Column="0"
                        Height="16"
                        Background="Transparent"/>

                <!-- Scroll control -->
                <Button x:Name="ScrollLeftButton"
                        Grid.Column="1"
                        Style="{StaticResource ControlButtonStyle}"
                        Content="&lt;"
                        Width="24"
                        Click="ScrollLeftButton_Click"
                        Margin="4,0,0,0"
                        ToolTip="Scroll left"/>
            </Grid>

            <!-- Color gradient legend -->
            <Border Grid.Row="3"
                    Margin="48,0,8,8"
                    Height="20"
                    CornerRadius="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="-80 dB"
                               FontSize="9"
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,6,0"/>

                    <Border Grid.Column="1"
                            Background="{StaticResource SpectrumGradientBrush}"
                            CornerRadius="2"
                            Height="12"/>

                    <TextBlock Grid.Column="2"
                               Text="0 dB"
                               FontSize="9"
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"
                               Margin="6,0,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
