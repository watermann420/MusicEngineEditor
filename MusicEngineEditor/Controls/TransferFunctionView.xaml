<UserControl x:Class="MusicEngineEditor.Controls.TransferFunctionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="250" d:DesignWidth="500"
             Background="#1E1F22"
             MinHeight="120"
             MinWidth="250">

    <UserControl.Resources>
        <!-- Dark theme colors -->
        <Color x:Key="BackgroundColor">#1E1F22</Color>
        <Color x:Key="GridColor">#2B2D30</Color>
        <Color x:Key="BorderColor">#393B40</Color>
        <Color x:Key="TextColor">#6F737A</Color>
        <Color x:Key="BeforeCurveColor">#4CAF50</Color>
        <Color x:Key="AfterCurveColor">#00CED1</Color>
        <Color x:Key="PhaseCurveColor">#FF9800</Color>
        <Color x:Key="UnityLineColor">#5A5A5A</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="GridBrush" Color="{StaticResource GridColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="BeforeCurveBrush" Color="{StaticResource BeforeCurveColor}"/>
        <SolidColorBrush x:Key="AfterCurveBrush" Color="{StaticResource AfterCurveColor}"/>
        <SolidColorBrush x:Key="PhaseCurveBrush" Color="{StaticResource PhaseCurveColor}"/>
        <SolidColorBrush x:Key="UnityLineBrush" Color="{StaticResource UnityLineColor}"/>

        <!-- Button Style -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Button Style -->
        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B6EAF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Background="{StaticResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#2B2D30"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="10,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Transfer Function"
                               FontWeight="SemiBold"
                               FontSize="12"
                               Foreground="{DynamicResource BrightForegroundBrush}"
                               VerticalAlignment="Center"/>

                    <!-- Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <ToggleButton x:Name="ShowBeforeToggle"
                                      Style="{StaticResource ToggleButtonStyle}"
                                      Content="Before"
                                      IsChecked="True"
                                      Checked="ShowBeforeToggle_Changed"
                                      Unchecked="ShowBeforeToggle_Changed"
                                      ToolTip="Show input curve"
                                      Margin="0,0,4,0"/>

                        <ToggleButton x:Name="ShowAfterToggle"
                                      Style="{StaticResource ToggleButtonStyle}"
                                      Content="After"
                                      IsChecked="True"
                                      Checked="ShowAfterToggle_Changed"
                                      Unchecked="ShowAfterToggle_Changed"
                                      ToolTip="Show output curve"
                                      Margin="0,0,4,0"/>

                        <ToggleButton x:Name="ShowPhaseToggle"
                                      Style="{StaticResource ToggleButtonStyle}"
                                      Content="Phase"
                                      Checked="ShowPhaseToggle_Changed"
                                      Unchecked="ShowPhaseToggle_Changed"
                                      ToolTip="Show phase response"
                                      Margin="0,0,8,0"/>

                        <Button x:Name="ExportButton"
                                Style="{StaticResource ControlButtonStyle}"
                                Content="Export"
                                Click="ExportButton_Click"
                                ToolTip="Export curve as image"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Graph display -->
            <Grid Grid.Row="1" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- dB scale labels -->
                <Canvas x:Name="DbScaleCanvas"
                        Grid.Column="0"
                        Width="35"
                        Background="Transparent"/>

                <!-- Main graph area -->
                <Border Grid.Column="1"
                        Background="#1A1A1A"
                        CornerRadius="3"
                        BorderBrush="#3A3A3A"
                        BorderThickness="1">
                    <Grid ClipToBounds="True">
                        <!-- Grid lines -->
                        <Canvas x:Name="GridCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Unity (0 dB) line -->
                        <Canvas x:Name="UnityLineCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Before curve (input) -->
                        <Canvas x:Name="BeforeCurveCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- After curve (output) -->
                        <Canvas x:Name="AfterCurveCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Phase curve -->
                        <Canvas x:Name="PhaseCurveCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"
                                Visibility="Collapsed"/>

                        <!-- Mouse hover info -->
                        <Border x:Name="HoverInfo"
                                Background="#E01A1A1A"
                                CornerRadius="3"
                                Padding="6,4"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Margin="8"
                                Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock x:Name="HoverFrequencyText"
                                           Text="1000 Hz"
                                           FontSize="10"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBlock x:Name="HoverGainText"
                                           Text="0.0 dB"
                                           FontSize="10"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource AfterCurveBrush}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Frequency axis and legend -->
            <Grid Grid.Row="2" Margin="43,0,8,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Frequency labels -->
                <Canvas x:Name="FrequencyLabelsCanvas"
                        Grid.Row="0"
                        Height="16"
                        Background="Transparent"/>

                <!-- Legend -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,4,0,0">
                    <Border Background="{StaticResource BeforeCurveBrush}"
                            Width="20"
                            Height="3"
                            CornerRadius="1"
                            VerticalAlignment="Center"/>
                    <TextBlock Text="Before"
                               FontSize="9"
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"
                               Margin="4,0,12,0"/>

                    <Border Background="{StaticResource AfterCurveBrush}"
                            Width="20"
                            Height="3"
                            CornerRadius="1"
                            VerticalAlignment="Center"/>
                    <TextBlock Text="After"
                               FontSize="9"
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"
                               Margin="4,0,12,0"/>

                    <Border x:Name="PhaseLegend"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="{StaticResource PhaseCurveBrush}"
                                    Width="20"
                                    Height="3"
                                    CornerRadius="1"
                                    VerticalAlignment="Center"
                                    BorderBrush="{StaticResource PhaseCurveBrush}"
                                    BorderThickness="1"/>
                            <TextBlock Text="Phase"
                                       FontSize="9"
                                       Foreground="{StaticResource TextBrush}"
                                       VerticalAlignment="Center"
                                       Margin="4,0,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
