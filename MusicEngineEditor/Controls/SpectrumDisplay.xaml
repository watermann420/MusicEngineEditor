<UserControl x:Class="MusicEngineEditor.Controls.SpectrumDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="400"
             Background="#1E1F22"
             MinHeight="80"
             MinWidth="200">

    <UserControl.Resources>
        <!-- Dark theme colors -->
        <Color x:Key="BackgroundColor">#1E1F22</Color>
        <Color x:Key="GridColor">#2B2D30</Color>
        <Color x:Key="BorderColor">#393B40</Color>
        <Color x:Key="TextColor">#6F737A</Color>
        <Color x:Key="BarColor">#00CED1</Color>
        <Color x:Key="BarTopColor">#00FFFF</Color>
        <Color x:Key="PeakColor">#FFFFFF</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="GridBrush" Color="{StaticResource GridColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="PeakBrush" Color="{StaticResource PeakColor}"/>

        <!-- Bar gradient (bottom to top: dark cyan to bright cyan) -->
        <LinearGradientBrush x:Key="BarGradientBrush" StartPoint="0,1" EndPoint="0,0">
            <GradientStop Color="#004D4D" Offset="0.0"/>
            <GradientStop Color="#008080" Offset="0.3"/>
            <GradientStop Color="#00CED1" Offset="0.6"/>
            <GradientStop Color="#00FFFF" Offset="0.85"/>
            <GradientStop Color="#7FFFFF" Offset="1.0"/>
        </LinearGradientBrush>

        <!-- Outline style brush -->
        <SolidColorBrush x:Key="OutlineBrush" Color="#00CED1"/>
    </UserControl.Resources>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- dB Scale -->
        <Canvas x:Name="DbScaleCanvas"
                Grid.Row="0" Grid.Column="0"
                Width="28"
                Background="Transparent"/>

        <!-- Spectrum Display Area -->
        <Border Grid.Row="0" Grid.Column="1"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="2"
                Background="{StaticResource BackgroundBrush}">
            <Canvas x:Name="SpectrumCanvas"
                    ClipToBounds="True"/>
        </Border>

        <!-- Frequency Labels -->
        <Canvas x:Name="FrequencyCanvas"
                Grid.Row="1" Grid.Column="1"
                Height="16"
                Background="Transparent"/>
    </Grid>
</UserControl>
