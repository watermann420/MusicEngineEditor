<UserControl x:Class="MusicEngineEditor.Controls.FadeCurveEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:core="clr-namespace:MusicEngine.Core;assembly=MusicEngine"
             mc:Ignorable="d"
             d:DesignHeight="180" d:DesignWidth="300"
             Background="{DynamicResource PanelBackgroundBrush}">

    <UserControl.Resources>
        <!-- Curve Colors -->
        <SolidColorBrush x:Key="CurveFillBrush" Color="#404B6EAF"/>
        <SolidColorBrush x:Key="CurveStrokeBrush" Color="#4B6EAF"/>
        <SolidColorBrush x:Key="GridLineBrush" Color="#30FFFFFF"/>
        <SolidColorBrush x:Key="HandleBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="HandleHoverBrush" Color="#4B6EAF"/>
        <SolidColorBrush x:Key="PreviewLineBrush" Color="#66BB6A"/>

        <!-- ComboBox Style -->
        <Style x:Key="FadeTypeComboStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SubtleBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <!-- Property Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
        </Style>

        <!-- Input Style -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SubtleBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource ToolbarBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="TitleText"
                           Text="Fade Curve"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource BrightForegroundBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Curve Display -->
        <Border Grid.Row="1"
                Background="{DynamicResource BackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                Margin="8"
                ClipToBounds="True">
            <Canvas x:Name="CurveCanvas"
                    Background="Transparent"
                    SizeChanged="CurveCanvas_SizeChanged"
                    MouseLeftButtonDown="CurveCanvas_MouseLeftButtonDown"
                    MouseMove="CurveCanvas_MouseMove"
                    MouseLeftButtonUp="CurveCanvas_MouseLeftButtonUp"
                    MouseLeave="CurveCanvas_MouseLeave">

                <!-- Grid Lines (drawn in code-behind) -->

                <!-- Fill Path for the curve -->
                <Path x:Name="CurveFillPath"
                      Fill="{StaticResource CurveFillBrush}"
                      IsHitTestVisible="False"/>

                <!-- Stroke Path for the curve -->
                <Path x:Name="CurveStrokePath"
                      Stroke="{StaticResource CurveStrokeBrush}"
                      StrokeThickness="2"
                      IsHitTestVisible="False"/>

                <!-- Preview Line (for hover feedback) -->
                <Line x:Name="PreviewLine"
                      Stroke="{StaticResource PreviewLineBrush}"
                      StrokeThickness="1"
                      StrokeDashArray="2,2"
                      Visibility="Collapsed"
                      IsHitTestVisible="False"/>

                <!-- Start Handle -->
                <Ellipse x:Name="StartHandle"
                         Width="10" Height="10"
                         Fill="{StaticResource HandleBrush}"
                         Stroke="{DynamicResource AccentBrush}"
                         StrokeThickness="2"
                         Cursor="SizeAll"
                         Visibility="Collapsed"/>

                <!-- End Handle -->
                <Ellipse x:Name="EndHandle"
                         Width="10" Height="10"
                         Fill="{StaticResource HandleBrush}"
                         Stroke="{DynamicResource AccentBrush}"
                         StrokeThickness="2"
                         Cursor="SizeAll"
                         Visibility="Collapsed"/>
            </Canvas>
        </Border>

        <!-- Controls -->
        <Border Grid.Row="2"
                Background="{DynamicResource ToolbarBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Fade Type Selector -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Type:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="FadeTypeComboBox"
                              Style="{StaticResource FadeTypeComboStyle}"
                              MinWidth="100"
                              SelectionChanged="FadeTypeComboBox_SelectionChanged">
                        <ComboBoxItem Content="Linear" Tag="Linear"/>
                        <ComboBoxItem Content="Exponential" Tag="Exponential"/>
                        <ComboBoxItem Content="S-Curve" Tag="SCurve"/>
                        <ComboBoxItem Content="Logarithmic" Tag="Logarithmic"/>
                        <ComboBoxItem Content="Equal Power" Tag="EqualPower"/>
                    </ComboBox>
                </StackPanel>

                <!-- Duration Input -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Duration:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="DurationTextBox"
                             Style="{StaticResource InputStyle}"
                             Text="0.00"
                             TextChanged="DurationTextBox_TextChanged"/>
                    <TextBlock Text="beats" Style="{StaticResource LabelStyle}" Margin="4,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
