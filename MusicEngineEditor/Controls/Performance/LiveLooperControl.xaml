<UserControl x:Class="MusicEngineEditor.Controls.Performance.LiveLooperControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls.Performance"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="700"
             MinHeight="300" MinWidth="400">

    <UserControl.Resources>
        <!-- Theme Colors -->
        <Color x:Key="BackgroundColor">#0D0D0D</Color>
        <Color x:Key="PanelColor">#181818</Color>
        <Color x:Key="AccentColor">#00D9FF</Color>
        <Color x:Key="ErrorColor">#FF4757</Color>
        <Color x:Key="SuccessColor">#00FF88</Color>
        <Color x:Key="TextColor">#E0E0E0</Color>
        <Color x:Key="TextSecondaryColor">#808080</Color>
        <Color x:Key="BorderColor">#2A2A2A</Color>
        <Color x:Key="HoverColor">#252525</Color>
        <Color x:Key="OverdubColor">#FF9500</Color>
        <Color x:Key="MutedColor">#505050</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
        <SolidColorBrush x:Key="OverdubBrush" Color="{StaticResource OverdubColor}"/>
        <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource MutedColor}"/>

        <!-- Converters -->
        <local:LiveLooperBoolToVisibilityConverter x:Key="BoolToVisConverter"/>
        <local:LiveLooperInverseBoolToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
        <local:LiveLooperLayerStateToColorConverter x:Key="StateToColorConverter"/>
        <local:LiveLooperVolumeToHeightConverter x:Key="VolumeToHeightConverter"/>

        <!-- Transport Button Style -->
        <Style x:Key="TransportButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="24">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small Button Style -->
        <Style x:Key="SmallButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Button Style for Mute -->
        <Style x:Key="MuteToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ErrorBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Overdub Toggle Style -->
        <Style x:Key="OverdubToggleStyle" TargetType="ToggleButton">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource OverdubBrush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource OverdubBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource OverdubBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Slider Style -->
        <Style x:Key="LooperSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border x:Name="TrackBackground"
                                    Height="4"
                                    Background="{StaticResource BorderBrush}"
                                    CornerRadius="2"/>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Width="14" Height="14"
                                                         Fill="{StaticResource AccentBrush}"
                                                         Cursor="Hand"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Layer Item Template -->
        <DataTemplate x:Key="LayerItemTemplate">
            <Border Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,2"
                    Padding="8,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Layer Number and State Indicator -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <Ellipse x:Name="StateIndicator"
                                 Width="12" Height="12"
                                 Fill="{Binding State, Converter={StaticResource StateToColorConverter}}"
                                 Margin="0,0,0,2"/>
                        <TextBlock Text="{Binding DisplayIndex}"
                                   FontSize="10"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Waveform Display Area -->
                    <Border Grid.Column="1"
                            Background="#0D0D0D"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="3"
                            Margin="8,0"
                            Height="40"
                            ClipToBounds="True">
                        <Grid>
                            <!-- Waveform Canvas -->
                            <Canvas x:Name="WaveformCanvas" ClipToBounds="True"/>
                            <!-- Empty State -->
                            <TextBlock Text="Empty"
                                       FontSize="10"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVisConverter}}"/>
                            <!-- Recording Indicator -->
                            <Border Background="#40FF4757"
                                    Visibility="{Binding IsRecording, Converter={StaticResource BoolToVisConverter}}">
                                <TextBlock Text="REC"
                                           FontSize="11"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource ErrorBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Layer Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Volume Slider -->
                        <StackPanel Margin="0,0,8,0" Width="60">
                            <TextBlock Text="VOL"
                                       FontSize="8"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                            <Slider Value="{Binding Volume, Mode=TwoWay}"
                                    Minimum="0" Maximum="1"
                                    Style="{StaticResource LooperSliderStyle}"
                                    VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Pan Slider -->
                        <StackPanel Margin="0,0,8,0" Width="60">
                            <TextBlock Text="PAN"
                                       FontSize="8"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                            <Slider Value="{Binding Pan, Mode=TwoWay}"
                                    Minimum="-1" Maximum="1"
                                    Style="{StaticResource LooperSliderStyle}"
                                    VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Mute Button -->
                        <ToggleButton Content="M"
                                      IsChecked="{Binding IsMuted, Mode=TwoWay}"
                                      Style="{StaticResource MuteToggleStyle}"
                                      ToolTip="Mute Layer"
                                      Margin="0,0,4,0"/>

                        <!-- Record Button -->
                        <Button Style="{StaticResource SmallButtonStyle}"
                                Click="LayerRecord_Click"
                                Tag="{Binding Index}"
                                ToolTip="Record on this layer">
                            <Ellipse Width="10" Height="10" Fill="{StaticResource ErrorBrush}"/>
                        </Button>

                        <!-- Play Button -->
                        <Button Style="{StaticResource SmallButtonStyle}"
                                Click="LayerPlay_Click"
                                Tag="{Binding Index}"
                                ToolTip="Play this layer"
                                Margin="4,0,0,0">
                            <Polygon Points="0,0 10,5 0,10" Fill="{StaticResource SuccessBrush}"/>
                        </Button>

                        <!-- Stop Button -->
                        <Button Style="{StaticResource SmallButtonStyle}"
                                Click="LayerStop_Click"
                                Tag="{Binding Index}"
                                ToolTip="Stop this layer"
                                Margin="4,0,0,0">
                            <Rectangle Width="10" Height="10" Fill="{StaticResource TextBrush}"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Border Background="{StaticResource BackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="6,6,0,0"
                    Padding="12,8">
                <DockPanel>
                    <!-- Title -->
                    <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="LIVE LOOPER"
                                   Foreground="{StaticResource TextBrush}"
                                   FontSize="13"
                                   FontWeight="SemiBold"/>
                        <TextBlock x:Name="StateText"
                                   Text=" - Empty"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="13"
                                   Margin="4,0,0,0"/>
                    </StackPanel>

                    <!-- Header Controls -->
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                        <!-- Input Monitor Toggle -->
                        <ToggleButton x:Name="InputMonitorToggle"
                                      Content="INPUT MON"
                                      Style="{StaticResource OverdubToggleStyle}"
                                      IsChecked="True"
                                      Checked="InputMonitor_Changed"
                                      Unchecked="InputMonitor_Changed"
                                      ToolTip="Enable/disable input monitoring"
                                      Margin="0,0,8,0"/>

                        <!-- Overdub Toggle -->
                        <ToggleButton x:Name="OverdubToggle"
                                      Content="OVERDUB"
                                      Style="{StaticResource OverdubToggleStyle}"
                                      ToolTip="Enable overdub mode"
                                      Margin="0,0,8,0"/>

                        <!-- Tempo Sync -->
                        <ToggleButton x:Name="TempoSyncToggle"
                                      Content="SYNC"
                                      Style="{StaticResource OverdubToggleStyle}"
                                      IsChecked="True"
                                      Checked="TempoSync_Changed"
                                      Unchecked="TempoSync_Changed"
                                      ToolTip="Sync loop boundaries to tempo"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Transport and Loop Info -->
            <Border Grid.Row="1"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Transport Controls -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Record Button -->
                        <Button x:Name="RecordButton"
                                Style="{StaticResource TransportButtonStyle}"
                                Click="Record_Click"
                                ToolTip="Record (R)">
                            <Ellipse Width="20" Height="20" Fill="{StaticResource ErrorBrush}"/>
                        </Button>

                        <!-- Play Button -->
                        <Button x:Name="PlayButton"
                                Style="{StaticResource TransportButtonStyle}"
                                Click="Play_Click"
                                ToolTip="Play (Space)"
                                Margin="8,0,0,0">
                            <Polygon Points="0,0 20,12 0,24" Fill="{StaticResource SuccessBrush}"/>
                        </Button>

                        <!-- Stop Button -->
                        <Button x:Name="StopButton"
                                Style="{StaticResource TransportButtonStyle}"
                                Click="Stop_Click"
                                ToolTip="Stop (S)"
                                Margin="8,0,0,0">
                            <Rectangle Width="18" Height="18" Fill="{StaticResource TextBrush}"/>
                        </Button>

                        <!-- Toggle Button (Rec/Play/Overdub cycle) -->
                        <Button x:Name="ToggleButton"
                                Style="{StaticResource TransportButtonStyle}"
                                Click="Toggle_Click"
                                ToolTip="Toggle (T) - Cycle through Rec/Play/Overdub"
                                Margin="16,0,0,0"
                                Background="{StaticResource AccentBrush}">
                            <TextBlock Text="T" FontSize="16" FontWeight="Bold" Foreground="White"/>
                        </Button>
                    </StackPanel>

                    <!-- Loop Position Indicator -->
                    <Grid Grid.Column="1" Margin="24,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Loop Length Display -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                            <TextBlock Text="Loop: "
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="11"/>
                            <TextBlock x:Name="LoopLengthText"
                                       Text="0.0 beats (0.0s)"
                                       Foreground="{StaticResource TextBrush}"
                                       FontSize="11"/>
                            <TextBlock Text=" | Cycle: "
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="11"
                                       Margin="8,0,0,0"/>
                            <TextBlock x:Name="CycleCountText"
                                       Text="0"
                                       Foreground="{StaticResource AccentBrush}"
                                       FontSize="11"
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <!-- Loop Progress Bar -->
                        <Border Grid.Row="1"
                                Background="{StaticResource BorderBrush}"
                                CornerRadius="3"
                                Height="12">
                            <Grid ClipToBounds="True">
                                <Border x:Name="LoopProgressBar"
                                        Background="{StaticResource AccentBrush}"
                                        CornerRadius="3"
                                        HorizontalAlignment="Left"
                                        Width="0"/>
                                <!-- Beat Markers -->
                                <Canvas x:Name="BeatMarkersCanvas" ClipToBounds="True"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Undo Button -->
                        <Button x:Name="UndoButton"
                                Content="UNDO"
                                Style="{StaticResource SmallButtonStyle}"
                                Width="Auto"
                                Padding="12,4"
                                Click="Undo_Click"
                                ToolTip="Undo last layer (Ctrl+Z)"
                                Margin="0,0,8,0"/>

                        <!-- Clear All Button -->
                        <Button x:Name="ClearButton"
                                Content="CLEAR ALL"
                                Style="{StaticResource SmallButtonStyle}"
                                Width="Auto"
                                Padding="12,4"
                                Click="ClearAll_Click"
                                ToolTip="Clear all layers"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Layer Stack -->
            <ScrollViewer Grid.Row="2"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="12,8">
                <ItemsControl x:Name="LayerStack"
                              ItemTemplate="{StaticResource LayerItemTemplate}"/>
            </ScrollViewer>

            <!-- Footer / Input Level -->
            <Border Grid.Row="3"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,6,6"
                    Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Input Level Label -->
                    <TextBlock Grid.Column="0"
                               Text="INPUT"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>

                    <!-- Input Level Meter -->
                    <Border Grid.Column="1"
                            Background="{StaticResource BorderBrush}"
                            CornerRadius="2"
                            Height="8">
                        <Grid ClipToBounds="True">
                            <!-- Level Bar Left -->
                            <Border x:Name="InputLevelLeft"
                                    Background="{StaticResource SuccessBrush}"
                                    CornerRadius="2"
                                    HorizontalAlignment="Left"
                                    Width="0"/>
                            <!-- Peak Indicator -->
                            <Rectangle x:Name="InputPeakIndicator"
                                       Width="2"
                                       Fill="{StaticResource ErrorBrush}"
                                       HorizontalAlignment="Left"
                                       Visibility="Collapsed"/>
                        </Grid>
                    </Border>

                    <!-- Quantize Mode -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="16,0,0,0">
                        <TextBlock Text="Quantize:"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <ComboBox x:Name="QuantizeModeCombo"
                                  Width="80"
                                  FontSize="10"
                                  SelectedIndex="2"
                                  SelectionChanged="QuantizeMode_Changed">
                            <ComboBoxItem Content="Off"/>
                            <ComboBoxItem Content="Beat"/>
                            <ComboBoxItem Content="Bar"/>
                            <ComboBoxItem Content="2 Bars"/>
                            <ComboBoxItem Content="4 Bars"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
