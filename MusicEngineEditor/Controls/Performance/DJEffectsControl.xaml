<UserControl x:Class="MusicEngineEditor.Controls.Performance.DJEffectsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls.Performance"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="500"
             Background="#0D0D0D">

    <UserControl.Resources>
        <!-- Colors -->
        <Color x:Key="DJEffectsBackgroundColor">#0D0D0D</Color>
        <Color x:Key="DJEffectsPanelColor">#181818</Color>
        <Color x:Key="DJEffectsAccentColor">#00D9FF</Color>
        <Color x:Key="DJEffectsWarningColor">#FFB800</Color>
        <Color x:Key="DJEffectsTextColor">#E0E0E0</Color>
        <Color x:Key="DJEffectsBorderColor">#2A2A2A</Color>
        <Color x:Key="DJEffectsHoverColor">#252525</Color>
        <Color x:Key="DJEffectsActiveColor">#00D9FF</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="DJEffectsBackgroundBrush" Color="{StaticResource DJEffectsBackgroundColor}"/>
        <SolidColorBrush x:Key="DJEffectsPanelBrush" Color="{StaticResource DJEffectsPanelColor}"/>
        <SolidColorBrush x:Key="DJEffectsAccentBrush" Color="{StaticResource DJEffectsAccentColor}"/>
        <SolidColorBrush x:Key="DJEffectsWarningBrush" Color="{StaticResource DJEffectsWarningColor}"/>
        <SolidColorBrush x:Key="DJEffectsTextBrush" Color="{StaticResource DJEffectsTextColor}"/>
        <SolidColorBrush x:Key="DJEffectsBorderBrush" Color="{StaticResource DJEffectsBorderColor}"/>
        <SolidColorBrush x:Key="DJEffectsHoverBrush" Color="{StaticResource DJEffectsHoverColor}"/>

        <!-- Converters -->
        <local:DJEffectsBoolToVisibilityConverter x:Key="DJEffectsBoolToVisibilityConverter"/>
        <local:DJEffectsPercentageConverter x:Key="DJEffectsPercentageConverter"/>

        <!-- Button Style for Effect Buttons -->
        <Style x:Key="DJEffectsButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DJEffectsPanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource DJEffectsTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DJEffectsBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource DJEffectsHoverBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource DJEffectsAccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource DJEffectsAccentBrush}"/>
                                <Setter Property="Foreground" Value="#0D0D0D"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Button Style for Effect Toggles -->
        <Style x:Key="DJEffectsToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="{StaticResource DJEffectsPanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource DJEffectsTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DJEffectsBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource DJEffectsHoverBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource DJEffectsAccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource DJEffectsAccentBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource DJEffectsAccentBrush}"/>
                                <Setter Property="Foreground" Value="#0D0D0D"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Beat Repeat Button Style -->
        <Style x:Key="DJEffectsBeatRepeatStyle" TargetType="Button" BasedOn="{StaticResource DJEffectsButtonStyle}">
            <Setter Property="MinWidth" Value="50"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Slider Style -->
        <Style x:Key="DJEffectsSliderStyle" TargetType="Slider">
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
            <Setter Property="Foreground" Value="{StaticResource DJEffectsAccentBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border x:Name="TrackBackground"
                                    Grid.Row="1"
                                    Height="4"
                                    Background="{StaticResource DJEffectsBorderBrush}"
                                    CornerRadius="2"
                                    VerticalAlignment="Center"/>
                            <Border x:Name="PART_SelectionRange"
                                    Grid.Row="1"
                                    Height="4"
                                    HorizontalAlignment="Left"
                                    Width="{TemplateBinding Value, Converter={StaticResource DJEffectsPercentageConverter}}"
                                    Background="{StaticResource DJEffectsAccentBrush}"
                                    CornerRadius="2"
                                    VerticalAlignment="Center"/>
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.Thumb>
                                    <Thumb Width="14" Height="14">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Fill="{StaticResource DJEffectsAccentBrush}"
                                                         Width="14" Height="14"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="{StaticResource DJEffectsBackgroundBrush}"
            BorderBrush="{StaticResource DJEffectsBorderBrush}"
            BorderThickness="1"
            CornerRadius="6">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource DJEffectsPanelBrush}"
                    CornerRadius="4"
                    Padding="12,8"
                    Margin="0,0,0,12">
                <DockPanel>
                    <TextBlock Text="DJ EFFECTS"
                               DockPanel.Dock="Left"
                               Foreground="{StaticResource DJEffectsTextBrush}"
                               FontSize="14"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal"
                                DockPanel.Dock="Right"
                                HorizontalAlignment="Right">
                        <!-- Active Effect Indicator -->
                        <Border x:Name="ActiveEffectIndicator"
                                Background="#2A2A2A"
                                CornerRadius="3"
                                Padding="8,4"
                                Margin="0,0,8,0">
                            <TextBlock x:Name="ActiveEffectText"
                                       Text="READY"
                                       Foreground="{StaticResource DJEffectsAccentBrush}"
                                       FontSize="10"
                                       FontWeight="SemiBold"/>
                        </Border>

                        <!-- Kill All Button -->
                        <Button Content="KILL ALL"
                                Style="{StaticResource DJEffectsButtonStyle}"
                                Click="KillAll_Click"
                                ToolTip="Stop all active effects"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Main Content: XY Pad and Controls -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- XY Pad (Filter Sweep) -->
                <Border Grid.Column="0"
                        Background="{StaticResource DJEffectsPanelBrush}"
                        BorderBrush="{StaticResource DJEffectsBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="0,0,12,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- XY Pad Header -->
                        <Border Grid.Row="0"
                                BorderBrush="{StaticResource DJEffectsBorderBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="8,6">
                            <DockPanel>
                                <TextBlock Text="FILTER SWEEP"
                                           Foreground="{StaticResource DJEffectsTextBrush}"
                                           FontSize="10"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                <ToggleButton x:Name="FilterActiveToggle"
                                              Content="ON"
                                              Style="{StaticResource DJEffectsToggleStyle}"
                                              DockPanel.Dock="Right"
                                              HorizontalAlignment="Right"
                                              Padding="12,4"
                                              Checked="FilterActiveToggle_Checked"
                                              Unchecked="FilterActiveToggle_Unchecked"
                                              ToolTip="Enable/Disable Filter Sweep"/>
                            </DockPanel>
                        </Border>

                        <!-- XY Pad Canvas -->
                        <Canvas x:Name="XYPadCanvas"
                                Grid.Row="1"
                                Background="#121212"
                                Margin="8"
                                ClipToBounds="True"
                                MouseDown="XYPad_MouseDown"
                                MouseMove="XYPad_MouseMove"
                                MouseUp="XYPad_MouseUp"
                                MouseLeave="XYPad_MouseLeave">

                            <!-- Grid Lines -->
                            <Line x:Name="XYPadVerticalLine"
                                  Stroke="#2A2A2A"
                                  StrokeThickness="1"
                                  X1="0" Y1="0" X2="0" Y2="0"/>
                            <Line x:Name="XYPadHorizontalLine"
                                  Stroke="#2A2A2A"
                                  StrokeThickness="1"
                                  X1="0" Y1="0" X2="0" Y2="0"/>

                            <!-- Crosshair Position Indicator -->
                            <Ellipse x:Name="XYPadIndicator"
                                     Width="20" Height="20"
                                     Fill="{StaticResource DJEffectsAccentBrush}"
                                     Opacity="0.8"
                                     Canvas.Left="0" Canvas.Top="0"/>

                            <!-- Axis Labels -->
                            <TextBlock Text="CUTOFF"
                                       Foreground="#505050"
                                       FontSize="9"
                                       Canvas.Left="4" Canvas.Bottom="4"/>
                            <TextBlock x:Name="ResonanceLabel"
                                       Text="RES"
                                       Foreground="#505050"
                                       FontSize="9"
                                       Canvas.Left="4" Canvas.Top="4">
                                <TextBlock.LayoutTransform>
                                    <RotateTransform Angle="-90"/>
                                </TextBlock.LayoutTransform>
                            </TextBlock>
                        </Canvas>

                        <!-- XY Pad Values Display -->
                        <Border Grid.Row="2"
                                BorderBrush="{StaticResource DJEffectsBorderBrush}"
                                BorderThickness="0,1,0,0"
                                Padding="8,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="Cutoff: "
                                               Foreground="#808080"
                                               FontSize="10"/>
                                    <TextBlock x:Name="CutoffValueText"
                                               Text="50%"
                                               Foreground="{StaticResource DJEffectsAccentBrush}"
                                               FontSize="10"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="Resonance: "
                                               Foreground="#808080"
                                               FontSize="10"/>
                                    <TextBlock x:Name="ResonanceValueText"
                                               Text="50%"
                                               Foreground="{StaticResource DJEffectsAccentBrush}"
                                               FontSize="10"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Side Controls Panel -->
                <StackPanel Grid.Column="1" Width="180">

                    <!-- Beat Repeat Section -->
                    <Border Background="{StaticResource DJEffectsPanelBrush}"
                            BorderBrush="{StaticResource DJEffectsBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="8"
                            Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="BEAT REPEAT"
                                       Foreground="{StaticResource DJEffectsTextBrush}"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            <UniformGrid Rows="2" Columns="2">
                                <Button Content="1/4"
                                        Style="{StaticResource DJEffectsBeatRepeatStyle}"
                                        Margin="2"
                                        Tag="4"
                                        Click="BeatRepeat_Click"
                                        ToolTip="Quarter note repeat"/>
                                <Button Content="1/8"
                                        Style="{StaticResource DJEffectsBeatRepeatStyle}"
                                        Margin="2"
                                        Tag="8"
                                        Click="BeatRepeat_Click"
                                        ToolTip="Eighth note repeat"/>
                                <Button Content="1/16"
                                        Style="{StaticResource DJEffectsBeatRepeatStyle}"
                                        Margin="2"
                                        Tag="16"
                                        Click="BeatRepeat_Click"
                                        ToolTip="Sixteenth note repeat"/>
                                <Button Content="1/32"
                                        Style="{StaticResource DJEffectsBeatRepeatStyle}"
                                        Margin="2"
                                        Tag="32"
                                        Click="BeatRepeat_Click"
                                        ToolTip="Thirty-second note repeat"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <!-- Transport Effects Section -->
                    <Border Background="{StaticResource DJEffectsPanelBrush}"
                            BorderBrush="{StaticResource DJEffectsBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="8"
                            Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="TRANSPORT FX"
                                       Foreground="{StaticResource DJEffectsTextBrush}"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            <UniformGrid Rows="2" Columns="2">
                                <Button x:Name="BrakeButton"
                                        Content="BRAKE"
                                        Style="{StaticResource DJEffectsBeatRepeatStyle}"
                                        Margin="2"
                                        Click="Brake_Click"
                                        ToolTip="Vinyl brake/stop effect"/>
                                <Button x:Name="SpinbackButton"
                                        Content="SPIN"
                                        Style="{StaticResource DJEffectsBeatRepeatStyle}"
                                        Margin="2"
                                        Click="Spinback_Click"
                                        ToolTip="Spinback/backspin effect"/>
                                <Button x:Name="EchoOutButton"
                                        Content="ECHO"
                                        Style="{StaticResource DJEffectsBeatRepeatStyle}"
                                        Margin="2"
                                        Click="EchoOut_Click"
                                        ToolTip="Echo out effect"/>
                                <ToggleButton x:Name="FlangerToggle"
                                              Content="FLANGE"
                                              Style="{StaticResource DJEffectsToggleStyle}"
                                              Margin="2"
                                              MinWidth="50"
                                              MinHeight="36"
                                              FontSize="11"
                                              Checked="Flanger_Checked"
                                              Unchecked="Flanger_Unchecked"
                                              ToolTip="Flanger on/off"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <!-- Effect Progress -->
                    <Border x:Name="ProgressPanel"
                            Background="{StaticResource DJEffectsPanelBrush}"
                            BorderBrush="{StaticResource DJEffectsBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="8"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock x:Name="ProgressLabel"
                                       Text="EFFECT PROGRESS"
                                       Foreground="{StaticResource DJEffectsTextBrush}"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,4"/>
                            <ProgressBar x:Name="EffectProgress"
                                         Height="8"
                                         Minimum="0"
                                         Maximum="100"
                                         Value="0"
                                         Background="{StaticResource DJEffectsBorderBrush}"
                                         Foreground="{StaticResource DJEffectsAccentBrush}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Wet/Dry Mix Section -->
            <Border Grid.Row="2"
                    Background="{StaticResource DJEffectsPanelBrush}"
                    BorderBrush="{StaticResource DJEffectsBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12,8"
                    Margin="0,12,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="WET/DRY"
                               Grid.Column="0"
                               Foreground="{StaticResource DJEffectsTextBrush}"
                               FontSize="10"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>

                    <Slider x:Name="WetDrySlider"
                            Grid.Column="1"
                            Style="{StaticResource DJEffectsSliderStyle}"
                            Value="50"
                            VerticalAlignment="Center"
                            ValueChanged="WetDrySlider_ValueChanged"
                            ToolTip="Effect wet/dry mix"/>

                    <TextBlock x:Name="WetDryValueText"
                               Grid.Column="2"
                               Text="50%"
                               Foreground="{StaticResource DJEffectsAccentBrush}"
                               FontSize="11"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Width="40"
                               TextAlignment="Right"
                               Margin="12,0,0,0"/>
                </Grid>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="3"
                    Margin="0,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Tempo Display -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="TEMPO: "
                                   Foreground="#606060"
                                   FontSize="10"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="TempoText"
                                   Text="120 BPM"
                                   Foreground="{StaticResource DJEffectsWarningBrush}"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Preset Selector -->
                    <ComboBox x:Name="PresetComboBox"
                              Grid.Column="1"
                              Width="100"
                              FontSize="10"
                              SelectionChanged="PresetComboBox_SelectionChanged"
                              ToolTip="Select DJ effect preset">
                        <ComboBoxItem Content="Default" IsSelected="True"/>
                        <ComboBoxItem Content="EDM"/>
                        <ComboBoxItem Content="Hip-Hop"/>
                        <ComboBoxItem Content="House"/>
                        <ComboBoxItem Content="DnB"/>
                        <ComboBoxItem Content="Techno"/>
                    </ComboBox>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
