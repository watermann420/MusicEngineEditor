<UserControl x:Class="MusicEngineEditor.Controls.Analysis.PhaseAnalyzerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls.Analysis"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="450"
             Background="#0D0D0D"
             MinHeight="350"
             MinWidth="300">

    <UserControl.Resources>
        <!-- Theme Colors -->
        <Color x:Key="BackgroundColor">#0D0D0D</Color>
        <Color x:Key="PanelColor">#181818</Color>
        <Color x:Key="AccentColor">#00D9FF</Color>
        <Color x:Key="SuccessColor">#00FF88</Color>
        <Color x:Key="WarningColor">#FFB800</Color>
        <Color x:Key="ErrorColor">#FF4757</Color>
        <Color x:Key="TextColor">#E0E0E0</Color>
        <Color x:Key="BorderColor">#2A2A2A</Color>
        <Color x:Key="DimTextColor">#808080</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
        <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="DimTextBrush" Color="{StaticResource DimTextColor}"/>

        <!-- Correlation Gradient -->
        <LinearGradientBrush x:Key="CorrelationGradientBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#FF4757" Offset="0.0"/>
            <GradientStop Color="#FFB800" Offset="0.35"/>
            <GradientStop Color="#00FF88" Offset="0.5"/>
            <GradientStop Color="#00D9FF" Offset="1.0"/>
        </LinearGradientBrush>

        <!-- Mid/Side Gradient -->
        <LinearGradientBrush x:Key="MidSideGradientBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#00D9FF" Offset="0.0"/>
            <GradientStop Color="#00FF88" Offset="0.5"/>
            <GradientStop Color="#FFB800" Offset="1.0"/>
        </LinearGradientBrush>

        <!-- Button Style -->
        <Style x:Key="PhaseAnalyzerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A3A3A"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00D9FF"/>
                                <Setter Property="Foreground" Value="#0D0D0D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Button Style -->
        <Style x:Key="PhaseAnalyzerToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="{StaticResource DimTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00D9FF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D9FF"/>
                                <Setter Property="Foreground" Value="#0D0D0D"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="6"
            Background="{StaticResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="6,6,0,0"
                    Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Phase Analyzer"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <ToggleButton x:Name="LiveModeToggle"
                                      Style="{StaticResource PhaseAnalyzerToggleStyle}"
                                      Content="Live"
                                      IsChecked="True"
                                      Checked="LiveModeToggle_Changed"
                                      Unchecked="LiveModeToggle_Changed"
                                      ToolTip="Enable/disable real-time analysis"
                                      Margin="0,0,8,0"/>
                        <Button Style="{StaticResource PhaseAnalyzerButtonStyle}"
                                Content="Reset"
                                Click="ResetButton_Click"
                                ToolTip="Reset analysis data"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Mono Compatibility Score Panel -->
            <Border Grid.Row="1"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="12,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Mono Compatibility"
                                   FontSize="11"
                                   Foreground="{StaticResource DimTextBrush}"
                                   Margin="0,0,0,4"/>
                        <Grid>
                            <Border Background="#1A1A1A"
                                    CornerRadius="4"
                                    Height="8">
                                <Border x:Name="MonoCompatibilityFill"
                                        Background="{StaticResource SuccessBrush}"
                                        CornerRadius="4"
                                        HorizontalAlignment="Left"
                                        Width="0"/>
                            </Border>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="16,0,0,0">
                        <TextBlock x:Name="MonoCompatibilityText"
                                   Text="100%"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource SuccessBrush}"/>
                        <TextBlock x:Name="MonoStatusText"
                                   Text="Excellent"
                                   FontSize="10"
                                   Foreground="{StaticResource DimTextBrush}"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Phase Correlation vs Frequency Graph -->
            <Border Grid.Row="2"
                    Background="#1A1A1A"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="12,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Graph Title -->
                    <TextBlock Grid.Row="0"
                               Text="Phase Correlation by Frequency"
                               FontSize="10"
                               Foreground="{StaticResource DimTextBrush}"
                               Margin="8,6,8,4"/>

                    <!-- Graph Canvas -->
                    <Canvas x:Name="PhaseGraphCanvas"
                            Grid.Row="1"
                            ClipToBounds="True"
                            Margin="30,0,8,20"
                            SizeChanged="PhaseGraphCanvas_SizeChanged"/>

                    <!-- Y-Axis Labels -->
                    <Canvas Grid.Row="1" Width="28" HorizontalAlignment="Left">
                        <TextBlock Text="+1" FontSize="9" Foreground="{StaticResource DimTextBrush}"
                                   Canvas.Left="4" Canvas.Top="2"/>
                        <TextBlock Text="0" FontSize="9" Foreground="{StaticResource DimTextBrush}"
                                   Canvas.Left="8" Canvas.Top="50%"/>
                        <TextBlock Text="-1" FontSize="9" Foreground="{StaticResource DimTextBrush}"
                                   Canvas.Left="4" Canvas.Bottom="22"/>
                    </Canvas>

                    <!-- X-Axis Labels -->
                    <Grid Grid.Row="2" Margin="30,0,8,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="20" FontSize="9" Foreground="{StaticResource DimTextBrush}" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Column="1" Text="100" FontSize="9" Foreground="{StaticResource DimTextBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="1k" FontSize="9" Foreground="{StaticResource DimTextBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="5k" FontSize="9" Foreground="{StaticResource DimTextBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Text="20k" FontSize="9" Foreground="{StaticResource DimTextBrush}" HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Legend -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,8,0">
                        <Ellipse Width="8" Height="8" Fill="{StaticResource ErrorBrush}" Margin="0,0,4,0"/>
                        <TextBlock Text="Issue" FontSize="9" Foreground="{StaticResource DimTextBrush}" Margin="0,0,12,0"/>
                        <Ellipse Width="8" Height="8" Fill="{StaticResource SuccessBrush}" Margin="0,0,4,0"/>
                        <TextBlock Text="OK" FontSize="9" Foreground="{StaticResource DimTextBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Problem Areas Panel -->
            <Border Grid.Row="3"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,1"
                    Padding="12,8"
                    MaxHeight="100">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Problem Frequencies"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,0,0,6"/>

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl x:Name="ProblemAreasItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1A1A1A"
                                            CornerRadius="3"
                                            Padding="8,4"
                                            Margin="0,0,0,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Ellipse Grid.Column="0"
                                                     Width="8" Height="8"
                                                     Fill="{Binding SeverityBrush}"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,8,0"/>

                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding FrequencyRange}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource TextBrush}"
                                                       VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding SeverityText}"
                                                       FontSize="10"
                                                       Foreground="{Binding SeverityBrush}"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <TextBlock x:Name="NoProblemText"
                               Grid.Row="1"
                               Text="No phase issues detected"
                               FontSize="11"
                               Foreground="{StaticResource SuccessBrush}"
                               FontStyle="Italic"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Mid/Side Balance Meter -->
            <Border Grid.Row="4"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="12,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,6">
                        <TextBlock Text="Mid/Side Balance"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextBrush}"
                                   HorizontalAlignment="Left"/>
                        <TextBlock x:Name="StereoWidthText"
                                   Text="Width: 50%"
                                   FontSize="10"
                                   Foreground="{StaticResource DimTextBrush}"
                                   HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Mid/Side Meter -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Mid"
                                   FontSize="10"
                                   Foreground="{StaticResource AccentBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>

                        <Border Grid.Column="1"
                                Background="#1A1A1A"
                                CornerRadius="4"
                                Height="16">
                            <Grid>
                                <!-- Background gradient -->
                                <Rectangle RadiusX="4" RadiusY="4"
                                           Fill="{StaticResource MidSideGradientBrush}"
                                           Opacity="0.2"/>

                                <!-- Center marker -->
                                <Border Width="2"
                                        Background="{StaticResource BorderBrush}"
                                        HorizontalAlignment="Center"/>

                                <!-- Balance indicator -->
                                <Border x:Name="MidSideIndicator"
                                        Width="4"
                                        Background="{StaticResource AccentBrush}"
                                        CornerRadius="2"
                                        HorizontalAlignment="Center"
                                        Margin="0,2"/>
                            </Grid>
                        </Border>

                        <TextBlock Grid.Column="2"
                                   Text="Side"
                                   FontSize="10"
                                   Foreground="{StaticResource WarningBrush}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </Grid>

                    <!-- M/S Values -->
                    <Grid Grid.Row="2" Margin="0,6,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBlock Text="M: "
                                       FontSize="10"
                                       Foreground="{StaticResource DimTextBrush}"/>
                            <TextBlock x:Name="MidLevelText"
                                       Text="-inf dB"
                                       FontSize="10"
                                       Foreground="{StaticResource AccentBrush}"
                                       FontWeight="SemiBold"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="S: "
                                       FontSize="10"
                                       Foreground="{StaticResource DimTextBrush}"/>
                            <TextBlock x:Name="SideLevelText"
                                       Text="-inf dB"
                                       FontSize="10"
                                       Foreground="{StaticResource WarningBrush}"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Correlation History -->
            <Border Grid.Row="5"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0"
                    CornerRadius="0,0,6,6"
                    Padding="12,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,6">
                        <TextBlock Text="Correlation History"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextBrush}"
                                   HorizontalAlignment="Left"/>
                        <TextBlock x:Name="OverallCorrelationText"
                                   Text="Avg: +0.00"
                                   FontSize="10"
                                   Foreground="{StaticResource AccentBrush}"
                                   HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- History Graph -->
                    <Border Grid.Row="1"
                            Background="#1A1A1A"
                            CornerRadius="4"
                            Height="50">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Y-Axis Mini Labels -->
                            <StackPanel Grid.Column="0" VerticalAlignment="Stretch" Width="20">
                                <TextBlock Text="+1" FontSize="8" Foreground="{StaticResource DimTextBrush}" Margin="2,0,0,0"/>
                                <TextBlock Text="0" FontSize="8" Foreground="{StaticResource DimTextBrush}" VerticalAlignment="Center" Margin="4,12,0,12"/>
                                <TextBlock Text="-1" FontSize="8" Foreground="{StaticResource DimTextBrush}" Margin="2,0,0,0"/>
                            </StackPanel>

                            <!-- History Canvas -->
                            <Canvas x:Name="HistoryCanvas"
                                    Grid.Column="1"
                                    ClipToBounds="True"
                                    Margin="0,4,4,4"
                                    SizeChanged="HistoryCanvas_SizeChanged">
                                <!-- Zero line -->
                                <Line x:Name="HistoryZeroLine"
                                      Stroke="{StaticResource BorderBrush}"
                                      StrokeThickness="1"
                                      StrokeDashArray="2,2"/>
                            </Canvas>
                        </Grid>
                    </Border>

                    <!-- Stats Row -->
                    <Grid Grid.Row="1" Margin="0,6,0,0" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="Min: " FontSize="9" Foreground="{StaticResource DimTextBrush}"/>
                            <TextBlock x:Name="MinCorrelationText" Text="-0.00" FontSize="9" Foreground="{StaticResource ErrorBrush}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Avg: " FontSize="9" Foreground="{StaticResource DimTextBrush}"/>
                            <TextBlock x:Name="AvgCorrelationText" Text="+0.00" FontSize="9" Foreground="{StaticResource AccentBrush}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Max: " FontSize="9" Foreground="{StaticResource DimTextBrush}"/>
                            <TextBlock x:Name="MaxCorrelationText" Text="+0.00" FontSize="9" Foreground="{StaticResource SuccessBrush}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
