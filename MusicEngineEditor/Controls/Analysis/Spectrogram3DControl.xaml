<UserControl x:Class="MusicEngineEditor.Controls.Analysis.Spectrogram3DControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls.Analysis"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600"
             Background="#0D0D0D"
             MinHeight="250"
             MinWidth="350">

    <UserControl.Resources>
        <!-- Dark theme colors -->
        <Color x:Key="BackgroundColor">#0D0D0D</Color>
        <Color x:Key="PanelColor">#181818</Color>
        <Color x:Key="BorderColor">#2A2A2A</Color>
        <Color x:Key="AccentColor">#00D9FF</Color>
        <Color x:Key="TextColor">#E0E0E0</Color>
        <Color x:Key="DimTextColor">#808080</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="DimTextBrush" Color="{StaticResource DimTextColor}"/>

        <!-- ComboBox Style -->
        <Style x:Key="Spectrogram3DComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <!-- Slider Style -->
        <Style x:Key="Spectrogram3DSliderStyle" TargetType="Slider">
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#00D9FF"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="Spectrogram3DButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A3A3A"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D9FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00D9FF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="Spectrogram3DCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="Spectrogram3DLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#808080"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Value Label Style -->
        <Style x:Key="Spectrogram3DValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#00D9FF"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="40"/>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Background="{StaticResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="10,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="3D Spectrogram"
                                   FontWeight="SemiBold"
                                   FontSize="12"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"/>

                        <TextBlock x:Name="StatusText"
                                   Text="Ready"
                                   FontSize="10"
                                   Foreground="{StaticResource DimTextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"/>
                    </StackPanel>

                    <!-- Color map selector -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Color Map:"
                                   Style="{StaticResource Spectrogram3DLabelStyle}"
                                   Margin="0,0,6,0"/>
                        <ComboBox x:Name="ColorMapComboBox"
                                  Style="{StaticResource Spectrogram3DComboBoxStyle}"
                                  Width="100"
                                  SelectionChanged="ColorMapComboBox_SelectionChanged">
                            <ComboBoxItem Content="Grayscale" Tag="Grayscale"/>
                            <ComboBoxItem Content="Heat" Tag="HeatMap" IsSelected="True"/>
                            <ComboBoxItem Content="Classic" Tag="Classic"/>
                            <ComboBoxItem Content="Cool" Tag="Cool"/>
                            <ComboBoxItem Content="Warm" Tag="Warm"/>
                            <ComboBoxItem Content="Rainbow" Tag="Rainbow"/>
                            <ComboBoxItem Content="Plasma" Tag="Plasma"/>
                        </ComboBox>

                        <Button x:Name="ResetViewButton"
                                Content="Reset View"
                                Style="{StaticResource Spectrogram3DButtonStyle}"
                                Click="ResetViewButton_Click"
                                Margin="12,0,0,0"
                                ToolTip="Reset camera to default position"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 3D Viewport -->
            <Border Grid.Row="1"
                    Background="#0A0A0A"
                    CornerRadius="3"
                    BorderBrush="#3A3A3A"
                    BorderThickness="1"
                    Margin="8">
                <Grid>
                    <!-- Main rendering surface (WriteableBitmap) -->
                    <Image x:Name="RenderImage"
                           RenderOptions.BitmapScalingMode="NearestNeighbor"
                           Stretch="Fill"
                           MouseDown="RenderImage_MouseDown"
                           MouseMove="RenderImage_MouseMove"
                           MouseUp="RenderImage_MouseUp"
                           MouseWheel="RenderImage_MouseWheel"
                           MouseLeave="RenderImage_MouseLeave"/>

                    <!-- Axis labels overlay -->
                    <Canvas x:Name="AxisLabelsCanvas"
                            IsHitTestVisible="False"
                            ClipToBounds="True"/>

                    <!-- Info overlay -->
                    <Border HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="#80000000"
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Rot:"
                                       Style="{StaticResource Spectrogram3DLabelStyle}"
                                       Margin="0,0,4,0"/>
                            <TextBlock x:Name="RotationXText"
                                       Text="45"
                                       Style="{StaticResource Spectrogram3DValueStyle}"
                                       Width="25"/>
                            <TextBlock Text=","
                                       Style="{StaticResource Spectrogram3DLabelStyle}"/>
                            <TextBlock x:Name="RotationYText"
                                       Text="-30"
                                       Style="{StaticResource Spectrogram3DValueStyle}"
                                       Width="30"/>
                            <TextBlock Text="Zoom:"
                                       Style="{StaticResource Spectrogram3DLabelStyle}"
                                       Margin="12,0,4,0"/>
                            <TextBlock x:Name="ZoomText"
                                       Text="1.0x"
                                       Style="{StaticResource Spectrogram3DValueStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Frequency range indicator -->
                    <Border HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="#80000000"
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="FrequencyRangeText"
                                       Text="20 Hz - 20 kHz"
                                       FontSize="10"
                                       Foreground="{StaticResource AccentBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Instructions overlay (shown when no data) -->
                    <Border x:Name="InstructionsOverlay"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="#60000000"
                            CornerRadius="6"
                            Padding="20,16"
                            Visibility="Visible">
                        <StackPanel>
                            <TextBlock Text="3D Spectrogram Viewer"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Drag to rotate | Scroll to zoom"
                                       FontSize="11"
                                       Foreground="{StaticResource DimTextBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Feed audio to visualize spectrum over time"
                                       FontSize="10"
                                       Foreground="{StaticResource DimTextBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Frequency Range Controls -->
            <Border Grid.Row="2"
                    Background="{StaticResource PanelBrush}"
                    Padding="10,8"
                    Margin="8,0,8,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Min Frequency -->
                    <TextBlock Grid.Column="0"
                               Text="Min Freq:"
                               Style="{StaticResource Spectrogram3DLabelStyle}"
                               Margin="0,0,8,0"/>
                    <Slider x:Name="MinFrequencySlider"
                            Grid.Column="1"
                            Style="{StaticResource Spectrogram3DSliderStyle}"
                            Minimum="20"
                            Maximum="1000"
                            Value="20"
                            ValueChanged="MinFrequencySlider_ValueChanged"
                            ToolTip="Minimum frequency in Hz"/>
                    <TextBlock x:Name="MinFrequencyText"
                               Grid.Column="2"
                               Text="20 Hz"
                               Style="{StaticResource Spectrogram3DValueStyle}"
                               Margin="8,0,20,0"
                               MinWidth="50"/>

                    <!-- Max Frequency -->
                    <TextBlock Grid.Column="3"
                               Text="Max Freq:"
                               Style="{StaticResource Spectrogram3DLabelStyle}"
                               Margin="0,0,8,0"/>
                    <Slider x:Name="MaxFrequencySlider"
                            Grid.Column="4"
                            Style="{StaticResource Spectrogram3DSliderStyle}"
                            Minimum="1000"
                            Maximum="22000"
                            Value="20000"
                            ValueChanged="MaxFrequencySlider_ValueChanged"
                            ToolTip="Maximum frequency in Hz"/>
                    <TextBlock x:Name="MaxFrequencyText"
                               Grid.Column="5"
                               Text="20 kHz"
                               Style="{StaticResource Spectrogram3DValueStyle}"
                               Margin="8,0,0,0"
                               MinWidth="50"/>
                </Grid>
            </Border>

            <!-- Bottom Controls -->
            <Border Grid.Row="3"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="10,8"
                    Margin="8,4,8,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- History Length -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="History:"
                                   Style="{StaticResource Spectrogram3DLabelStyle}"
                                   Margin="0,0,8,0"/>
                        <Slider x:Name="HistoryLengthSlider"
                                Style="{StaticResource Spectrogram3DSliderStyle}"
                                Width="100"
                                Minimum="1"
                                Maximum="30"
                                Value="10"
                                ValueChanged="HistoryLengthSlider_ValueChanged"
                                ToolTip="History length in seconds"/>
                        <TextBlock x:Name="HistoryLengthText"
                                   Text="10.0 s"
                                   Style="{StaticResource Spectrogram3DValueStyle}"
                                   Margin="8,0,0,0"
                                   MinWidth="40"/>
                    </StackPanel>

                    <!-- dB Range -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Floor:"
                                   Style="{StaticResource Spectrogram3DLabelStyle}"
                                   Margin="0,0,6,0"/>
                        <Slider x:Name="DbFloorSlider"
                                Style="{StaticResource Spectrogram3DSliderStyle}"
                                Width="80"
                                Minimum="-120"
                                Maximum="-30"
                                Value="-90"
                                ValueChanged="DbFloorSlider_ValueChanged"
                                ToolTip="dB floor (silence threshold)"/>
                        <TextBlock x:Name="DbFloorText"
                                   Text="-90 dB"
                                   Style="{StaticResource Spectrogram3DValueStyle}"
                                   Margin="6,0,16,0"
                                   MinWidth="50"/>

                        <TextBlock Text="Ceiling:"
                                   Style="{StaticResource Spectrogram3DLabelStyle}"
                                   Margin="0,0,6,0"/>
                        <Slider x:Name="DbCeilingSlider"
                                Style="{StaticResource Spectrogram3DSliderStyle}"
                                Width="80"
                                Minimum="-24"
                                Maximum="6"
                                Value="0"
                                ValueChanged="DbCeilingSlider_ValueChanged"
                                ToolTip="dB ceiling (maximum level)"/>
                        <TextBlock x:Name="DbCeilingText"
                                   Text="0 dB"
                                   Style="{StaticResource Spectrogram3DValueStyle}"
                                   Margin="6,0,0,0"
                                   MinWidth="40"/>
                    </StackPanel>

                    <!-- Options -->
                    <CheckBox x:Name="PeakHoldCheckBox"
                              Grid.Column="2"
                              Content="Peak Hold"
                              Style="{StaticResource Spectrogram3DCheckBoxStyle}"
                              Checked="PeakHoldCheckBox_Changed"
                              Unchecked="PeakHoldCheckBox_Changed"
                              Margin="16,0,0,0"
                              ToolTip="Enable peak hold display"/>

                    <CheckBox x:Name="LogFrequencyCheckBox"
                              Grid.Column="3"
                              Content="Log Freq"
                              Style="{StaticResource Spectrogram3DCheckBoxStyle}"
                              IsChecked="True"
                              Checked="LogFrequencyCheckBox_Changed"
                              Unchecked="LogFrequencyCheckBox_Changed"
                              Margin="12,0,0,0"
                              ToolTip="Use logarithmic frequency scale"/>

                    <Button x:Name="ClearButton"
                            Grid.Column="4"
                            Content="Clear"
                            Style="{StaticResource Spectrogram3DButtonStyle}"
                            Click="ClearButton_Click"
                            Margin="16,0,0,0"
                            ToolTip="Clear spectrogram history"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
