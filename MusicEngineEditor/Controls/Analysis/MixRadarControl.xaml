<UserControl x:Class="MusicEngineEditor.Controls.Analysis.MixRadarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls.Analysis"
             mc:Ignorable="d"
             d:DesignHeight="350" d:DesignWidth="350"
             Background="#0D0D0D"
             MinHeight="250"
             MinWidth="250">

    <UserControl.Resources>
        <!-- Dark theme colors -->
        <Color x:Key="MixRadarBackgroundColor">#0D0D0D</Color>
        <Color x:Key="MixRadarPanelColor">#181818</Color>
        <Color x:Key="MixRadarBorderColor">#2A2A2A</Color>
        <Color x:Key="MixRadarTextColor">#E0E0E0</Color>
        <Color x:Key="MixRadarAccentColor">#00D9FF</Color>
        <Color x:Key="MixRadarMixFillColor">#4000D9FF</Color>
        <Color x:Key="MixRadarMixStrokeColor">#00D9FF</Color>
        <Color x:Key="MixRadarReferenceFillColor">#20FFFFFF</Color>
        <Color x:Key="MixRadarReferenceStrokeColor">#FFFFFF</Color>
        <Color x:Key="MixRadarGridColor">#2A2A2A</Color>
        <Color x:Key="MixRadarAxisColor">#3A3A3A</Color>
        <Color x:Key="MixRadarLabelColor">#808080</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="MixRadarBackgroundBrush" Color="{StaticResource MixRadarBackgroundColor}"/>
        <SolidColorBrush x:Key="MixRadarPanelBrush" Color="{StaticResource MixRadarPanelColor}"/>
        <SolidColorBrush x:Key="MixRadarBorderBrush" Color="{StaticResource MixRadarBorderColor}"/>
        <SolidColorBrush x:Key="MixRadarTextBrush" Color="{StaticResource MixRadarTextColor}"/>
        <SolidColorBrush x:Key="MixRadarAccentBrush" Color="{StaticResource MixRadarAccentColor}"/>
        <SolidColorBrush x:Key="MixRadarMixFillBrush" Color="{StaticResource MixRadarMixFillColor}"/>
        <SolidColorBrush x:Key="MixRadarMixStrokeBrush" Color="{StaticResource MixRadarMixStrokeColor}"/>
        <SolidColorBrush x:Key="MixRadarReferenceFillBrush" Color="{StaticResource MixRadarReferenceFillColor}"/>
        <SolidColorBrush x:Key="MixRadarReferenceStrokeBrush" Color="{StaticResource MixRadarReferenceStrokeColor}"/>
        <SolidColorBrush x:Key="MixRadarGridBrush" Color="{StaticResource MixRadarGridColor}"/>
        <SolidColorBrush x:Key="MixRadarAxisBrush" Color="{StaticResource MixRadarAxisColor}"/>
        <SolidColorBrush x:Key="MixRadarLabelBrush" Color="{StaticResource MixRadarLabelColor}"/>

        <!-- Toggle button style -->
        <Style x:Key="MixRadarToggleStyle" TargetType="ToggleButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="track"
                                Background="#3A3A3A"
                                CornerRadius="10"
                                BorderThickness="1"
                                BorderBrush="#4A4A4A">
                            <Ellipse x:Name="thumb"
                                     Width="16" Height="16"
                                     Fill="#808080"
                                     Margin="2,0,0,0"
                                     HorizontalAlignment="Left"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="track" Property="Background" Value="#00D9FF"/>
                                <Setter TargetName="track" Property="BorderBrush" Value="#00D9FF"/>
                                <Setter TargetName="thumb" Property="Fill" Value="White"/>
                                <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="thumb" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="track" Property="BorderBrush" Value="#5A5A5A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox style -->
        <Style x:Key="MixRadarComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Padding" Value="6,3"/>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource MixRadarBorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Background="{StaticResource MixRadarBackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource MixRadarPanelBrush}"
                    BorderBrush="{StaticResource MixRadarBorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Mix Radar"
                               FontWeight="SemiBold"
                               FontSize="13"
                               Foreground="{StaticResource MixRadarTextBrush}"
                               VerticalAlignment="Center"/>

                    <!-- Reference controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Reference"
                                   FontSize="10"
                                   Foreground="{StaticResource MixRadarLabelBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,6,0"/>
                        <ToggleButton x:Name="ShowReferenceToggle"
                                      Style="{StaticResource MixRadarToggleStyle}"
                                      IsChecked="True"
                                      Checked="OnShowReferenceToggleChanged"
                                      Unchecked="OnShowReferenceToggleChanged"
                                      ToolTip="Show reference curve overlay"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main radar display -->
            <Grid Grid.Row="1" Margin="8">
                <Border Background="#1A1A1A"
                        CornerRadius="4"
                        BorderBrush="{StaticResource MixRadarBorderBrush}"
                        BorderThickness="1">
                    <Grid ClipToBounds="True">
                        <!-- Grid layer (circles and axes) -->
                        <Canvas x:Name="GridCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Reference curve layer (white outline) -->
                        <Canvas x:Name="ReferenceCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"
                                Visibility="Visible"/>

                        <!-- Mix curve layer (cyan fill) -->
                        <Canvas x:Name="MixCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Band labels layer -->
                        <Canvas x:Name="LabelsCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Center balance indicator -->
                        <Border HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="#E01A1A1A"
                                CornerRadius="6"
                                Padding="12,8">
                            <StackPanel HorizontalAlignment="Center">
                                <Ellipse x:Name="BalanceIndicator"
                                         Width="12" Height="12"
                                         Fill="{StaticResource MixRadarAccentBrush}"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,4"/>
                                <TextBlock x:Name="BalanceText"
                                           Text="Balanced"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource MixRadarAccentBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock x:Name="ScoreText"
                                           Text="Score: --"
                                           FontSize="9"
                                           Foreground="{StaticResource MixRadarLabelBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer with band values and legend -->
            <Border Grid.Row="2"
                    Background="{StaticResource MixRadarPanelBrush}"
                    BorderBrush="{StaticResource MixRadarBorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="10,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left band values (Sub, Bass, Low-Mid, Mid) -->
                    <UniformGrid Grid.Column="0" Columns="1" Rows="4">
                        <StackPanel Orientation="Horizontal" Margin="0,1">
                            <TextBlock Text="Sub" FontSize="9" Foreground="{StaticResource MixRadarLabelBrush}" Width="50"/>
                            <TextBlock x:Name="SubBandText" Text="--" FontSize="9" FontWeight="SemiBold" Foreground="{StaticResource MixRadarAccentBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,1">
                            <TextBlock Text="Bass" FontSize="9" Foreground="{StaticResource MixRadarLabelBrush}" Width="50"/>
                            <TextBlock x:Name="BassBandText" Text="--" FontSize="9" FontWeight="SemiBold" Foreground="{StaticResource MixRadarAccentBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,1">
                            <TextBlock Text="Low-Mid" FontSize="9" Foreground="{StaticResource MixRadarLabelBrush}" Width="50"/>
                            <TextBlock x:Name="LowMidBandText" Text="--" FontSize="9" FontWeight="SemiBold" Foreground="{StaticResource MixRadarAccentBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,1">
                            <TextBlock Text="Mid" FontSize="9" Foreground="{StaticResource MixRadarLabelBrush}" Width="50"/>
                            <TextBlock x:Name="MidBandText" Text="--" FontSize="9" FontWeight="SemiBold" Foreground="{StaticResource MixRadarAccentBrush}"/>
                        </StackPanel>
                    </UniformGrid>

                    <!-- Center legend -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0">
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Border Background="{StaticResource MixRadarMixFillBrush}"
                                    BorderBrush="{StaticResource MixRadarMixStrokeBrush}"
                                    BorderThickness="2"
                                    Width="16" Height="16"
                                    CornerRadius="3"
                                    Margin="0,0,6,0"/>
                            <TextBlock Text="Mix"
                                       FontSize="10"
                                       Foreground="{StaticResource MixRadarTextBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel x:Name="ReferenceLegendPanel"
                                    Orientation="Horizontal"
                                    Margin="0,2"
                                    Visibility="Visible">
                            <Border Background="{StaticResource MixRadarReferenceFillBrush}"
                                    BorderBrush="{StaticResource MixRadarReferenceStrokeBrush}"
                                    BorderThickness="1"
                                    Width="16" Height="16"
                                    CornerRadius="3"
                                    Margin="0,0,6,0"/>
                            <TextBlock Text="Ref"
                                       FontSize="10"
                                       Foreground="{StaticResource MixRadarTextBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Right band values (High-Mid, Presence, Brilliance, Air) -->
                    <UniformGrid Grid.Column="2" Columns="1" Rows="4">
                        <StackPanel Orientation="Horizontal" Margin="0,1">
                            <TextBlock Text="High-Mid" FontSize="9" Foreground="{StaticResource MixRadarLabelBrush}" Width="55"/>
                            <TextBlock x:Name="HighMidBandText" Text="--" FontSize="9" FontWeight="SemiBold" Foreground="{StaticResource MixRadarAccentBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,1">
                            <TextBlock Text="Presence" FontSize="9" Foreground="{StaticResource MixRadarLabelBrush}" Width="55"/>
                            <TextBlock x:Name="PresenceBandText" Text="--" FontSize="9" FontWeight="SemiBold" Foreground="{StaticResource MixRadarAccentBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,1">
                            <TextBlock Text="Brilliance" FontSize="9" Foreground="{StaticResource MixRadarLabelBrush}" Width="55"/>
                            <TextBlock x:Name="BrillianceBandText" Text="--" FontSize="9" FontWeight="SemiBold" Foreground="{StaticResource MixRadarAccentBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,1">
                            <TextBlock Text="Air" FontSize="9" Foreground="{StaticResource MixRadarLabelBrush}" Width="55"/>
                            <TextBlock x:Name="AirBandText" Text="--" FontSize="9" FontWeight="SemiBold" Foreground="{StaticResource MixRadarAccentBrush}"/>
                        </StackPanel>
                    </UniformGrid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
