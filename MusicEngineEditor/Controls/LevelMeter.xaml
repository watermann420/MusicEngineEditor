<UserControl x:Class="MusicEngineEditor.Controls.LevelMeter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="60"
             Background="#1E1F22"
             MinWidth="40"
             MinHeight="80">

    <UserControl.Resources>
        <!-- Dark theme colors matching the editor -->
        <Color x:Key="MeterBackgroundColor">#1E1F22</Color>
        <Color x:Key="MeterTrackColor">#0D0D0D</Color>
        <Color x:Key="MeterBorderColor">#393B40</Color>
        <Color x:Key="ScaleTextColor">#6F737A</Color>
        <Color x:Key="ChannelLabelColor">#BCBEC4</Color>
        <Color x:Key="PeakHoldColor">#FFFFFF</Color>
        <Color x:Key="ClipIndicatorOnColor">#FF3333</Color>
        <Color x:Key="ClipIndicatorOffColor">#4D1A1A</Color>

        <!-- Gradient colors for the level meter -->
        <Color x:Key="LevelGreenColor">#00FF00</Color>
        <Color x:Key="LevelGreenDarkColor">#00AA00</Color>
        <Color x:Key="LevelYellowColor">#FFFF00</Color>
        <Color x:Key="LevelYellowDarkColor">#CCCC00</Color>
        <Color x:Key="LevelOrangeColor">#FF8800</Color>
        <Color x:Key="LevelRedColor">#FF0000</Color>
        <Color x:Key="LevelRedDarkColor">#CC0000</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="MeterBackgroundBrush" Color="{StaticResource MeterBackgroundColor}"/>
        <SolidColorBrush x:Key="MeterTrackBrush" Color="{StaticResource MeterTrackColor}"/>
        <SolidColorBrush x:Key="MeterBorderBrush" Color="{StaticResource MeterBorderColor}"/>
        <SolidColorBrush x:Key="ScaleTextBrush" Color="{StaticResource ScaleTextColor}"/>
        <SolidColorBrush x:Key="ChannelLabelBrush" Color="{StaticResource ChannelLabelColor}"/>
        <SolidColorBrush x:Key="PeakHoldBrush" Color="{StaticResource PeakHoldColor}"/>
        <SolidColorBrush x:Key="ClipIndicatorOnBrush" Color="{StaticResource ClipIndicatorOnColor}"/>
        <SolidColorBrush x:Key="ClipIndicatorOffBrush" Color="{StaticResource ClipIndicatorOffColor}"/>

        <!-- Level gradient brush (vertical - bottom to top: green -> yellow -> red) -->
        <LinearGradientBrush x:Key="LevelGradientBrush" StartPoint="0,1" EndPoint="0,0">
            <GradientStop Color="{StaticResource LevelGreenColor}" Offset="0.0"/>
            <GradientStop Color="{StaticResource LevelGreenDarkColor}" Offset="0.5"/>
            <GradientStop Color="{StaticResource LevelYellowColor}" Offset="0.7"/>
            <GradientStop Color="{StaticResource LevelOrangeColor}" Offset="0.85"/>
            <GradientStop Color="{StaticResource LevelRedColor}" Offset="0.95"/>
            <GradientStop Color="{StaticResource LevelRedDarkColor}" Offset="1.0"/>
        </LinearGradientBrush>

        <!-- Level gradient brush (horizontal - left to right: green -> yellow -> red) -->
        <LinearGradientBrush x:Key="LevelGradientHorizontalBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="{StaticResource LevelGreenColor}" Offset="0.0"/>
            <GradientStop Color="{StaticResource LevelGreenDarkColor}" Offset="0.5"/>
            <GradientStop Color="{StaticResource LevelYellowColor}" Offset="0.7"/>
            <GradientStop Color="{StaticResource LevelOrangeColor}" Offset="0.85"/>
            <GradientStop Color="{StaticResource LevelRedColor}" Offset="0.95"/>
            <GradientStop Color="{StaticResource LevelRedDarkColor}" Offset="1.0"/>
        </LinearGradientBrush>

        <!-- Inactive level track background with segments -->
        <DrawingBrush x:Key="SegmentedTrackBrush" TileMode="Tile" Viewport="0,0,1,3" ViewportUnits="Absolute">
            <DrawingBrush.Drawing>
                <GeometryDrawing>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,1,2"/>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Brush>
                        <SolidColorBrush Color="#1A1A1A"/>
                    </GeometryDrawing.Brush>
                </GeometryDrawing>
            </DrawingBrush.Drawing>
        </DrawingBrush>

        <!-- Clip indicator glow effect -->
        <DropShadowEffect x:Key="ClipGlowEffect"
                          Color="#FF3333"
                          BlurRadius="8"
                          ShadowDepth="0"
                          Opacity="0.8"/>
    </UserControl.Resources>

    <Grid x:Name="MainGrid">
        <!-- This grid will be dynamically structured based on Orientation -->
    </Grid>
</UserControl>
