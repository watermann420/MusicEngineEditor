<UserControl x:Class="MusicEngineEditor.Controls.Synths.KnobControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="80" d:DesignWidth="60"
             MinWidth="50" MinHeight="70">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Label -->
        <TextBlock x:Name="LabelText"
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   FontSize="10"
                   Foreground="#808080"
                   Margin="0,0,0,4"/>

        <!-- Knob visual (simplified as a circular slider) -->
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Ellipse Width="40" Height="40"
                     Fill="#1A1A1A"
                     Stroke="#00D9FF"
                     StrokeThickness="2"/>
            <Ellipse x:Name="KnobIndicator"
                     Width="8" Height="8"
                     Fill="#00D9FF"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Top"
                     Margin="0,4,0,0"
                     RenderTransformOrigin="0.5,2.5">
                <Ellipse.RenderTransform>
                    <RotateTransform x:Name="KnobRotation" Angle="0"/>
                </Ellipse.RenderTransform>
            </Ellipse>
        </Grid>

        <!-- Value display -->
        <TextBlock x:Name="ValueText"
                   Grid.Row="2"
                   HorizontalAlignment="Center"
                   FontSize="10"
                   Foreground="#E0E0E0"
                   Margin="0,4,0,0"/>
    </Grid>
</UserControl>
