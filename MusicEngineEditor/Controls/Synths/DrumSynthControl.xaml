<UserControl x:Class="MusicEngineEditor.Controls.Synths.DrumSynthControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MusicEngineEditor.ViewModels.Synths"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#0D0D0D">

    <UserControl.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0D0D0D"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#181818"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#00D9FF"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#00FF88"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#808080"/>
        <SolidColorBrush x:Key="KickBrush" Color="#DC143C"/>
        <SolidColorBrush x:Key="SnareBrush" Color="#FFD700"/>
        <SolidColorBrush x:Key="HiHatBrush" Color="#00D9FF"/>
        <SolidColorBrush x:Key="ClapBrush" Color="#FF69B4"/>
        <SolidColorBrush x:Key="TomBrush" Color="#FF8C00"/>
        <SolidColorBrush x:Key="CymbalBrush" Color="#9370DB"/>

        <!-- Knob/Slider Style -->
        <Style x:Key="DarkSliderStyle" TargetType="Slider">
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="1"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                            </Grid.RowDefinitions>
                            <Border x:Name="TrackBackground"
                                    Grid.Row="1"
                                    Height="4"
                                    Background="#252525"
                                    CornerRadius="2"
                                    Margin="5,0"/>
                            <Border x:Name="PART_SelectionRange"
                                    Grid.Row="1"
                                    Height="4"
                                    Background="{StaticResource AccentBrush}"
                                    CornerRadius="2"
                                    HorizontalAlignment="Left"
                                    Margin="5,0"/>
                            <Track Grid.Row="1" x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Width="14" Height="14">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Fill="{StaticResource AccentBrush}" Width="14" Height="14"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#303030"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Preset Button Style -->
        <Style x:Key="PresetButtonStyle" TargetType="Button" BasedOn="{StaticResource ToolbarButtonStyle}">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Drum Pad Style -->
        <Style x:Key="DrumPadStyle" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="2"
                                CornerRadius="8">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <!-- Trigger flash overlay -->
                                <Border x:Name="flashOverlay"
                                        Background="White"
                                        Opacity="0"
                                        CornerRadius="6"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="flashOverlay" Property="Opacity" Value="0.3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Parameter Label Style -->
        <Style x:Key="ParamLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource SecondaryForegroundBrush}"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>

        <!-- Parameter Value Style -->
        <Style x:Key="ParamValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Tab Item Style -->
        <Style x:Key="DrumTabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryForegroundBrush}"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1,1,1,0"
                                CornerRadius="4,4,0,0"
                                Padding="{TemplateBinding Padding}"
                                Margin="2,0,0,0">
                            <ContentPresenter x:Name="content"
                                              ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PanelBrush}"/>
                                <Setter TargetName="content" Property="TextBlock.Foreground" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="content" Property="TextBlock.FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#202020"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Button Style for Open/Closed Hi-Hat -->
        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Toolbar -->
        <Border Grid.Row="0" Background="{StaticResource PanelBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="12,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="DRUM SYNTH"
                               Foreground="{StaticResource ForegroundBrush}"
                               FontSize="16"
                               FontWeight="Bold"/>
                    <TextBlock x:Name="PresetLabel"
                               Text="{Binding CurrentPreset, StringFormat=' - {0}'}"
                               Foreground="{StaticResource SecondaryForegroundBrush}"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                </StackPanel>

                <!-- Preset Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="24,0,0,0">
                    <Button Style="{StaticResource PresetButtonStyle}" Content="808"
                            Command="{Binding Load808PresetCommand}" ToolTip="TR-808 Style"/>
                    <Button Style="{StaticResource PresetButtonStyle}" Content="909"
                            Command="{Binding Load909PresetCommand}" ToolTip="TR-909 Style"/>
                    <Button Style="{StaticResource PresetButtonStyle}" Content="LinnDrum"
                            Command="{Binding LoadLinnDrumPresetCommand}" ToolTip="LinnDrum Style"/>
                    <Button Style="{StaticResource PresetButtonStyle}" Content="Custom"
                            Command="{Binding ResetToDefaultCommand}" ToolTip="Custom/Reset"/>
                </StackPanel>

                <!-- Output Controls -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Level:" Foreground="{StaticResource SecondaryForegroundBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Slider x:Name="VolumeSlider" Style="{StaticResource DarkSliderStyle}"
                            Width="80" Minimum="0" Maximum="1" Value="{Binding Volume, Mode=TwoWay}"
                            ValueChanged="VolumeSlider_ValueChanged"/>
                    <TextBlock x:Name="VolumeValue" Text="{Binding Volume, StringFormat='{}{0:P0}'}"
                               Foreground="{StaticResource ForegroundBrush}"
                               Width="35" VerticalAlignment="Center" Margin="8,0,16,0"/>

                    <TextBlock Text="Pan:" Foreground="{StaticResource SecondaryForegroundBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Slider x:Name="PanSlider" Style="{StaticResource DarkSliderStyle}"
                            Width="80" Minimum="-1" Maximum="1" Value="{Binding Pan, Mode=TwoWay}"
                            ValueChanged="PanSlider_ValueChanged"/>
                    <TextBlock x:Name="PanValue" Foreground="{StaticResource ForegroundBrush}"
                               Width="30" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Drum Pads and Preview -->
            <Border Grid.Column="0" Background="{StaticResource PanelBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Drum Pads Grid -->
                    <TextBlock Grid.Row="0" Style="{StaticResource SectionHeaderStyle}" Text="DRUM PADS"/>

                    <!-- Drum Pads ItemsControl -->
                    <ItemsControl x:Name="DrumPadsControl" Grid.Row="1" Margin="0,0,0,16"
                                  ItemsSource="{Binding DrumPads}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="4" Rows="2"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource DrumPadStyle}"
                                        Command="{Binding DataContext.TriggerDrumCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Tag="{Binding}">
                                    <Button.Background>
                                        <SolidColorBrush Color="{Binding Color}"/>
                                    </Button.Background>
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="White"
                                                   FontWeight="SemiBold"
                                                   FontSize="11"
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"/>
                                        <TextBlock Text="{Binding MidiNote, StringFormat='({0})'}"
                                                   Foreground="#AAAAAA"
                                                   FontSize="9"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Waveform Preview -->
                    <TextBlock Grid.Row="2" Style="{StaticResource SectionHeaderStyle}" Text="WAVEFORM PREVIEW"/>

                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="80"/>
                        </Grid.RowDefinitions>

                        <!-- Waveform Display -->
                        <Border Grid.Row="0" Background="#101010" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4" Margin="0,0,0,8">
                            <Canvas x:Name="WaveformCanvas" ClipToBounds="True"/>
                        </Border>

                        <!-- Pitch Envelope Label -->
                        <TextBlock Grid.Row="1" Text="PITCH ENVELOPE" Style="{StaticResource SectionHeaderStyle}" Margin="0,8,0,4"/>

                        <!-- Pitch Envelope Display -->
                        <Border Grid.Row="2" Background="#101010" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4">
                            <Canvas x:Name="PitchEnvelopeCanvas" ClipToBounds="True"/>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- Right Panel: Tabbed Parameters -->
            <TabControl Grid.Column="1" Background="Transparent" BorderThickness="0" Margin="8,8,8,8">
                <TabControl.Resources>
                    <Style TargetType="TabItem" BasedOn="{StaticResource DrumTabItemStyle}"/>
                </TabControl.Resources>

                <!-- KICK Tab -->
                <TabItem Header="KICK">
                    <Border Background="#141414" BorderBrush="{StaticResource KickBrush}" BorderThickness="0,2,0,0" CornerRadius="0,0,4,4" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="KICK DRUM PARAMETERS" Foreground="{StaticResource KickBrush}" FontWeight="Bold" FontSize="13" Margin="0,0,0,16"/>

                            <UniformGrid Grid.Row="1" Columns="4" Rows="2">
                                <!-- Pitch -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Pitch (Hz)"/>
                                    <Slider x:Name="KickPitchSlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="20" Maximum="200" Value="{Binding KickPitch, Mode=TwoWay}"
                                            ValueChanged="KickPitchSlider_ValueChanged"/>
                                    <TextBlock x:Name="KickPitchValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding KickPitch, StringFormat='{}{0:F0}'}"/>
                                </StackPanel>

                                <!-- Pitch Decay -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Pitch Decay"/>
                                    <Slider x:Name="KickPitchDecaySlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="1" Maximum="100" Value="{Binding KickPitchDecay, Mode=TwoWay}"
                                            ValueChanged="KickPitchDecaySlider_ValueChanged"/>
                                    <TextBlock x:Name="KickPitchDecayValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding KickPitchDecay, StringFormat='{}{0:F0}'}"/>
                                </StackPanel>

                                <!-- Click -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Click"/>
                                    <Slider x:Name="KickClickSlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="0" Maximum="1" Value="{Binding KickClick, Mode=TwoWay}"
                                            ValueChanged="KickClickSlider_ValueChanged"/>
                                    <TextBlock x:Name="KickClickValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding KickClick, StringFormat='{}{0:P0}'}"/>
                                </StackPanel>

                                <!-- Tone (Sub) -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Tone (Sub)"/>
                                    <Slider x:Name="KickSubSlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="0" Maximum="1" Value="{Binding KickSub, Mode=TwoWay}"
                                            ValueChanged="KickSubSlider_ValueChanged"/>
                                    <TextBlock x:Name="KickSubValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding KickSub, StringFormat='{}{0:P0}'}"/>
                                </StackPanel>

                                <!-- Decay -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Decay"/>
                                    <Slider x:Name="KickDecaySlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="1" Maximum="50" Value="{Binding KickDecay, Mode=TwoWay}"
                                            ValueChanged="KickDecaySlider_ValueChanged"/>
                                    <TextBlock x:Name="KickDecayValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding KickDecay, StringFormat='{}{0:F0}'}"/>
                                </StackPanel>

                                <!-- Drive -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Drive"/>
                                    <Slider x:Name="KickDriveSlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="0" Maximum="1" Value="{Binding KickDrive, Mode=TwoWay}"
                                            ValueChanged="KickDriveSlider_ValueChanged"/>
                                    <TextBlock x:Name="KickDriveValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding KickDrive, StringFormat='{}{0:P0}'}"/>
                                </StackPanel>

                                <!-- Pitch Amount -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Pitch Env"/>
                                    <Slider x:Name="KickPitchAmountSlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="0" Maximum="10" Value="{Binding KickPitchAmount, Mode=TwoWay}"
                                            ValueChanged="KickPitchAmountSlider_ValueChanged"/>
                                    <TextBlock x:Name="KickPitchAmountValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding KickPitchAmount, StringFormat='{}{0:F1}'}"/>
                                </StackPanel>
                            </UniformGrid>
                        </Grid>
                    </Border>
                </TabItem>

                <!-- SNARE Tab -->
                <TabItem Header="SNARE">
                    <Border Background="#141414" BorderBrush="{StaticResource SnareBrush}" BorderThickness="0,2,0,0" CornerRadius="0,0,4,4" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="SNARE DRUM PARAMETERS" Foreground="{StaticResource SnareBrush}" FontWeight="Bold" FontSize="13" Margin="0,0,0,16"/>

                            <UniformGrid Grid.Row="1" Columns="4">
                                <!-- Pitch (Body) -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Pitch (Hz)"/>
                                    <Slider x:Name="SnareBodySlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="100" Maximum="400" Value="{Binding SnareBody, Mode=TwoWay}"
                                            ValueChanged="SnareBodySlider_ValueChanged"/>
                                    <TextBlock x:Name="SnareBodyValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding SnareBody, StringFormat='{}{0:F0}'}"/>
                                </StackPanel>

                                <!-- Tone -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Tone"/>
                                    <Slider x:Name="SnareToneSlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="0" Maximum="1" Value="{Binding SnareTone, Mode=TwoWay}"
                                            ValueChanged="SnareToneSlider_ValueChanged"/>
                                    <TextBlock x:Name="SnareToneValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding SnareTone, StringFormat='{}{0:P0}'}"/>
                                </StackPanel>

                                <!-- Noise Level (Snap) -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Noise Level"/>
                                    <Slider x:Name="SnareSnapSlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="0" Maximum="1" Value="{Binding SnareSnap, Mode=TwoWay}"
                                            ValueChanged="SnareSnapSlider_ValueChanged"/>
                                    <TextBlock x:Name="SnareSnapValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding SnareSnap, StringFormat='{}{0:P0}'}"/>
                                </StackPanel>

                                <!-- Decay -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Decay"/>
                                    <Slider x:Name="SnareDecaySlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="5" Maximum="50" Value="{Binding SnareDecay, Mode=TwoWay}"
                                            ValueChanged="SnareDecaySlider_ValueChanged"/>
                                    <TextBlock x:Name="SnareDecayValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding SnareDecay, StringFormat='{}{0:F0}'}"/>
                                </StackPanel>
                            </UniformGrid>
                        </Grid>
                    </Border>
                </TabItem>

                <!-- HI-HAT Tab -->
                <TabItem Header="HI-HAT">
                    <Border Background="#141414" BorderBrush="{StaticResource HiHatBrush}" BorderThickness="0,2,0,0" CornerRadius="0,0,4,4" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="HI-HAT PARAMETERS" Foreground="{StaticResource HiHatBrush}" FontWeight="Bold" FontSize="13" Margin="0,0,0,16"/>

                            <!-- Open/Closed Toggle -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="Mode:" Foreground="{StaticResource SecondaryForegroundBrush}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <ToggleButton x:Name="HiHatOpenToggle" Style="{StaticResource ToggleButtonStyle}"
                                              Content="CLOSED" Width="80"
                                              IsChecked="{Binding HiHatIsOpen, Mode=TwoWay}"
                                              Checked="HiHatOpenToggle_Changed" Unchecked="HiHatOpenToggle_Changed"/>
                                <TextBlock Text="Open" Foreground="{StaticResource SecondaryForegroundBrush}" VerticalAlignment="Center" Margin="8,0,0,0"
                                           Visibility="{Binding HiHatIsOpen, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}"/>
                            </StackPanel>

                            <UniformGrid Grid.Row="2" Columns="4">
                                <!-- Tone -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Tone (Hz)"/>
                                    <Slider x:Name="HiHatToneSlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="4000" Maximum="16000" Value="{Binding HiHatTone, Mode=TwoWay}"
                                            ValueChanged="HiHatToneSlider_ValueChanged"/>
                                    <TextBlock x:Name="HiHatToneValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding HiHatTone, StringFormat='{}{0:F0}'}"/>
                                </StackPanel>

                                <!-- Noise Color -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Noise Color"/>
                                    <Slider x:Name="HiHatNoiseColorSlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="0" Maximum="1" Value="{Binding HiHatNoiseColor, Mode=TwoWay}"
                                            ValueChanged="HiHatNoiseColorSlider_ValueChanged"/>
                                    <TextBlock x:Name="HiHatNoiseColorValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding HiHatNoiseColor, StringFormat='{}{0:P0}'}"/>
                                </StackPanel>

                                <!-- Closed Decay -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Closed Decay"/>
                                    <Slider x:Name="HiHatClosedDecaySlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="10" Maximum="100" Value="{Binding HiHatClosedDecay, Mode=TwoWay}"
                                            ValueChanged="HiHatClosedDecaySlider_ValueChanged"/>
                                    <TextBlock x:Name="HiHatClosedDecayValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding HiHatClosedDecay, StringFormat='{}{0:F0}'}"/>
                                </StackPanel>

                                <!-- Open Decay -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Open Decay"/>
                                    <Slider x:Name="HiHatOpenDecaySlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="2" Maximum="30" Value="{Binding HiHatOpenDecay, Mode=TwoWay}"
                                            ValueChanged="HiHatOpenDecaySlider_ValueChanged"/>
                                    <TextBlock x:Name="HiHatOpenDecayValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding HiHatOpenDecay, StringFormat='{}{0:F0}'}"/>
                                </StackPanel>
                            </UniformGrid>
                        </Grid>
                    </Border>
                </TabItem>

                <!-- CLAP Tab -->
                <TabItem Header="CLAP">
                    <Border Background="#141414" BorderBrush="{StaticResource ClapBrush}" BorderThickness="0,2,0,0" CornerRadius="0,0,4,4" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="CLAP PARAMETERS" Foreground="{StaticResource ClapBrush}" FontWeight="Bold" FontSize="13" Margin="0,0,0,16"/>

                            <UniformGrid Grid.Row="1" Columns="3">
                                <!-- Spread (Layers) -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Spread"/>
                                    <Slider x:Name="ClapSpreadSlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="1" Maximum="8" Value="{Binding ClapSpread, Mode=TwoWay}"
                                            ValueChanged="ClapSpreadSlider_ValueChanged"/>
                                    <TextBlock x:Name="ClapSpreadValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding ClapSpread, StringFormat='{}{0:F0}'}"/>
                                </StackPanel>

                                <!-- Decay -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Decay"/>
                                    <Slider x:Name="ClapDecaySlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="5" Maximum="50" Value="{Binding ClapDecay, Mode=TwoWay}"
                                            ValueChanged="ClapDecaySlider_ValueChanged"/>
                                    <TextBlock x:Name="ClapDecayValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding ClapDecay, StringFormat='{}{0:F0}'}"/>
                                </StackPanel>

                                <!-- Room -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Room"/>
                                    <Slider x:Name="ClapRoomSlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="0" Maximum="1" Value="{Binding ClapRoom, Mode=TwoWay}"
                                            ValueChanged="ClapRoomSlider_ValueChanged"/>
                                    <TextBlock x:Name="ClapRoomValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding ClapRoom, StringFormat='{}{0:P0}'}"/>
                                </StackPanel>
                            </UniformGrid>
                        </Grid>
                    </Border>
                </TabItem>

                <!-- TOM Tab -->
                <TabItem Header="TOM">
                    <Border Background="#141414" BorderBrush="{StaticResource TomBrush}" BorderThickness="0,2,0,0" CornerRadius="0,0,4,4" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="TOM PARAMETERS" Foreground="{StaticResource TomBrush}" FontWeight="Bold" FontSize="13" Margin="0,0,0,16"/>

                            <UniformGrid Grid.Row="1" Columns="2">
                                <!-- Pitch -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Pitch (Hz)"/>
                                    <Slider x:Name="TomPitchSlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="50" Maximum="300" Value="{Binding TomPitch, Mode=TwoWay}"
                                            ValueChanged="TomPitchSlider_ValueChanged"/>
                                    <TextBlock x:Name="TomPitchValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding TomPitch, StringFormat='{}{0:F0}'}"/>
                                </StackPanel>

                                <!-- Decay -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Decay"/>
                                    <Slider x:Name="TomDecaySlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="3" Maximum="30" Value="{Binding TomDecay, Mode=TwoWay}"
                                            ValueChanged="TomDecaySlider_ValueChanged"/>
                                    <TextBlock x:Name="TomDecayValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding TomDecay, StringFormat='{}{0:F0}'}"/>
                                </StackPanel>
                            </UniformGrid>
                        </Grid>
                    </Border>
                </TabItem>

                <!-- CYMBAL Tab -->
                <TabItem Header="CYMBAL">
                    <Border Background="#141414" BorderBrush="{StaticResource CymbalBrush}" BorderThickness="0,2,0,0" CornerRadius="0,0,4,4" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="CYMBAL PARAMETERS" Foreground="{StaticResource CymbalBrush}" FontWeight="Bold" FontSize="13" Margin="0,0,0,16"/>

                            <!-- Cymbal Type Selection -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="Type:" Foreground="{StaticResource SecondaryForegroundBrush}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <RadioButton x:Name="CymbalCrashRadio" Content="Crash" Foreground="{StaticResource ForegroundBrush}"
                                             GroupName="CymbalType" IsChecked="{Binding CymbalIsCrash, Mode=TwoWay}"
                                             Margin="0,0,16,0"/>
                                <RadioButton x:Name="CymbalRideRadio" Content="Ride" Foreground="{StaticResource ForegroundBrush}"
                                             GroupName="CymbalType" IsChecked="{Binding CymbalIsRide, Mode=TwoWay}"/>
                            </StackPanel>

                            <UniformGrid Grid.Row="2" Columns="3">
                                <!-- Tone -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Tone (Hz)"/>
                                    <Slider x:Name="CymbalToneSlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="4000" Maximum="12000" Value="{Binding CymbalTone, Mode=TwoWay}"
                                            ValueChanged="CymbalToneSlider_ValueChanged"/>
                                    <TextBlock x:Name="CymbalToneValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding CymbalTone, StringFormat='{}{0:F0}'}"/>
                                </StackPanel>

                                <!-- Decay -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Decay"/>
                                    <Slider x:Name="CymbalDecaySlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="1" Maximum="5" Value="{Binding CymbalDecay, Mode=TwoWay}"
                                            ValueChanged="CymbalDecaySlider_ValueChanged"/>
                                    <TextBlock x:Name="CymbalDecayValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding CymbalDecay, StringFormat='{}{0:F1}'}"/>
                                </StackPanel>

                                <!-- Brightness -->
                                <StackPanel Margin="8">
                                    <TextBlock Style="{StaticResource ParamLabelStyle}" Text="Brightness"/>
                                    <Slider x:Name="CymbalBrightnessSlider" Style="{StaticResource DarkSliderStyle}"
                                            Minimum="0" Maximum="1" Value="{Binding CymbalBrightness, Mode=TwoWay}"
                                            ValueChanged="CymbalBrightnessSlider_ValueChanged"/>
                                    <TextBlock x:Name="CymbalBrightnessValue" Style="{StaticResource ParamValueStyle}"
                                               Text="{Binding CymbalBrightness, StringFormat='{}{0:P0}'}"/>
                                </StackPanel>
                            </UniformGrid>
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</UserControl>
