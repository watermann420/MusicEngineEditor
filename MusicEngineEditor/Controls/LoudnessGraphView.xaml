<UserControl x:Class="MusicEngineEditor.Controls.LoudnessGraphView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="250" d:DesignWidth="600"
             Background="#1E1F22"
             MinHeight="120"
             MinWidth="300">

    <UserControl.Resources>
        <!-- Dark theme colors -->
        <Color x:Key="BackgroundColor">#1E1F22</Color>
        <Color x:Key="GridColor">#2B2D30</Color>
        <Color x:Key="BorderColor">#393B40</Color>
        <Color x:Key="TextColor">#6F737A</Color>
        <Color x:Key="IntegratedColor">#4CAF50</Color>
        <Color x:Key="ShortTermColor">#2196F3</Color>
        <Color x:Key="MomentaryColor">#9C27B0</Color>
        <Color x:Key="TruePeakColor">#F44336</Color>
        <Color x:Key="TargetColor">#FF9800</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="GridBrush" Color="{StaticResource GridColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="IntegratedBrush" Color="{StaticResource IntegratedColor}"/>
        <SolidColorBrush x:Key="ShortTermBrush" Color="{StaticResource ShortTermColor}"/>
        <SolidColorBrush x:Key="MomentaryBrush" Color="{StaticResource MomentaryColor}"/>
        <SolidColorBrush x:Key="TruePeakBrush" Color="{StaticResource TruePeakColor}"/>
        <SolidColorBrush x:Key="TargetBrush" Color="{StaticResource TargetColor}"/>

        <!-- Button Style -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Button Style -->
        <Style x:Key="CurveToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Background="{StaticResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#2B2D30"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="10,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Loudness History"
                               FontWeight="SemiBold"
                               FontSize="12"
                               Foreground="{DynamicResource BrightForegroundBrush}"
                               VerticalAlignment="Center"/>

                    <!-- Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Target:"
                                   FontSize="10"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,4,0"/>
                        <TextBox x:Name="TargetLufsTextBox"
                                 Text="-14"
                                 Width="40"
                                 FontSize="10"
                                 Background="#1A1A1A"
                                 Foreground="{StaticResource TargetBrush}"
                                 BorderBrush="#3A3A3A"
                                 BorderThickness="1"
                                 Padding="4,2"
                                 TextChanged="TargetLufsTextBox_TextChanged"
                                 ToolTip="Target LUFS"
                                 Margin="0,0,4,0"/>
                        <TextBlock Text="LUFS"
                                   FontSize="10"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>

                        <Button x:Name="ResetButton"
                                Style="{StaticResource ControlButtonStyle}"
                                Content="Reset"
                                Click="ResetButton_Click"
                                ToolTip="Reset history"
                                Margin="0,0,4,0"/>

                        <Button x:Name="ExportButton"
                                Style="{StaticResource ControlButtonStyle}"
                                Content="Export"
                                Click="ExportButton_Click"
                                ToolTip="Export loudness data"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Graph display -->
            <Grid Grid.Row="1" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LUFS scale labels -->
                <Canvas x:Name="LufsScaleCanvas"
                        Grid.Column="0"
                        Width="40"
                        Background="Transparent"/>

                <!-- Main graph area -->
                <Border Grid.Column="1"
                        Background="#1A1A1A"
                        CornerRadius="3"
                        BorderBrush="#3A3A3A"
                        BorderThickness="1">
                    <Grid ClipToBounds="True"
                          MouseWheel="GraphArea_MouseWheel"
                          MouseLeftButtonDown="GraphArea_MouseLeftButtonDown"
                          MouseMove="GraphArea_MouseMove"
                          MouseLeftButtonUp="GraphArea_MouseLeftButtonUp">
                        <!-- Grid lines -->
                        <Canvas x:Name="GridCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Target line -->
                        <Canvas x:Name="TargetLineCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- True peak markers -->
                        <Canvas x:Name="TruePeakCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Integrated loudness curve -->
                        <Canvas x:Name="IntegratedCurveCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Short-term loudness curve -->
                        <Canvas x:Name="ShortTermCurveCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Momentary loudness curve -->
                        <Canvas x:Name="MomentaryCurveCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Playhead -->
                        <Border x:Name="PlayheadLine"
                                Width="1"
                                Background="White"
                                HorizontalAlignment="Left"
                                Visibility="Collapsed"/>

                        <!-- Current values overlay -->
                        <Border x:Name="CurrentValuesPanel"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="#C01A1A1A"
                                CornerRadius="3"
                                Padding="8,6"
                                Margin="8">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="{StaticResource IntegratedBrush}"
                                            Width="8" Height="8" CornerRadius="4"
                                            VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="I: "
                                               FontSize="10"
                                               Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock x:Name="IntegratedValueText"
                                               Text="-- LUFS"
                                               FontSize="10"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource IntegratedBrush}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <Border Background="{StaticResource ShortTermBrush}"
                                            Width="8" Height="8" CornerRadius="4"
                                            VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="S: "
                                               FontSize="10"
                                               Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock x:Name="ShortTermValueText"
                                               Text="-- LUFS"
                                               FontSize="10"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource ShortTermBrush}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <Border Background="{StaticResource MomentaryBrush}"
                                            Width="8" Height="8" CornerRadius="4"
                                            VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="M: "
                                               FontSize="10"
                                               Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock x:Name="MomentaryValueText"
                                               Text="-- LUFS"
                                               FontSize="10"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource MomentaryBrush}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <Border Background="{StaticResource TruePeakBrush}"
                                            Width="8" Height="8" CornerRadius="4"
                                            VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="TP: "
                                               FontSize="10"
                                               Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock x:Name="TruePeakValueText"
                                               Text="-- dBTP"
                                               FontSize="10"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TruePeakBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Time axis -->
            <Canvas x:Name="TimeAxisCanvas"
                    Grid.Row="2"
                    Height="16"
                    Margin="48,0,8,4"
                    Background="Transparent"/>

            <!-- Legend and controls -->
            <Grid Grid.Row="3" Margin="48,0,8,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Curve toggles -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal">
                    <ToggleButton x:Name="ShowIntegratedToggle"
                                  Style="{StaticResource CurveToggleStyle}"
                                  IsChecked="True"
                                  Checked="CurveToggle_Changed"
                                  Unchecked="CurveToggle_Changed">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="{StaticResource IntegratedBrush}"
                                    Width="16" Height="3" CornerRadius="1"
                                    VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="Integrated"
                                       FontSize="9"
                                       Foreground="{StaticResource TextBrush}"/>
                        </StackPanel>
                    </ToggleButton>

                    <ToggleButton x:Name="ShowShortTermToggle"
                                  Style="{StaticResource CurveToggleStyle}"
                                  IsChecked="True"
                                  Checked="CurveToggle_Changed"
                                  Unchecked="CurveToggle_Changed"
                                  Margin="8,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="{StaticResource ShortTermBrush}"
                                    Width="16" Height="3" CornerRadius="1"
                                    VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="Short-term"
                                       FontSize="9"
                                       Foreground="{StaticResource TextBrush}"/>
                        </StackPanel>
                    </ToggleButton>

                    <ToggleButton x:Name="ShowMomentaryToggle"
                                  Style="{StaticResource CurveToggleStyle}"
                                  IsChecked="True"
                                  Checked="CurveToggle_Changed"
                                  Unchecked="CurveToggle_Changed"
                                  Margin="8,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="{StaticResource MomentaryBrush}"
                                    Width="16" Height="3" CornerRadius="1"
                                    VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="Momentary"
                                       FontSize="9"
                                       Foreground="{StaticResource TextBrush}"/>
                        </StackPanel>
                    </ToggleButton>

                    <ToggleButton x:Name="ShowTruePeakToggle"
                                  Style="{StaticResource CurveToggleStyle}"
                                  IsChecked="True"
                                  Checked="CurveToggle_Changed"
                                  Unchecked="CurveToggle_Changed"
                                  Margin="8,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="{StaticResource TruePeakBrush}"
                                    Width="8" Height="8" CornerRadius="4"
                                    VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="True Peak"
                                       FontSize="9"
                                       Foreground="{StaticResource TextBrush}"/>
                        </StackPanel>
                    </ToggleButton>
                </StackPanel>

                <!-- Zoom controls -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal">
                    <TextBlock Text="Zoom:"
                               FontSize="9"
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    <Slider x:Name="ZoomSlider"
                            Width="80"
                            Minimum="1"
                            Maximum="10"
                            Value="1"
                            ValueChanged="ZoomSlider_ValueChanged"
                            VerticalAlignment="Center"/>
                    <Button x:Name="ZoomFitButton"
                            Style="{StaticResource ControlButtonStyle}"
                            Content="Fit"
                            Click="ZoomFitButton_Click"
                            ToolTip="Fit to view"
                            Margin="4,0,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
