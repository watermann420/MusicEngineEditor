<UserControl x:Class="MusicEngineEditor.Controls.GoniometerDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="200"
             Background="#1E1F22"
             MinHeight="100"
             MinWidth="100">

    <UserControl.Resources>
        <!-- Dark theme colors -->
        <Color x:Key="BackgroundColor">#1E1F22</Color>
        <Color x:Key="GridColor">#2B2D30</Color>
        <Color x:Key="BorderColor">#393B40</Color>
        <Color x:Key="AxisColor">#4A4D52</Color>
        <Color x:Key="TextColor">#6F737A</Color>
        <Color x:Key="PointColor">#00CED1</Color>
        <Color x:Key="PointHighColor">#00FFFF</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="GridBrush" Color="{StaticResource GridColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="AxisBrush" Color="{StaticResource AxisColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="PointBrush" Color="{StaticResource PointColor}"/>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="2"
            Background="{StaticResource BackgroundBrush}">
        <Grid>
            <!-- Grid lines and axes are drawn on this canvas -->
            <Canvas x:Name="GridCanvas" ClipToBounds="True"/>

            <!-- Lissajous points are drawn here using WriteableBitmap for performance -->
            <Image x:Name="PointsImage"
                   RenderOptions.BitmapScalingMode="NearestNeighbor"
                   Stretch="Fill"/>

            <!-- Labels overlay -->
            <Canvas x:Name="LabelsCanvas" ClipToBounds="True"/>
        </Grid>
    </Border>
</UserControl>
