<UserControl x:Class="MusicEngineEditor.Controls.FreezeTrackControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="60" d:DesignWidth="200"
             Background="Transparent">

    <UserControl.Resources>
        <!-- Freeze Button Base Style -->
        <Style x:Key="FreezeButtonBaseStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Freeze Button (Ice blue) -->
        <Style x:Key="FreezeButtonStyle" TargetType="Button" BasedOn="{StaticResource FreezeButtonBaseStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#5DADE2" Offset="0"/>
                        <GradientStop Color="#3498DB" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#2980B9"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Unfreeze Button (Orange) -->
        <Style x:Key="UnfreezeButtonStyle" TargetType="Button" BasedOn="{StaticResource FreezeButtonBaseStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#F5B041" Offset="0"/>
                        <GradientStop Color="#E67E22" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#D35400"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Cancel Button -->
        <Style x:Key="CancelFreezeButtonStyle" TargetType="Button" BasedOn="{StaticResource FreezeButtonBaseStyle}">
            <Setter Property="Background" Value="#5C3535"/>
            <Setter Property="BorderBrush" Value="#6B4040"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
        </Style>

        <!-- State indicator colors -->
        <SolidColorBrush x:Key="LiveStateBrush" Color="#27AE60"/>
        <SolidColorBrush x:Key="FrozenStateBrush" Color="#3498DB"/>
        <SolidColorBrush x:Key="FreezingStateBrush" Color="#F39C12"/>
    </UserControl.Resources>

    <Border Background="{DynamicResource PanelBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8,6">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- State Icon and Indicator -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,12,0">
                <!-- Snowflake/Play Icon -->
                <TextBlock x:Name="StateIcon"
                           Text="&#x2744;"
                           FontSize="18"
                           Foreground="{StaticResource LiveStateBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,6,0"/>

                <!-- State Text -->
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="StateText"
                               Text="Live"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}"/>
                    <TextBlock x:Name="CpuSavingsText"
                               Text=""
                               FontSize="9"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               Visibility="Collapsed"/>
                </StackPanel>
            </StackPanel>

            <!-- Progress Section (shown during freeze/unfreeze) -->
            <Grid Grid.Column="1" x:Name="ProgressSection" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ProgressBar Grid.Row="0"
                             x:Name="FreezeProgressBar"
                             Height="4"
                             Minimum="0"
                             Maximum="100"
                             Value="0"
                             Margin="0,0,0,2"/>

                <TextBlock Grid.Row="1"
                           x:Name="ProgressText"
                           Text="0%"
                           FontSize="9"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           HorizontalAlignment="Center"/>
            </Grid>

            <!-- Frozen Duration (shown when frozen) -->
            <TextBlock Grid.Column="1"
                       x:Name="FrozenDurationText"
                       Text=""
                       FontSize="10"
                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Visibility="Collapsed"/>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <!-- Freeze Button -->
                <Button x:Name="FreezeButton"
                        Style="{StaticResource FreezeButtonStyle}"
                        Click="FreezeButton_Click"
                        ToolTip="Freeze track to reduce CPU usage">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#x2744;" FontSize="12" Margin="0,0,4,0"/>
                        <TextBlock Text="Freeze"/>
                    </StackPanel>
                </Button>

                <!-- Unfreeze Button -->
                <Button x:Name="UnfreezeButton"
                        Style="{StaticResource UnfreezeButtonStyle}"
                        Click="UnfreezeButton_Click"
                        Visibility="Collapsed"
                        ToolTip="Unfreeze track for editing">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#x2600;" FontSize="12" Margin="0,0,4,0"/>
                        <TextBlock Text="Unfreeze"/>
                    </StackPanel>
                </Button>

                <!-- Cancel Button (shown during freeze/unfreeze) -->
                <Button x:Name="CancelButton"
                        Style="{StaticResource CancelFreezeButtonStyle}"
                        Click="CancelButton_Click"
                        Visibility="Collapsed"
                        ToolTip="Cancel operation"
                        Margin="4,0,0,0">
                    <TextBlock Text="&#x2715;" FontSize="10"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
