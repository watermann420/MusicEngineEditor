<UserControl x:Class="MusicEngineEditor.Controls.ClipLauncherGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MusicEngineEditor.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:SessionViewModel}"
             Background="#0D0D0D">

    <UserControl.Resources>
        <!-- Colors -->
        <Color x:Key="BackgroundColor">#0D0D0D</Color>
        <Color x:Key="PanelColor">#181818</Color>
        <Color x:Key="BorderColor">#2A2A2A</Color>
        <Color x:Key="AccentColor">#00D9FF</Color>
        <Color x:Key="SuccessColor">#00FF88</Color>
        <Color x:Key="ErrorColor">#FF4757</Color>
        <Color x:Key="WarningColor">#FFB800</Color>
        <Color x:Key="TextPrimaryColor">#E0E0E0</Color>
        <Color x:Key="TextSecondaryColor">#808080</Color>
        <Color x:Key="SlotEmptyColor">#1A1A1A</Color>
        <Color x:Key="SlotHoverColor">#252525</Color>
        <Color x:Key="PlayingColor">#00FF88</Color>
        <Color x:Key="QueuedColor">#FFB800</Color>
        <Color x:Key="RecordingColor">#FF4757</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
        <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="SlotEmptyBrush" Color="{StaticResource SlotEmptyColor}"/>

        <!-- Clip Slot Style -->
        <Style x:Key="ClipSlotStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SlotEmptyBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="SlotBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <!-- Progress Bar (behind content) -->
                                <Border x:Name="ProgressBar"
                                        HorizontalAlignment="Left"
                                        Background="#2000FF88"
                                        CornerRadius="3"
                                        Width="0"/>

                                <!-- Content -->
                                <ContentPresenter HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Stretch"/>

                                <!-- Selection Border -->
                                <Border x:Name="SelectionBorder"
                                        BorderBrush="{StaticResource AccentBrush}"
                                        BorderThickness="2"
                                        CornerRadius="4"
                                        Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="SlotBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource SlotHoverColor}"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="SlotBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#303030"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Scene Launch Button Style -->
        <Style x:Key="SceneLaunchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Path x:Name="PlayIcon"
                                      Data="M 0,0 L 8,5 L 0,10 Z"
                                      Fill="{StaticResource SuccessBrush}"
                                      VerticalAlignment="Center"
                                      Margin="0,0,4,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#252525"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SuccessBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SuccessBrush}"/>
                                <Setter TargetName="PlayIcon" Property="Fill" Value="White"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Track Stop Button Style -->
        <Style x:Key="TrackStopButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ToolTip" Value="Stop Track"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Rectangle x:Name="StopIcon"
                                       Width="8" Height="8"
                                       Fill="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#252525"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="StopIcon" Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ErrorBrush}"/>
                                <Setter TargetName="StopIcon" Property="Fill" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Track Header Style -->
        <Style x:Key="TrackHeaderStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="MinHeight" Value="60"/>
        </Style>

        <!-- Track Control Button Style -->
        <Style x:Key="TrackControlButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="#303030"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#404040"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Track Headers -->
        <ScrollViewer x:Name="TrackHeaderScrollViewer"
                      Grid.Row="0" Grid.Column="0"
                      HorizontalScrollBarVisibility="Hidden"
                      VerticalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="TrackHeaders" ItemsSource="{Binding Tracks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:SessionTrackViewModel}">
                        <Border Style="{StaticResource TrackHeaderStyle}"
                                Width="90" Margin="1,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Track Color Bar -->
                                <Border Grid.Row="0"
                                        Height="3"
                                        CornerRadius="1"
                                        Margin="0,0,0,4">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding Color}"/>
                                    </Border.Background>
                                </Border>

                                <!-- Track Name -->
                                <TextBlock Grid.Row="1"
                                           Text="{Binding Name}"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>

                                <!-- Track Controls -->
                                <StackPanel Grid.Row="2"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0,4,0,0">
                                    <!-- Solo Button -->
                                    <ToggleButton Style="{StaticResource TrackControlButtonStyle}"
                                                  IsChecked="{Binding IsSoloed}"
                                                  ToolTip="Solo">
                                        <ToggleButton.Content>
                                            <TextBlock Text="S">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSoloed}" Value="True">
                                                                <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </ToggleButton.Content>
                                    </ToggleButton>

                                    <!-- Mute Button -->
                                    <ToggleButton Style="{StaticResource TrackControlButtonStyle}"
                                                  IsChecked="{Binding IsMuted}"
                                                  ToolTip="Mute"
                                                  Margin="2,0,0,0">
                                        <ToggleButton.Content>
                                            <TextBlock Text="M">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsMuted}" Value="True">
                                                                <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </ToggleButton.Content>
                                    </ToggleButton>

                                    <!-- Arm Button -->
                                    <ToggleButton Style="{StaticResource TrackControlButtonStyle}"
                                                  IsChecked="{Binding IsArmed}"
                                                  ToolTip="Arm for Recording"
                                                  Margin="2,0,0,0">
                                        <ToggleButton.Content>
                                            <Ellipse Width="8" Height="8">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="{StaticResource TextSecondaryBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsArmed}" Value="True">
                                                                <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                        </ToggleButton.Content>
                                    </ToggleButton>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty corner (top-right) -->
        <Border Grid.Row="0" Grid.Column="1"
                Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1,0,0,1"
                Width="70"/>

        <!-- Clip Grid -->
        <ScrollViewer x:Name="ClipGridScrollViewer"
                      Grid.Row="1" Grid.Column="0"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      ScrollChanged="ClipGridScrollViewer_ScrollChanged">
            <ItemsControl x:Name="ClipGrid" ItemsSource="{Binding ClipSlots}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid x:Name="ClipUniformGrid"
                                     Columns="{Binding TrackCount}"
                                     Rows="{Binding SceneCount}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:ClipSlotViewModel}">
                        <Button x:Name="SlotButton"
                                Style="{StaticResource ClipSlotStyle}"
                                Click="SlotButton_Click"
                                MouseDoubleClick="SlotButton_DoubleClick"
                                Tag="{Binding}">
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Launch" Click="LaunchMenuItem_Click"/>
                                    <MenuItem Header="Edit" Click="EditMenuItem_Click"
                                              IsEnabled="{Binding HasClip}"/>
                                    <Separator/>
                                    <MenuItem Header="Create Clip" Click="CreateMenuItem_Click"
                                              IsEnabled="{Binding HasClip, Converter={StaticResource InverseBoolConverter}}"/>
                                    <MenuItem Header="Duplicate" Click="DuplicateMenuItem_Click"
                                              IsEnabled="{Binding HasClip}"/>
                                    <MenuItem Header="Delete" Click="DeleteMenuItem_Click"
                                              IsEnabled="{Binding HasClip}"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                            <Grid>
                                <!-- Empty Slot Content -->
                                <Border x:Name="EmptySlotContent"
                                        Visibility="{Binding HasClip, Converter={StaticResource InverseBoolToVisConverter}}">
                                    <TextBlock Text="+"
                                               FontSize="16"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Opacity="0.5"/>
                                </Border>

                                <!-- Clip Content -->
                                <Grid x:Name="ClipContent"
                                      Visibility="{Binding HasClip, Converter={StaticResource BoolToVisConverter}}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Clip Color Bar -->
                                    <Border Grid.Row="0"
                                            Height="4"
                                            CornerRadius="2"
                                            Margin="0,0,0,2">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding ClipColor}"/>
                                        </Border.Background>
                                    </Border>

                                    <!-- Clip Info -->
                                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                                        <!-- Clip Name -->
                                        <TextBlock Text="{Binding ClipName}"
                                                   FontSize="10"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   TextTrimming="CharacterEllipsis"
                                                   HorizontalAlignment="Center"
                                                   MaxWidth="70"/>

                                        <!-- Clip Type Indicator -->
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,2,0,0">
                                            <TextBlock FontSize="8"
                                                       Foreground="{StaticResource TextSecondaryBrush}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="MIDI"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsAudioClip}" Value="True">
                                                                <Setter Property="Text" Value="AUDIO"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Progress Bar -->
                                    <Border Grid.Row="0" Grid.RowSpan="2"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Stretch"
                                            CornerRadius="3"
                                            Opacity="0.3"
                                            IsHitTestVisible="False">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Width" Value="0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>

                                    <!-- Status Indicator -->
                                    <Border Grid.Row="0" Grid.RowSpan="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Width="8" Height="8"
                                            CornerRadius="4"
                                            Margin="0,2,2,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsQueued}" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsRecording}" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </Grid>

                                <!-- Selection Highlight -->
                                <Border BorderBrush="{StaticResource AccentBrush}"
                                        BorderThickness="2"
                                        CornerRadius="4"
                                        Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisConverter}}"
                                        IsHitTestVisible="False"/>
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Scene Launch Buttons -->
        <ScrollViewer x:Name="SceneLaunchScrollViewer"
                      Grid.Row="1" Grid.Column="1"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Hidden">
            <ItemsControl x:Name="SceneLaunchButtons" ItemsSource="{Binding Scenes}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:SceneViewModel}">
                        <Button Style="{StaticResource SceneLaunchButtonStyle}"
                                Content="{Binding Name}"
                                Height="52"
                                Margin="1"
                                Click="SceneLaunchButton_Click"
                                Tag="{Binding}">
                            <Button.ToolTip>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding TempoOverride, StringFormat='Tempo: {0:F1} BPM'}"
                                               Visibility="{Binding TempoOverride, Converter={StaticResource NullToCollapsedConverter}}"/>
                                </StackPanel>
                            </Button.ToolTip>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Track Stop Buttons Row (at bottom) -->
        <Border Grid.Row="1" Grid.Column="0"
                VerticalAlignment="Bottom"
                Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="4">
            <ScrollViewer x:Name="TrackStopScrollViewer"
                          HorizontalScrollBarVisibility="Hidden"
                          VerticalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Tracks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:SessionTrackViewModel}">
                            <Button Width="82"
                                    Height="24"
                                    Margin="5,0"
                                    Click="TrackStopButton_Click"
                                    Tag="{Binding}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource TrackStopButtonStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasPlayingClip}" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource SuccessBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
