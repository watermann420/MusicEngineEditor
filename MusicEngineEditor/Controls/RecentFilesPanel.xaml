<UserControl x:Class="MusicEngineEditor.Controls.RecentFilesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="350"
             Background="{DynamicResource PanelBackgroundBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:RecentFilesInverseBoolToVisibilityConverter x:Key="InverseBoolToVisConverter"/>

        <!-- Pin Button Style -->
        <Style x:Key="PinButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="4">
                            <Path x:Name="pinPath"
                                  Data="M 8 0 L 8 4 L 12 4 L 12 8 L 8 8 L 8 14 L 6 14 L 6 8 L 2 8 L 2 4 L 6 4 L 6 0 Z"
                                  Fill="{TemplateBinding Foreground}"
                                  Stretch="Uniform"
                                  Width="10" Height="12"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform Angle="0"/>
                                </Path.RenderTransform>
                            </Path>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3C3F41"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="pinPath" Property="Fill" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="pinPath" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="45"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Remove Button Style -->
        <Style x:Key="RemoveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="4">
                            <Path Data="M 0,0 L 8,8 M 8,0 L 0,8"
                                  Stroke="{TemplateBinding Foreground}"
                                  StrokeThickness="1.5"
                                  Width="8" Height="8"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E74C3C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Recent File Item Style -->
        <Style x:Key="RecentFileItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Transparent"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="10,8">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3C3F41"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource SubtleBorderBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#214283"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsPinned}" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,1"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Tag" Value="Visible"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{DynamicResource BackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="12,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Recent Projects"
                                   FontWeight="SemiBold"
                                   FontSize="13"
                                   Foreground="{DynamicResource BrightForegroundBrush}"
                                   VerticalAlignment="Center"/>
                        <Border Background="{DynamicResource AccentBrush}"
                                CornerRadius="8"
                                Padding="6,2"
                                Margin="8,0,0,0"
                                Visibility="{Binding HasRecentFiles, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="{Binding RecentFilesCount}"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>
                    </StackPanel>

                    <!-- Clear Button -->
                    <Button Grid.Column="1"
                            x:Name="ClearAllButton"
                            Click="ClearAllButton_Click"
                            ToolTip="Clear Recent List"
                            Style="{StaticResource IconButtonStyle}"
                            Width="24" Height="24">
                        <Path Data="M 2,2 L 10,10 M 10,2 L 2,10"
                              Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                              StrokeThickness="1.5"
                              Width="12" Height="12"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Search Box -->
            <Border Grid.Row="1"
                    Background="{DynamicResource BackgroundBrush}"
                    Padding="8,6">
                <Grid>
                    <TextBox x:Name="SearchBox"
                             Style="{StaticResource InputTextBoxStyle}"
                             Padding="28,6,8,6"
                             TextChanged="SearchBox_TextChanged">
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="{DynamicResource EditorBackgroundBrush}"
                                        BorderBrush="{DynamicResource SubtleBorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                    <Grid>
                                        <ScrollViewer x:Name="PART_ContentHost"
                                                      Margin="{TemplateBinding Padding}"/>
                                        <TextBlock x:Name="Watermark"
                                                   Text="Search projects..."
                                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                                   Margin="{TemplateBinding Padding}"
                                                   VerticalAlignment="Center"
                                                   Visibility="Collapsed"
                                                   IsHitTestVisible="False"/>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>
                    <!-- Search Icon -->
                    <Path Data="M 6 0 A 6 6 0 1 0 6 12 A 6 6 0 1 0 6 0 M 10 10 L 14 14"
                          Stroke="{DynamicResource SecondaryForegroundBrush}"
                          StrokeThickness="1.5"
                          Width="14" Height="14"
                          Margin="10,0,0,0"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          IsHitTestVisible="False"/>
                </Grid>
            </Border>

            <!-- Recent Files List -->
            <Border Grid.Row="2">
                <Grid>
                    <!-- Empty State -->
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Visibility="{Binding HasRecentFiles, Converter={StaticResource InverseBoolToVisConverter}}">
                        <TextBlock Text="No Recent Projects"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Your recently opened projects will appear here"
                                   FontSize="11"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   MaxWidth="200"/>
                    </StackPanel>

                    <!-- Files List -->
                    <ListBox x:Name="RecentFilesList"
                             ItemsSource="{Binding FilteredRecentFiles}"
                             ItemContainerStyle="{StaticResource RecentFileItemStyle}"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="8"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             VirtualizingPanel.IsVirtualizing="True"
                             MouseDoubleClick="RecentFilesList_MouseDoubleClick"
                             Visibility="{Binding HasRecentFiles, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Thumbnail Preview -->
                                    <Border Grid.Column="0"
                                            Width="44" Height="36"
                                            Background="{DynamicResource EditorBackgroundBrush}"
                                            BorderBrush="{DynamicResource SubtleBorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Margin="0,0,8,0">
                                        <!-- Waveform Miniature or Icon -->
                                        <Grid>
                                            <Image Source="{Binding ThumbnailPath}"
                                                   Stretch="Fill"
                                                   Visibility="{Binding HasThumbnail, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            <TextBlock Text="&#x266C;"
                                                       FontSize="18"
                                                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Visibility="{Binding HasThumbnail, Converter={StaticResource InverseBoolToVisConverter}}"/>
                                        </Grid>
                                    </Border>

                                    <!-- Project Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <!-- Project Name -->
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold"
                                                   FontSize="12"
                                                   Foreground="{DynamicResource BrightForegroundBrush}"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding Name}"/>

                                        <!-- Folder Path -->
                                        <TextBlock Text="{Binding FolderPath}"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding Path}"
                                                   Margin="0,2,0,0"/>

                                        <!-- Last Opened Date -->
                                        <TextBlock FontSize="9"
                                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                                   Margin="0,2,0,0">
                                            <Run Text="Opened"/>
                                            <Run Text="{Binding LastOpenedRelative, Mode=OneWay}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Actions (Pin + Remove) -->
                                    <StackPanel Grid.Column="2"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                Margin="8,0,0,0">
                                        <!-- Pin Button -->
                                        <ToggleButton x:Name="PinButton"
                                                      Style="{StaticResource PinButtonStyle}"
                                                      IsChecked="{Binding IsPinned, Mode=TwoWay}"
                                                      ToolTip="{Binding IsPinned, Converter={local:PinTooltipConverter}}"
                                                      Checked="PinButton_Changed"
                                                      Unchecked="PinButton_Changed"/>

                                        <!-- Remove Button -->
                                        <Button x:Name="RemoveButton"
                                                Style="{StaticResource RemoveButtonStyle}"
                                                Click="RemoveButton_Click"
                                                ToolTip="Remove from list"
                                                Tag="{Binding}"/>
                                    </StackPanel>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                        <Setter TargetName="PinButton" Property="Opacity" Value="1"/>
                                        <Setter TargetName="RemoveButton" Property="Opacity" Value="1"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="3"
                    Background="{DynamicResource BackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="12,8">
                <Grid>
                    <Button x:Name="OpenProjectButton"
                            Content="Open Project..."
                            Click="OpenProjectButton_Click"
                            HorizontalAlignment="Left"
                            Padding="12,6"
                            Style="{StaticResource SecondaryButtonStyle}"/>

                    <TextBlock x:Name="PinnedCountText"
                               Text="{Binding PinnedCount, StringFormat='{}{0} pinned'}"
                               FontSize="10"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Visibility="{Binding HasPinned, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
