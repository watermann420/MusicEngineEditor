<UserControl x:Class="MusicEngineEditor.Controls.SidechainMatrixControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:MusicEngineEditor.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="600"
             d:DataContext="{d:DesignInstance Type=viewmodels:SidechainMatrixViewModel}"
             Background="#0D0D0D"
             MinHeight="300"
             MinWidth="400">

    <UserControl.Resources>
        <!-- Colors -->
        <Color x:Key="BackgroundColor">#0D0D0D</Color>
        <Color x:Key="PanelColor">#181818</Color>
        <Color x:Key="BorderColor">#2A2A2A</Color>
        <Color x:Key="GridLineColor">#333333</Color>
        <Color x:Key="TextPrimaryColor">#E0E0E0</Color>
        <Color x:Key="TextSecondaryColor">#808080</Color>
        <Color x:Key="AccentColor">#00D9FF</Color>
        <Color x:Key="ActiveRoutingColor">#00FF88</Color>
        <Color x:Key="DiagonalColor">#1A1A1A</Color>
        <Color x:Key="HoverColor">#252525</Color>
        <Color x:Key="CellHoverColor">#2A4A4A</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="GridLineBrush" Color="{StaticResource GridLineColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="ActiveRoutingBrush" Color="{StaticResource ActiveRoutingColor}"/>
        <SolidColorBrush x:Key="DiagonalBrush" Color="{StaticResource DiagonalColor}"/>
        <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
        <SolidColorBrush x:Key="CellHoverBrush" Color="{StaticResource CellHoverColor}"/>

        <!-- Boolean to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

        <!-- Toolbar Button Style -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Clear Button Style (Red accent) -->
        <Style x:Key="ClearButtonStyle" TargetType="Button" BasedOn="{StaticResource ToolbarButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF4444"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Preset ComboBox Style -->
        <Style x:Key="PresetComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="MinWidth" Value="140"/>
        </Style>

        <!-- Track Header Style -->
        <Style x:Key="TrackHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Matrix Cell Button Style -->
        <Style x:Key="MatrixCellStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource GridLineBrush}"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="cellBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <!-- Active indicator -->
                                <Ellipse x:Name="activeIndicator"
                                         Width="12" Height="12"
                                         Fill="{StaticResource ActiveRoutingBrush}"
                                         Visibility="Collapsed"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                                <!-- Gain indicator (small text) -->
                                <TextBlock x:Name="gainText"
                                           FontSize="7"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Bottom"
                                           Margin="0,0,2,1"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="cellBorder" Property="Background" Value="{StaticResource CellHoverBrush}"/>
                                <Setter TargetName="cellBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                <Setter TargetName="activeIndicator" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsDiagonal}" Value="True">
                                <Setter TargetName="cellBorder" Property="Background" Value="{StaticResource DiagonalBrush}"/>
                                <Setter Property="IsEnabled" Value="False"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Slider Style -->
        <Style x:Key="GainSliderStyle" TargetType="Slider">
            <Setter Property="Minimum" Value="0.1"/>
            <Setter Property="Maximum" Value="4.0"/>
            <Setter Property="Value" Value="1.0"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Margin" Value="8,0"/>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Background="{StaticResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="4,4,0,0"
                    Padding="10,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="SIDECHAIN MATRIX"
                                   FontWeight="SemiBold"
                                   FontSize="12"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding TrackCount, StringFormat=' ({0} tracks)'}"
                                   FontSize="10"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="4,0,0,0"/>
                    </StackPanel>

                    <!-- Toolbar -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <!-- Presets ComboBox -->
                        <TextBlock Text="Presets:"
                                   FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,6,0"/>
                        <ComboBox x:Name="PresetComboBox"
                                  Style="{StaticResource PresetComboBoxStyle}"
                                  ItemsSource="{Binding Presets}"
                                  SelectedItem="{Binding SelectedPreset}"
                                  DisplayMemberPath="Name"
                                  SelectionChanged="PresetComboBox_SelectionChanged"
                                  ToolTip="Select a preset routing configuration"/>

                        <Border Width="1" Background="{StaticResource BorderBrush}" Margin="10,2"/>

                        <!-- Clear All Button -->
                        <Button Content="Clear All"
                                Style="{StaticResource ClearButtonStyle}"
                                Command="{Binding ClearAllRoutingsCommand}"
                                ToolTip="Remove all sidechain routings"/>

                        <!-- Refresh Button -->
                        <Button Content="Refresh"
                                Style="{StaticResource ToolbarButtonStyle}"
                                Command="{Binding RefreshCommand}"
                                ToolTip="Refresh the matrix display"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Matrix Grid -->
            <Border Grid.Row="1"
                    Margin="10"
                    Background="#141414"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="3">
                <Grid x:Name="MatrixGrid" ClipToBounds="True">
                    <!-- This will be populated dynamically -->
                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">
                        <Grid x:Name="MatrixContent">
                            <!-- Matrix will be built in code-behind -->
                        </Grid>
                    </ScrollViewer>

                    <!-- Empty state -->
                    <TextBlock x:Name="EmptyStateText"
                               Text="No tracks available. Add tracks to configure sidechain routing."
                               FontSize="12"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- Footer / Status Bar -->
            <Border Grid.Row="2"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,4,4"
                    Padding="10,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status Text -->
                    <TextBlock Grid.Column="0"
                               Text="{Binding StatusText}"
                               FontSize="10"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"/>

                    <!-- Active Routing Count -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,16,0">
                        <Ellipse Width="8" Height="8"
                                 Fill="{StaticResource ActiveRoutingBrush}"
                                 VerticalAlignment="Center"
                                 Margin="0,0,4,0"/>
                        <TextBlock Text="{Binding ActiveRoutingCount, StringFormat='{}{0} Active'}"
                                   FontSize="10"
                                   Foreground="{StaticResource ActiveRoutingBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Legend -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Source (rows)"
                                   FontSize="9"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text=" -> "
                                   FontSize="9"
                                   Foreground="{StaticResource AccentBrush}"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Destination (columns)"
                                   FontSize="9"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Gain Editor Popup -->
            <Border x:Name="GainEditorPopup"
                    Grid.Row="1"
                    Background="#E0181818"
                    BorderBrush="{StaticResource AccentBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding IsGainEditorVisible, Converter={StaticResource BoolToVisConverter}}">
                <StackPanel>
                    <TextBlock Text="Sidechain Gain"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,8"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="0.1x"
                                   FontSize="9"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                        <Slider x:Name="GainSlider"
                                Style="{StaticResource GainSliderStyle}"
                                Value="{Binding SelectedCellGain, Mode=TwoWay}"/>
                        <TextBlock Text="4.0x"
                                   FontSize="9"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="{Binding SelectedCellGain, StringFormat='Gain: {0:F2}x'}"
                               FontSize="10"
                               Foreground="{StaticResource AccentBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Apply"
                                Style="{StaticResource ToolbarButtonStyle}"
                                Command="{Binding ApplyGainCommand}"
                                Width="60"/>
                        <Button Content="Cancel"
                                Style="{StaticResource ToolbarButtonStyle}"
                                Command="{Binding CancelGainEditCommand}"
                                Width="60"
                                Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
