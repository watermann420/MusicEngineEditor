<UserControl x:Class="MusicEngineEditor.Controls.PhaseScopeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="350"
             Background="#1E1F22"
             MinHeight="150"
             MinWidth="150">

    <UserControl.Resources>
        <!-- Dark theme colors -->
        <Color x:Key="BackgroundColor">#1E1F22</Color>
        <Color x:Key="GridColor">#2B2D30</Color>
        <Color x:Key="BorderColor">#393B40</Color>
        <Color x:Key="AxisColor">#4A4D52</Color>
        <Color x:Key="TextColor">#6F737A</Color>
        <Color x:Key="TraceColor">#00CED1</Color>
        <Color x:Key="MonoColor">#4CAF50</Color>
        <Color x:Key="StereoColor">#FF9800</Color>
        <Color x:Key="OutOfPhaseColor">#F44336</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="GridBrush" Color="{StaticResource GridColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="AxisBrush" Color="{StaticResource AxisColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="TraceBrush" Color="{StaticResource TraceColor}"/>
        <SolidColorBrush x:Key="MonoBrush" Color="{StaticResource MonoColor}"/>
        <SolidColorBrush x:Key="StereoBrush" Color="{StaticResource StereoColor}"/>
        <SolidColorBrush x:Key="OutOfPhaseBrush" Color="{StaticResource OutOfPhaseColor}"/>

        <!-- Toggle Button Style -->
        <Style x:Key="ModeToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B6EAF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Background="{StaticResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#2B2D30"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="10,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Phase Scope"
                               FontWeight="SemiBold"
                               FontSize="12"
                               Foreground="{DynamicResource BrightForegroundBrush}"
                               VerticalAlignment="Center"/>

                    <!-- Mode toggles -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <ToggleButton x:Name="MonoModeToggle"
                                      Style="{StaticResource ModeToggleStyle}"
                                      Content="Mono"
                                      Checked="MonoModeToggle_Changed"
                                      Unchecked="MonoModeToggle_Changed"
                                      ToolTip="Toggle mono/stereo mode"
                                      Margin="0,0,6,0"/>

                        <TextBlock Text="Decay:"
                                   FontSize="10"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="6,0,6,0"/>
                        <Slider x:Name="DecaySlider"
                                Width="60"
                                Minimum="0.8"
                                Maximum="0.99"
                                Value="0.95"
                                ValueChanged="DecaySlider_ValueChanged"
                                VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Lissajous Display -->
            <Border Grid.Row="1"
                    Background="#1A1A1A"
                    CornerRadius="3"
                    BorderBrush="#3A3A3A"
                    BorderThickness="1"
                    Margin="8">
                <Grid>
                    <!-- Grid lines canvas -->
                    <Canvas x:Name="GridCanvas" ClipToBounds="True"/>

                    <!-- Lissajous trace (WriteableBitmap) -->
                    <Image x:Name="TraceImage"
                           RenderOptions.BitmapScalingMode="NearestNeighbor"
                           Stretch="Fill"/>

                    <!-- Labels overlay -->
                    <Canvas x:Name="LabelsCanvas" ClipToBounds="True"/>

                    <!-- Phase difference indicator -->
                    <Border x:Name="PhaseIndicator"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Background="#80000000"
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Phase:"
                                       FontSize="10"
                                       Foreground="{StaticResource TextBrush}"
                                       Margin="0,0,4,0"/>
                            <TextBlock x:Name="PhaseDifferenceText"
                                       Text="0.0"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource MonoBrush}"/>
                            <TextBlock Text=" deg"
                                       FontSize="10"
                                       Foreground="{StaticResource TextBrush}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Correlation Meter Bar -->
            <Grid Grid.Row="2" Margin="8,0,8,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="-1"
                           FontSize="9"
                           Foreground="{StaticResource OutOfPhaseBrush}"
                           VerticalAlignment="Center"/>

                <Border Grid.Column="1"
                        Background="#1A1A1A"
                        CornerRadius="3"
                        Height="12"
                        Margin="6,0">
                    <Grid>
                        <!-- Background track -->
                        <Border Background="#2A2A2A" CornerRadius="3"/>

                        <!-- Center marker -->
                        <Border Width="2"
                                Background="#555555"
                                HorizontalAlignment="Center"/>

                        <!-- Correlation fill -->
                        <Border x:Name="CorrelationFill"
                                Background="{StaticResource MonoBrush}"
                                CornerRadius="3"
                                HorizontalAlignment="Center"
                                Width="0"/>

                        <!-- Correlation indicator line -->
                        <Border x:Name="CorrelationIndicator"
                                Width="3"
                                Background="White"
                                CornerRadius="1"
                                HorizontalAlignment="Center"/>
                    </Grid>
                </Border>

                <TextBlock Grid.Column="2"
                           Text="+1"
                           FontSize="9"
                           Foreground="{StaticResource MonoBrush}"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Correlation value display -->
            <Border Grid.Row="3"
                    Margin="8,0,8,8"
                    Background="#1A1A1A"
                    CornerRadius="3"
                    Padding="8,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock Text="L: "
                                   FontSize="10"
                                   Foreground="{StaticResource TextBrush}"/>
                        <TextBlock x:Name="LeftLevelText"
                                   Text="-inf"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TraceBrush}"/>
                        <TextBlock Text=" dB"
                                   FontSize="10"
                                   Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Corr: "
                                   FontSize="10"
                                   Foreground="{StaticResource TextBrush}"/>
                        <TextBlock x:Name="CorrelationText"
                                   Text="+0.00"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource MonoBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="R: "
                                   FontSize="10"
                                   Foreground="{StaticResource TextBrush}"/>
                        <TextBlock x:Name="RightLevelText"
                                   Text="-inf"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TraceBrush}"/>
                        <TextBlock Text=" dB"
                                   FontSize="10"
                                   Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
